{
   "name": "PRC",
   "patterns": [
     {
         "begin": "(formula)(.*)",
         "end": "(end formula)",
         "contentName": "meta.embedded.block.formula",
         "patterns": [
               {
                  "include": "source.fml"
               }
         ]
      },
       {
            "begin": "(sql)(.*)",
            "end": "(end sql)",
            "contentName": "meta.embedded.block.sql",
            "patterns": [
                {
                    "include": "source.sql"
                }
            ]
        }
   ],
   "repository": {
      "procedure": {
        "begin": "(proc)(\\s+)([a-zA-Z_][a-zA-Z0-9_]*)",
        "beginCaptures": {
            "1": {
                "name": "keyword.procedure.prc"
            },
            "3": {
                "name": "entity.name.function.prc"
            }
        },
        "end": "(end proc)",
        "endCaptures": {
            "1": {
                "name": "keyword.procedure.prc"
            }
        },
        "patterns": [
            {
                "include": "#procedure"
            }
        ]
      },
      "description": {
         "begin": "^(desc)(\\s*$)",
         "beginCaptures": {
            "1": {
                  "name": "keyword.description.prc"
            }
         },
         "end": "^(end desc)(\\s*$)",
         "endCaptures": {
            "1": {
                  "name": "keyword.description.prc"
            }
         },
         "contentName": "comment.block.description.prc",
         "patterns": [
            {
                  "match": ".",
                  "name": "comment.block.description.prc"
            }
         ]
      }
   },
   "scopeName": "source.prc"
}