{
  "name": "formulamodified",
  "displayName": "FormulaModified",
  "description": "Zestaw funkcji do pracy z plikami modified w projekcie Formula",
  "version": "0.1.0",
  "publisher": "tkgkp",
  "icon": "icons/fml_icon_m.png",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
     "icon": {
          "light": "icons/fml_icon_m.png",
          "dark": "icons/fml_icon_m.png"
        },
    "commands": [
      {
        "command": "formulamodified.CompareModified",
        "title": "Porównaj z plikiem modified lub dodaj plik modified do projektu"
      },
      {
        "command": "formulamodified.OpenModified",
        "title": "Otwórz plik korespondujący z aktualnym (modified/std)"
      },
      {
        "command": "formulamodified.CopyFunctionToOtherFile",
        "title": "Skopiuj całą funkcję do pliku modified"
      }
    ],
     "views": {
            "explorer": [
                {
                    "id": "myViewModifiedFunction",
                    "name": "Zmodyfikowane funkcje",
                     "icon": "icons/formulaMExplorerView.svg",
                     "contextualTitle": "Formula Modified"
                }
            ]
        }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "vsce": "^1.97.0"
  }
}
