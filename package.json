{
  "name": "formulamodified",
  "displayName": "FormulaModified",
  "description": "Zestaw funkcji do pracy z plikami modified w projekcie Formula",
  "version": "0.4.0",
  "publisher": "tkgkp",
  "icon": "icons/fml_icon_m.png",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "icon": {
      "light": "icons/fml_icon_m.png",
      "dark": "icons/fml_icon_m.png"
    },
    "commands": [
      {
        "command": "formulamodified.OpenModified",
        "title": "FormulaModified: Otwórz plik korespondujący"
      },
       {
        "command": "formulamodified.OpenModifiedExp",
        "category": "FormulaModified"
      },
      {
        "command": "formulamodified.GoToModifiedFunction",
        "category": "FormulaModified"
      },
      {
        "command": "formulamodified.GoToDepozytFunction",
        "category": "FormulaModified"
      },
      {
        "command": "formulamodified.DiffModifiedFunction",
        "category": "FormulaModified"
      },
      {
        "command": "formulamodified.DiffDepozytFunction",
        "category": "FormulaModified"
      },
      {
        "command": "formulamodified.DiffAllFunction",
        "category": "FormulaModified"
      },
      {
        "command": "formulamodified.CopyFromDepozyt",
        "category": "FormulaModified"
      },
      {
        "command": "formulamodified.OpenFromProjekt",
        "category": "FormulaModified"
      },
      {
        "command": "formulamodified.OpenFromDepozyt",
        "category": "FormulaModified"
      },
      {
        "command": "formulamodified.OpenFromModified",
        "category": "FormulaModified"
      },
      {
        "command": "formulamodified.RefreshDepozyt",
       "category": "FormulaModified"
      },
      {
        "command": "formulamodified.CompareDepozyt",
       "category": "FormulaModified"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "myViewModifiedFunction",
          "name": "Zmodyfikowane funkcje",
          "icon": "icons/formulaMExplorerView.svg",
          "contextualTitle": "Formula Modified"
        }
      ],
      "scm": [
        {
          "id": "myViewModifiedDepozyt",
          "name": "Różnice w depozycie",
          "icon": "icons/formulaMExplorerView.svg",
          "contextualTitle": "Porównanie z depozytem"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "formulamodified.GoToModifiedFunction",
          "when": "view == myViewModifiedFunction",
          "group": "gSymbole1"
        },
        {
          "command": "formulamodified.GoToDepozytFunction",
          "when": "view == myViewModifiedFunction",
          "group": "gSymbole1"
        },
        {
          "command": "formulamodified.DiffModifiedFunction",
          "when": "view == myViewModifiedFunction",
          "group": "gSymbole2"
        },
        {
          "command": "formulamodified.DiffDepozytFunction",
          "when": "view == myViewModifiedFunction",
          "group": "gSymbole2"
        },
        {
          "command": "formulamodified.DiffAllFunction",
          "when": "view == myViewModifiedFunction",
          "group": "gSymbole3"
        },
        {
          "command": "formulamodified.CopyFromDepozyt",
          "when": "view == myViewModifiedDepozyt",
          "group": "gDepozyt2"
        },
        {
          "command": "formulamodified.OpenFromProjekt",
          "when": "view == myViewModifiedDepozyt",
          "group": "gDepozyt3"
        },
        {
          "command": "formulamodified.OpenFromDepozyt",
          "when": "view == myViewModifiedDepozyt",
          "group": "gDepozyt3"

        },
        {
          "command": "formulamodified.OpenFromModified",
          "when": "view == myViewModifiedDepozyt",
          "group": "gDepozyt3"
        },
        {
          "command": "formulamodified.RefreshDepozyt",
          "when": "view == myViewModifiedDepozyt",
          "group": "gDepozyt4"
        },
        {
          "command": "formulamodified.CompareDepozyt",
          "when": "view == myViewModifiedDepozyt",
          "group": "gDepozyt1"
        }
      ],
    "scm/resourceState/context": [
      {
      "command": "formulamodified.OpenModifiedExp"
      }
    ]
    },
    "configuration": {
      "title": "Formula Modified",
      "properties": {
        "formulamodified.openDiffInNewTab": {
          "type": "boolean",
          "default": false,
          "description": "Otwieraj porównanie funkcji w nowej zakładce."
        },
        "formulamodified.openFileInNewTab": {
          "type": "boolean",
          "default": false,
          "description": "Otwieraj plik korespondujący z funkcją w nowej zakładce."
        },
        "formulamodified.openFileInNewPanel": {
          "type": "boolean",
          "default": false,
          "description": "Otwieraj plik korespondujący z funkcją w nowym panelu."
        },
        "formulamodified.RefreshDepozyt": {
          "type": "boolean",
          "default": false,
          "description": "Aktualizuj listę depozyt po kopiowaniu pliku."
        },
        "formulamodified.sidebarHighlightColor": {
          "type": "string",
          "default": "rgba(83, 217, 255, 0.05)",
          "description": "Kolor podświetlenia w pasku bocznym."
        },
        "formulamodified.depozytPath": {
          "type": "string",
          "default": "C:\\Macrologic\\depozyt\\2325",
          "description": "Ścieżka do plików aktualnego depozytu lub wersji z której chcesz nanieść zmiany."
        },
        "formulamodified.compareProgram": {
          "type": "string",
          "default": "meld",
          "enum": [
            "meld",
            "winmerge"
          ],
          "description": "Program do porównywania plików."
        }
      }
    },
    "keybindings": [
        {
            "command": "formulamodified.OpenModified",
            "key": "ctrl+m",
            "when": "editorTextFocus"
        }
    ],
    "languages": [{
        "id": "prc",
        "extensions": [".prc", ".m.prc"],
        "aliases": ["PRC", "prc"],
        "configuration": "./prc.language-configuration.json"
    }],
    "grammars": [{
        "language": "prc",
        "scopeName": "source.prc",
        "path": "./syntaxes/prc.tmLanguage.json"
    }],
    "contributes": {
      "themes": [
        {
            "label": "ModifiedFormulay Theme",
            "uiTheme": "vs-dark",
            "path": "./themes/modifiedFormulaTheme.json"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/tmp": "^0.2.6",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "file-type": "^19.0.0",
    "tmp": "^0.2.3",
    "vsce": "^2.15.0"
  }
}
