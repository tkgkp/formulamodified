\cit8_33
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MB [23.25]
:: OPIS:  OPIS: Import sprawozdań na potrzeby deklaracji CIT-8 (33)
::----------------------------------------------------------------------------------------------------------------------
_edek:='cit-8_33.dfg';
_ok:=1;
{? fexists(_edek,1)
|| _imp:=-1;
   {? exec('add_ver','xml','FKS',date(2023,1,1),'CIT8',33)
   || _imp:=exec('upg_imp','xml','FKS','D','CIT8',33,date(2023,1,1),_edek)
   ?};
   _txt:='e-Deklaracja CIT-8 (33) obowiązująca za 2023 rok';
   {? _imp=1
   || __UPG.msg(_txt+' została dodana.')
   |? _imp=0
   || __UPG.msg(_txt+' już istnieje.')
   || __UPG.msg(_txt+' nie została dodana.');
      _ok:=0
   ?}
|| __UPG.msg('Nie znaleziono na serwerze pliku: %1'[_edek]);
   _ok:=0
?};
_ok


