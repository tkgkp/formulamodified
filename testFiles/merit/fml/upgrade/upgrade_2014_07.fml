KH.for_each("
   {? 'msd'*(-KH.WIELKOSC)>0 & KH.WIELKOSC<>''
   || KH.WIELKOSC:={? -KH.WIELKOSC='m'
                   || 'mały'
                   |? -KH.WIELKOSC='s'
                   || 'średni'
                   |? -KH.WIELKOSC='d'
                   || 'duży'
                   ?};
      KH.put()
   ?}
");
KH.cntx_pop();
__UPG.msg('Zmieniono wartości wielkości kontrahenta');
