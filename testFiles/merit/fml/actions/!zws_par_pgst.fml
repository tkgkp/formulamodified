\main
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [18.02]
:: OPIS: Grupy stanowisk - główna formuła czynności.
::----------------------------------------------------------------------------------------------------------------------
_wnd:=exec('create_wnd','!zws_par_pgst');

STN_GR.cntx_psh();
STN_GR.win_sel(_wnd);
STN_GR.select();
STN_GR.cntx_pop();
STN_GR.win_del(_wnd);

~~


\create_wnd
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [18.02]
:: OPIS: Tworzy okienko czynności.
::   WE:
::   WY: akronim okienka tymczasowego
::----------------------------------------------------------------------------------------------------------------------
_mode:='maximized_with_title';

_wnd:=STN_GR.grp_make('Grupy stanowisk'@,
:  po wyświetleniu
   "params_exec('adm_bf','!zws_par_pgst')",
:  identyfikator
   'zws_par_pgst',
:  położenie
   0,0,
:  zamknięcie
   "params_exec('adm_oc','!zws_par_pgst')"
);

: grupy stanowisk
STN_GR.grp_sel(_wnd,,'WER',,
:  po odświeżeniu
   "params_exec('adm_stn_gr_ar','!zws_par_pgst')",
:  położenie i wysokość
   ,,15,
:  przed obsługą
   "",
:  po obsłudze
   "",
:  utrwalenie, aktywacja, wypełnienie
   0,0,_mode
);

STN_GR.grp_splt(_wnd,,'horizontal','bottom');

: stanowiska w grupie
STN_GR.grp_sel(_wnd,STN_GRP,'WER',,
:  po odświeżeniu
   "",
:  położenie i wysokość
   ,,,
:  przed obsługą
   "params_exec('adm_stn_grp_bs','!zws_par_pgst')",
:  po obsłudze
   "",
:  utrwalenie, aktywacja, wypełnienie
   0,0,_mode
);

_wnd


\adm_bf
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [18.02]
:: OPIS: Przed wypełnieniem okienka.
::   WE:
::   WY: 1
::----------------------------------------------------------------------------------------------------------------------
STN_GR.cntx_psh();
STN_GR.f_clear();
STN_GR.index('GRUPA');
STN_GR.prefix(exec('ref_firma','ustawienia'));

STN_GRP.cntx_psh();
STN_GRP.f_clear();
STN_GRP.index('STN_GRP');

1


\adm_oc
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [18.02]
:: OPIS: Przy zamykaniu okienka.
::   WE:
::   WY: 1
::----------------------------------------------------------------------------------------------------------------------
STN_GR.cntx_pop();
STN_GR.f_clear();

STN_GRP.cntx_pop();
STN_GRP.f_clear();

1


\adm_stn_gr_ar
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [18.02]
:: OPIS: Po odświeżeniu okienka WER tabeli STN_GR.
::   WE:
::   WY:
::----------------------------------------------------------------------------------------------------------------------
grp_disp(STN_GRP,'WER',1,1);
