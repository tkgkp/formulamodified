_args:=exec('add_email_a','#mailbox');
_args.SUB:='Informacje do aktualizacji listy uczestników PPK';
_args.RCV:=exec('odbiorcy','ppk_eml',params_get().mp.buf_act.UID);
_args.BODYH:=exec('tresc','!ppk_ewi_aliu',exec('nowy_uczestnik','ppk_eml'));
params_exec('main','ppk_eml',_args)


\desc
::----------------------------------------------------------------------------------------------------------------------
::  UTW: areKc [19.22]
:: OPIS: Przygotowanie informacji o nowych uczestnikach PPK - opis.
::   WE:
::   WY:
::----------------------------------------------------------------------------------------------------------------------
'Wysłanie powiadomienia o osobach zatrudnionych bez zawartej umowy o prowadzenie PPK'@@


\tresc
::----------------------------------------------------------------------------------------------------------------------
::  UTW: areKc [19.22]
:: OPIS: Formuła formatująca teść wysyłanej informacji w HTML.
::   WE: _a [TABLE] - tabela z listą osób zatrudnionych, w imieniu których należy zawrzeć umowę o prowadzenie PPK.
::   WY:
::  OLD: \bd_nucz/ppk_eml.fml
::----------------------------------------------------------------------------------------------------------------------
_PPK:=_a;
_tresc:='';

{? _PPK.first()
|| _th:="'<th [[STYLE_TABLE_TH]]>'+_a+'</th>'";
   _td:="'<td [[STYLE_TABLE_TD]]>'+_a+'</td>'";
   _tresc:=
      '<center><h4>Zmiana na liście uczestników PPK</h4></center><br>'+
      '<h5>Na dzień '+date()$6+' wymagana jest aktualizacja listy uczestników PPK.<br><br>'+
      'Aby zaktualizować listę uczestników należy wybrać akcję "Uzupełnij listę uczestników",<br>'+
      'akcja jest dostępna w oknie obszaru roboczego "PPK_EWI - Ewidencja PPK"<br>'+
      'przyciski: "Operacje grupowe".<br><br>'+
      '<table [[STYLE_TABLE]]>\n'+
         '<tr [[STYLE_TABLE_TR]]>'+
            _th('Nazwisko'@)+
            _th('Imię'@)+
            _th('PESEL'@)+
            _th('Paszport'@)+
         '</tr>';
   {!
   |? _tresc+=
         '<tr [[STYLE_TABLE_TR]]>'+
            _td(_PPK.NAZWISKO)+
            _td(_PPK.PIERWSZE)+
            _td(_PPK.PESEL)+
            _td(_PPK.PASZPORT)+
         '</tr>';
      _PPK.next()
   !};
   _tresc+='</table>';
   _tresc+='<p>Ta wiadomość została wygenerowana automatycznie - prosimy na nią nie odpowiadać.</p>'
?};

_tresc

