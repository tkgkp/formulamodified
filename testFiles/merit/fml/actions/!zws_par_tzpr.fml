EK_SLOP.cntx_psh();

_wer:=EK_SLOP.mk_sel('Problemy produkcyjne'@,'P',0,'ekprobwer',,,15,,'U');
EK_SLOP.win_fld(_wer,,'KOD',,,,,,'Kod'@);
EK_SLOP.win_fld(_wer,,'NAZ',,,50,,,'Nazwa'@);
EK_SLOP.win_fld(_wer,,'KLASA',,,,,,'Klasa'@);
EK_SLOP.win_act(_wer,0,'Dołącz');
EK_SLOP.win_act(_wer,1,'Dołącz',,,,,,1);
EK_SLOP.win_act(_wer,,'Usuń');
EK_SLOP.win_act(_wer,,'Popraw',,,,,,1);
EK_SLOP.win_act(_wer,,'Kolejność');
EK_SLOP.win_act(_wer,,'Rekord',,,,,"exec('chk_ek_slop','zl_wkj',-menu_txt()='popraw')");

_width:=80;
_red:=EK_SLOP.mk_edit('Problem produkcyjny'@,,'ekprobred');
EK_SLOP.win_esep(_red,'Dane podstawowe'@);
EK_SLOP.win_efld(_red,,'KOD',,,_width);
EK_SLOP.efld_opt(_red,'mark=1',,'KOD');
EK_SLOP.win_efld(_red,,'NAZ',,,_width);
EK_SLOP.efld_opt(_red,'mark=1',,'NAZ');
EK_SLOP.win_efld(_red,,'KLASA',,,_width,,,,,,'radio-buttons',
   ,exec('prob_class_information','zl_wkj',1),"exec('prob_class_information','zl_wkj')"
   ,exec('prob_class_suspensing','zl_wkj',1),"exec('prob_class_suspensing','zl_wkj')"
   ,exec('prob_class_blocking','zl_wkj',1),"exec('prob_class_blocking','zl_wkj')"
);
exec('ok_esc','#window',EK_SLOP,_red);
EK_SLOP.win_edit(_red);

_wero:=EK_SLOO.mk_sel('Opisy'@,'P',0,'eksloower',,,15,,'U');
EK_SLOO.win_fld(_wero,,'DESC',,,85);
EK_SLOO.win_act(_wero,0,'Dołącz');
EK_SLOO.win_act(_wero,1,'Dołącz');
EK_SLOO.win_act(_wero,,'Popraw');
EK_SLOO.win_act(_wero,,'Usuń');

_grp:=EK_SLOP.grp_make('Problemy produkcyjne'@,,,,,,,'normal');
EK_SLOP.grp_sel(_grp,,_wer,'Problemy produkcyjne'@,,,,,,,,,'maximized');
_before:="EK_SLOO.index('DESC'); VAR.EK_SOTYP:='Z'; EK_SLOO.prefix('Z');~~";
EK_SLOP.grp_sel(_grp,EK_SLOO,_wero,'Opisy zgłaszania problemów'@,,,,,_before,,,,'maximized');
_before:="EK_SLOO.index('DESC'); VAR.EK_SOTYP:='R'; EK_SLOO.prefix('R');~~";
EK_SLOP.grp_sel(_grp,EK_SLOO,_wero,'Opisy rozwiązywania problemów'@,,,,,_before,,,,'maximized');
EK_SLOP.win_sel(_grp);

EK_SLOP.index('KOD');
EK_SLOP.prefix();
EK_SLOP.select();

EK_SLOP.cntx_pop();
