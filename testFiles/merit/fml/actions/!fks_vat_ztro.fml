:: OPIS: Przeglądanie nabyć do korekt VAT - główna formuła czynności FKS_VAT_ZTRO.
::----------------------------------------------------------------------------------------------------------------------
::# permissions=FJKS


\add_tab
::----------------------------------------------------------------------------------------------------------------------
::  UTW: AMK [17.00]
:: OPIS: Dodanie zakładki do okna grupowego obszaru evidencji VAT (FKS_VAT)
::   WE: _a - nazwa zakładki
::       _b - okno grupowe
::----------------------------------------------------------------------------------------------------------------------
VAT7.ZAKRES:='N';
exec('ust_zak','dok_fks');
_grp:=_b;
_win:={? PAR_SKID.get(83)='T' || '_PR' || '' ?};
VAT_SR.win_edit('RED'+_win);
VAT_SR.win_patt('SZUK'+_win);
TREE_VAT.grp_sel(_grp,VAT_SR,'WER'+_win,_a,"exec('arw_vat_sr','!fks_vat_ztro')",0,0,15,"__wgkraj:=0","",,,'maximized_with_title');
task_attach('FKS_VAT_ZTRO');
task_attach('FKS_VAT_DTRO');
TREE_VAT.tab_splt(_grp,,'horizontal','bottom');
TREE_VAT.grp_sel(_grp,VAT_KW,'WER'+_win,,,,,,"","",,,'maximized_with_title')


\arw_vat_sr
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MB [17.00]
:: OPIS: Po odświeżeniu okna korekt do nabyć okna grupowego
::----------------------------------------------------------------------------------------------------------------------
VAT_KW.index('VAT_KW');
{? VAT_SR.get()
|| VAT_KW.prefix(VAT_SR.ref)
|| VAT_KW.prefix(null)
?};
_win:={? PAR_SKID.get(83)='T' || 'WER_PR' || 'WER' ?};
VAT_KW.actions(_win,{? VAT_SR.OKRES_S<>null||'DU:D'||''?},,1);
grp_disp(VAT_KW,_win)

