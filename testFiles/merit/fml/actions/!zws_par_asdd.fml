::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [20.14]
:: OPIS: Szablony dokumentów Word - główna formuła czynności.
::----------------------------------------------------------------------------------------------------------------------
_mode:='maximized_with_title';
:: przygotuj główny panel konfiguracji
_wnd:=SD_DEF.grp_make('Szablony dokumentów Word'@,
:: przed otwarciem
   "  SD_DEF.index('NAZWA');
      SD_DEF.prefix();
      SD_DOK.cntx_psh();
      SD_DOK.index('NAZWA');
      1
   ",
:: identyfikator
   '#zws_par_asdd',,,
:: podczas zamykania
   "  SD_DOK.cntx_pop();
      1
   ",,
:: tryb
   'maximized'
);
:: lista definicji szablonów
SD_DEF.grp_sel(_wnd,SD_DEF,'CFG',,
:: po odświeżeniu
   "grp_disp(SD_DOK,'CFG',1,1)",,,
:: wysokość
   20,,,,,
:: tryb
   _mode
);
:: szablony dokumentów
SD_DEF.grp_splt(_wnd,,'horizontal','bottom');
SD_DEF.grp_sel(_wnd,SD_DOK,'CFG',,,,,,
:: przed obsługą
   "  {? grp_empty(SD_DEF,'CFG')
      || return('#disable')
      ?};
      SD_DOK.prefix(exec('def_ref','szablon'))
   ",,,,
:: tryb
   _mode
);

:: wyświetl panel
SD_DEF.cntx_psh();
SD_DEF.win_sel(_wnd);
SD_DEF.select();
:: porządki
SD_DEF.cntx_pop();
SD_DEF.win_del(_wnd);
