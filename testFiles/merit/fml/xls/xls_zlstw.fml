_def.define('NAZ','Nazwa',1,,'60 znakowa Nazwa');
~~


\record
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MW [19.02]
:: OPIS: Uzupełnia bufor tabeli wartościami obiektu
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;
ZLSTW.prefix();
{? _validate.ACTION='add'
||
   ZLSTW.blank()
?};
ZLSTW.KOD:=_obj.KOD;
ZLSTW.NAZ:=_obj.NAZ;
~~


\export
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MW [19.02]
:: OPIS: Wypełnia obiekt który zapisze w Excel wiersz danymi z rekordu
::       Użycie: export
::   WE: _a - obj_new - środowisko mechanizmu
::       _b - obj_new - obiekt który zasilić wartościami z pól
::   WY: ANY - dowolny wynik (zwracany przez _excel.write_async())
::----------------------------------------------------------------------------------------------------------------------
_excel:=_a;
_table:=_b;

{? 1+ZLSTW.KOD='~'
||
   _result:=0
||
  _result:=1;
  _table.KOD.VALUE:=ZLSTW.KOD;
  _table.NAZ.VALUE:=ZLSTW.NAZ
?};
_result


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MW [19.02]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;

_result.RESULT:=1;

{? 1+_obj.KOD='~'
|| _result.msg_value('KOD','Zastrzeżona przyczyna korekty limitów nie może być importowana.');
   _result.RESULT:=0
?};

{? (+_obj.KOD)>10
||
  _result.msg_length('KOD',10);
  _result.RESULT:=0
?};

{? _result.RESULT>0
||
  ZLSTW.index('K');
  ZLSTW.prefix(_obj.KOD,);
  {? ZLSTW.first()
  ||
    {? _mode=0
    || _result.RESULT:=0
    ||
      _result.ACTION:='put';
      exec('record','xls_zlstw',_obj,_mode,_result);
      {? exec('chk_zlstw','zl_limit',1)<>''
      ||
         _result.RESULT:=0
      ?}
    ?}
  ||
    _result.ACTION:='add';
    exec('record','xls_zlstw',_obj,_mode,_result);
    {? exec('chk_zlstw','zl_limit',0)<>''
    || _result.RESULT:=0
    ?}
  ?}
?};
~~


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MW [19.02]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
||
   {? _validate.ACTION='add'
   ||
      _result:=ZLSTW.add(1)
   |? _validate.ACTION='put'
   ||
      _result:=ZLSTW.put(1)
   ?}
?};
{? _result=0
||

   {? _validate.ACTION='add'
   ||
      _validate.MSG:='Dodanie przyczyny korekty limitów o kodzie %1 nie powiodło się.'@[_obj.KOD]
   ||
      _validate.MSG:='Poprawa przyczyny korekty limitów o kodzie %1 nie powiodła się.'@[_obj.KOD]
   ?}
?};
_result


\select
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MW [19.02]
:: OPIS: Umożliwia wybór rekordów do eksportu
::   WE: _a - tab_tmp - tabela tymczasowa z polem REF którą należy zasilić
::   WY: 0 - użytkownik zrezygnował z wyboru
::       1 - użytkownik potwierdził wybór
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_selected:=_a;

_result:=0;

_tab:=tab_tmp(2,'KOD','STRING[10]','Kod'
   ,'REF','STRING[16]','SQL ref'
   ,'SELECTED','STRING[1]','Czy wybrano'
   ,'NAZ','STRING[60]','Nazwa');

_ndx:=_tab.ndx_tmp(,,'SELECTED',,,'KOD',,);

ZLSTW.cntx_psh();
ZLSTW.index('K');
ZLSTW.prefix();
{? ZLSTW.first()
|| {!
   |?
      _tab.blank();
      _tab.REF:=$ZLSTW.ref();
      _selected.prefix($ZLSTW.ref());
      {? _selected.first()
      || _tab.SELECTED:='T'
      || _tab.SELECTED:='N'
      ?};
      _tab.KOD:=ZLSTW.KOD;
      _tab.NAZ:=ZLSTW.NAZ;
      _tab.add();
      ZLSTW.next()
   !}
?};
_result:=exec('select_action','#table',_tab
 ,'KOD,NAZ',20,'Wybór przyczyn korekt limitów do eksportu'@,1);
{? _result>0
||
   _selected.erase();

   _tab.index(_ndx);
   _tab.prefix('T');
   {? _tab.first()
   || {!
      |?
         _selected.prefix(_tab.REF);
         {? _selected.first()=0
         || _selected.blank();
            _selected.REF:=_tab.REF;
            _selected.add()
         ?};
         _tab.next()
      !}
   ?}
?};
ZLSTW.cntx_pop();

_result

