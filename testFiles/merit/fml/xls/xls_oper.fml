\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: AWI [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='OPER';
_def.DOMAIN:=exec('name','#b_domain','KAS');
_def.FUNPAR:='ZWS_PAR_FKTO';

_def.FILE:='kasa.xlsx';
_def.SHEET:='Typy operacji kasowych=1,1';
_def.NAME:='Typy operacji kasowych'@;
_def.DESC:='Typy operacji kasowych';

_def.PREFIX:="OPER.index('KOD'); OPER.prefix()";
_def.TABLE:="OPER";
_def.FIELDS:="exec('fields','xls_oper',_a)";

_def.BEFORE:="OPER.cntx_psh()";
_def.AFTER:="OPER.cntx_pop()";
_def.SELECT:="";

_def.EXPORT:="exec('export','xls_oper',_a,_b)";
_def.VALIDATE:="exec('validate','xls_oper',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_oper',_a,_b,_c)";
_def.SELECT:="exec('select','xls_oper',_a)";
