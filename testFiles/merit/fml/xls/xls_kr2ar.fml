\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: AKUL [20.14]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='KR2AR';
_def.DOMAIN:=exec('name','#b_domain','TTE');
_def.FUNPAR:='ZWS_PAR_TZLE';

_def.FILE:='produkcja_kalkulacje.xlsx';
_def.SHEET:='Powiązania rubryk'@+'=1,1';
_def.NAME:='Powiązania rubryk kalkulacji technolgiii z rubrykami kalkulacji/analizy zlecenia'@;
_def.DESC:='Powiązania rubryk kalkulacji technologii z rubrykami kalkulacji/analizy zlecenia'@;

_def.PREFIX:="KR2AR.index('KRUB'); KR2AR.prefix()";
_def.TABLE:="KR2AR";
_def.FIELDS:="exec('fields','xls_kr2ar',_a)";

_def.BEFORE:="KR2AR.cntx_psh()";
_def.AFTER:="KR2AR.cntx_pop()";
_def.SELECT:="exec('select','xls_kr2ar',_a)";

_def.EXPORT:="exec('export','xls_kr2ar',_a,_b)";
_def.VALIDATE:="exec('validate','xls_kr2ar',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_kr2ar',_a,_b,_c)";
