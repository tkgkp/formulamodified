\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: IS [22.26]
:: OPIS: Inicjalizuje mechanizm importu/eksportu.
::   WE: _a [OBJECT] - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;

_def.ID:='PPSF_SP';
_def.FUNPAR:='ZWS_PAR_PPSS';
_def.DOMAIN:=exec('name','#b_domain','PPL');
_def.FILE:=exec('def_per_ppl_xlsx','xls__init');
_def.SHEET:='Pozycje sposobów roz. pracy zd.=1,1';
_def.NAME:='Pozycje sposobów roz. pracy zd.'@;
_def.DESC:='Pozycje sposobów rozliczeń pracy zdalnej';

: źródło danych
_def.TABLE:="PPSF_SP";

: prolog
_def.BEFORE:="
   ROK_F.cntx_psh();
   ROK_F.prefix();
   KK.cntx_psh();
   KK.prefix();
   R.cntx_psh();
   R.prefix();
   PPSF_SN.cntx_psh();
   PPSF_SN.prefix();
   PPSF_SP.cntx_psh();
   PPSF_SP.index('FNR');
   PPSF_SP.prefix(exec('firma','ustawienia'));
   ~~
";

: epilog
_def.AFTER:="
   PPSF_SP.cntx_pop();
   PPSF_SN.cntx_pop();
   R.cntx_pop();
   KK.cntx_pop();
   ROK_F.cntx_pop();
   ~~
";

: definicja kolumn
_def.FIELDS:="
   _env:=_a;
   _tStr:=type_of('');
   _tInt:=type_of(0);
   _env.define('PPSF_SN',  MS.name(PPSF_SN,'KOD'),1,,      MS.comment(PPSF_SN,'KOD'),     _tStr);
   _env.define('R',        MS.name(PPSF_SP,'R'),1,,        MS.comment(PPSF_SP,'R'),       _tInt);
   _env.define('SP_ROZL',  MS.name(PPSF_SP,'SP_ROZL'),1,,  MS.comment(PPSF_SP,'SP_ROZL'), _tStr);
   _env.define('KW',       MS.name(PPSF_SP,'KW'),1,,       MS.comment(PPSF_SP,'KW'),      _tInt);
   _env.define('FORMULA',  MS.name(PPSF_SP,'FORMULA'),1,,  MS.comment(PPSF_SP,'FORMULA'), _tStr);
   _env.define('INDYW',    MS.name(PPSF_SP,'INDYW'),1,,    MS.comment(PPSF_SP,'INDYW'),   _tStr);
   _env.define('POMN',     MS.name(PPSF_SP,'POMN'),1,,     MS.comment(PPSF_SP,'POMN'),    _tStr);
   _env.define('OKR_ROZL', MS.name(PPSF_SP,'OKR_ROZL'),1,, MS.comment(PPSF_SP,'OKR_ROZL'),_tStr);
   _env.define('WYM',      MS.name(PPSF_SP,'WYM'),1,,      MS.comment(PPSF_SP,'WYM'),     _tStr);
   _env.define('ROK_F',    MS.name(KK,'ROK_F'),1,,         MS.comment(KK,'ROK_F'),        _tStr);
   _env.define('SYSTEM',   MS.name(KK,'SYSTEM'),1,,        MS.comment(KK,'SYSTEM'),       _tStr);
   _env.define('KK',       MS.name(PPSF_SP,'KK'),1,,       MS.comment(PPSF_SP,'KK'),      _tStr);
   _env.define('R_LG',     MS.name(PPSF_SP,'R_LG'),1,,     MS.comment(PPSF_SP,'R_LG'),    _tInt);
   ~~
";

: zawartość wiersza
_def.EXPORT:="
   _env:=_a;
   _buf:=_b;
   _buf.PPSF_SN.VALUE:=PPSF_SP.PPSF_SN().KOD;
   _buf.R.VALUE:=PPSF_SP.R().RN;
   _buf.SP_ROZL.VALUE:=PPSF_SP.SP_ROZL;
   _buf.KW.VALUE:=PPSF_SP.KW;
   _buf.FORMULA.VALUE:=PPSF_SP.FORMULA;
   _buf.INDYW.VALUE:=PPSF_SP.INDYW;
   _buf.POMN.VALUE:=PPSF_SP.POMN;
   _buf.OKR_ROZL.VALUE:=PPSF_SP.OKR_ROZL;
   _buf.WYM.VALUE:=PPSF_SP.WYM;
   _buf.ROK_F.VALUE:=PPSF_SP.KK().ROK_F().NAZ;
   _buf.SYSTEM.VALUE:=PPSF_SP.KK().SYSTEM;
   _buf.KK.VALUE:=PPSF_SP.KK().SYM;
   _buf.R_LG.VALUE:=PPSF_SP.R_LG().RN;
   _env.write_async('PPSF_SN',PPSF_SP.PPSF_SN);
   _env.write_async('RUBRYKI',exec('r','xls__util'));
   _env.write_async('KK',PPSF_SP.KK);
   1
";

: weryfikacja i zapis wiersza odczytanego z pliku wymiany
_def.VALIDATE:="exec('validate','xls_ppsf_sp',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_ppsf_sp',_a,_b,_c)";
