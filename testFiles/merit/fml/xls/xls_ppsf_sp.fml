\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: IS [22.26]
:: OPIS: Weryfikuje poprawność wiersza odczytanego z pliku wymiany.
::   WE: _a [OBJECT] - tablica nazwana z wartościami pól wiersza pliku wymiany
::       _b [INTEGER] - tryb pracy: 0 - zachowaj istniejące, 1 - nadpisywać istniejące
::       _c [OBJECT] - obiekt z resultem, patrz exec('args_valid','#excel_imex')
::   WY: ~~
::----------------------------------------------------------------------------------------------------------------------
: mapa argumentów
_buf:=_a;
_mod:=_b;
_val:=_c;

: wychwyć błędy krytyczne
_fld:=
   {? _buf.PPSF_SN=''                 || 'PPSF_SN'
   |? _buf.R=0                        || 'R'
   |? _buf.SP_ROZL=''                 || 'SP_ROZL'
   |? _buf.KW=0 & _buf.INDYW='N'      || 'KW'
   |? _buf.INDYW=''                   || 'INDYW'
   |? _buf.POMN='' & _buf.SP_ROZL='M' || 'POMN'
   |? _buf.OKR_ROZL=''                || 'OKR_ROZL'
   |? _buf.WYM=''                     || 'WYM'
   || ''
   ?};
{? _fld<>''
:  katastrofa
|| _val.msg_empty(_fld);
   _val.RESULT:=0;
   return()
?};

: błędne wartości
{? ('GDM'*_buf.SP_ROZL)=0
|| _val.msg_inset('SP_ROZL','G','D','M');
   _val.RESULT:=0;
   return()
|? ('NT'*_buf.INDYW)=0
|| _val.msg_inset('INDYW','N','T');
   _val.RESULT:=0;
   return()
|? ('NT'*_buf.POMN)=0 & _buf.SP_ROZL='M'
|| _val.msg_inset('POMN','N','T');
   _val.RESULT:=0;
   return()
|? ('BP'*_buf.OKR_ROZL)=0
|| _val.msg_inset('OKR_ROZL','B','P');
   _val.RESULT:=0;
   return()
|? ('NT'*_buf.WYM)=0
|| _val.msg_inset('WYM','N','T');
   _val.RESULT:=0;
   return()
?};

: ostrzeżenia
_max:=MS.fld_len(PPSF_SP,'FORMULA');
{? +_buf.FORMULA>_max
|| _val.msg_length('FORMULA',_max);
   _buf.FORMULA:=_max+_buf.FORMULA
?};

_firma:=exec('firma','ustawienia');
_rf:=null;
{? _buf.ROK_F<>''
|| {? ~ROK_F.find_tab(,
         'FIRMA',,'=',_firma,
         'NAZ',,'=',_buf.ROK_F
      )
   || _val.msg_norec('ROK_F');
      _val.RESULT:=0;
      return()
   || _rf:=ROK_F.ref()
   ?}
?};
_kk:=null;
{? _buf.KK<>''
|| {? ~KK.find_tab(,
         'FIRMA',,'=',_firma,
         'SYSTEM',,'=',_buf.SYSTEM,
         'ROK_F',,'=',_rf,
         'SYM',,'=',_buf.KK
      )
   || _val.msg_norec('KK');
      _val.RESULT:=0;
      return()
   || _kk:=KK.ref()
   ?}
?};
_ppsfSn:=null();
{? _buf.PPSF_SN<>''
|| {? ~PPSF_SN.find_tab(,
         'FIRMA',,'=',_firma,
         'KOD',,'=',_buf.PPSF_SN
      )
   || _val.msg_norec('PPSF_SN');
      _val.RESULT:=0;
      return()
   || _ppsfSn:=PPSF_SN.ref()
   ?}
?};
_rub:=null();
{? _buf.R<>0
|| {? ~R.find_tab(,
         'RN',,'=',_buf.R
      )
   || _val.msg_norec('R');
      _val.RESULT:=0;
      return()
   || _rub:=R.ref()
   ?}
?};
_rLg:=null();
{? _buf.R_LG<>0
|| {? ~R.find_tab(,
         'RN',,'=',_buf.R_LG
      )
   || _val.msg_norec('R_LG');
      _val.RESULT:=0;
      return()
   || _rLg:=R.ref()
   ?}
?};

: weryfikacja spójności referencyjnej
_ref:=null;
{? PPSF_SP.find_tab(,
      'PPSF_SN','KOD','=',_buf.PPSF_SN,
      'PPSF_SN','FIRMA','=',_firma,
      'R',,'=',_rub
   )
|| _ref:=PPSF_SP.ref();
   _val.ACTION:='put'
|| _val.ACTION:='add'
?};

: optymalizacja importu i standaryzacja
_val.OBJ:=exec('write_obj','xls__util',_ref,
   "'%1 %2'[_a.PPSF_SN,_a.R]",
   'KK',_kk,
   'PPSF_SN',_ppsfSn,
   'R',_rub,
   'R_LG',_rLg
);
~~


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: IS [22.26]
:: OPIS: Tworzy lub modyfikuje wiersze na podstawie wartości odczytanych z pliku wymiany.
::   WE: _a [OBJECT] - tablica nazwana z wartościami pól wiersza pliku wymiany
::       _b [INTEGER] - tryb pracy: 0 - zachowaj istniejące, 1 - nadpisywać istniejące
::       _c [OBJECT] - rezultat walidacji i importu, patrz exec('args_valid','#excel_imex')
::   WY: ~~
::----------------------------------------------------------------------------------------------------------------------
exec('write','xls__util',_a,_b,_c,PPSF_SP,"
   _a.PPSF_SN:=_c.PPSF_SN;
   _a.R:=_c.R;
   _a.SP_ROZL:=_b.SP_ROZL;
   _a.KW:=_b.KW;
   _a.FORMULA:=_b.FORMULA;
   _a.INDYW:=_b.INDYW;
   _a.POMN:=_b.POMN;
   _a.OKR_ROZL:=_b.OKR_ROZL;
   _a.WYM:=_b.WYM;
   _a.KK:=_c.KK;
   _a.R_LG:=_c.R_LG;
   ~~
");
