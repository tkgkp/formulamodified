\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: AWI [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='NUM_DOK';
_def.DOMAIN:=exec('name','#b_domain','KAS');
_def.FUNPAR:='ZWS_PAR_KASNR';

_def.FILE:='kasa.xlsx';
_def.SHEET:='Numery dokumentów kasowych=1,1';
_def.NAME:='Numery dokumentów kasowych'@;
_def.DESC:='Numery dokumentów kasowych';

_def.PREFIX:="";
_def.TABLE:="sql('select REFERENCE REF, (\'\':\'\' || NUM_DOK.IDADD || NUM_DOK.REFERENCE) as UIDREF from @NUM_DOK')";
_def.TAB_IMP:="NUM_DOK";
_def.FIELDS:="exec('fields','xls_num_dok',_a)";

_def.BEFORE:="NUM_DOK.cntx_psh()";
_def.AFTER:="NUM_DOK.cntx_pop()";
_def.SELECT:="";

_def.EXPORT:="exec('export','xls_num_dok',_a,_b)";
_def.VALIDATE:="exec('validate','xls_num_dok',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_num_dok',_a,_b,_c)";
_def.SELECT:="exec('select','xls_num_dok',_a)";
