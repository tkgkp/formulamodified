\fields
::----------------------------------------------------------------------------------------------------------------------
::  UTW: AWI [18.42]
:: OPIS: Określa pola tabeli
::   WE: _a - obiekt z definicją pól który należy zasilić
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;

_def.define('SK_KOD','Kod stanowiska kasowego',1,,'Liczba całkowita z zakresu od 1 do 999 oznaczająca kod stanowiska'
   ,type_of(0),0);
_def.define('TYP_DOK','Typ dokumentu',1,,'7 znakowy typ dokumentu kasowego',type_of(''));
_def.define('OKRES','Okres',1,,'6 znakowy okres o wzorcu rrrrmm lub rrrrRR'
   ' gdzie rrrr-rok, mm-miesiąc, RR-stała dla numeracji ciągłej',type_of(''));
_def.define('NUMER','Numer',1,,'Ostatni numer dokumentu w ramach typu',type_of(0),0);
