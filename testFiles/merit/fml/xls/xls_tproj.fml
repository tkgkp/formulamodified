\record
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Uzupełnia bufor tabeli wartościami obiektu
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

PROJTYPY.index('T');
PROJTYPY.prefix();
{? _validate.ACTION='add'
||
   PROJTYPY.blank();
   PROJTYPY.T:=_obj.T;
   PROJTYPY.NAZ:=_obj.NAZ;
   PROJTYPY.KOD:=_obj.KOD
?};

PROJTYPY.R:=_obj.R;
PROJTYPY.SJO:=_validate.OBJ.SJO;
~~


\export
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Wypełnia obiekt który zapisze w Excel wiersz danymi z rekordu
::       Użycie: export
::   WE: _a - obj_new - środowisko mechanizmu
::       _b - obj_new - obiekt który zasilić wartościami z pól
::   WY: ANY - dowolny wynik (zwracany przez _excel.write_async())
::----------------------------------------------------------------------------------------------------------------------
_excel:=_a;
_table:=_b;

_result:=1;
_table.T.VALUE:=PROJTYPY.T;
_table.NAZ.VALUE:=PROJTYPY.NAZ;
_table.KOD.VALUE:=PROJTYPY.KOD;
_excel.write_async('NRDOK',exec('FindInSet','#table','NRDOK','NRDOK',PROJTYPY.KOD,,,1,,null()));
_table.R.VALUE:=PROJTYPY.R;
_table.SJO.VALUE:=PROJTYPY.SJO().SYMBOL;
_excel.write_async('UD_SCH',PROJTYPY.SJO);
_result


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;

_result.RESULT:=1;

{? (+form(_obj.T))=0        || _result.msg_empty('T'); _result.RESULT:=0
|? (+form(_obj.T))>8        || _result.msg_length('T',8); _result.RESULT:=0
?};
{? (+form(_obj.NAZ))=0      || _result.msg_empty('NAZ'); _result.RESULT:=0 ?};
{? (+form(_obj.KOD))<>3     || _result.msg_range('KOD','długości 3 znaków','długości 3 znaków'); _result.RESULT:=0
|? ~(';Wewnętrzny;Zewnętrzny;'*(';'+_obj.R+';')) || _result.msg_inset('R','Wewnętrzny','Zewnętrzny'); _result.RESULT:=0
?};

_result.OBJ:=obj_new('SJO');
_result.OBJ.SJO:=null();

{? _obj.SJO<>'' & _obj.R='Wewnętrzny'
|| _ud_typ:=exec('FindInSet','#table','UD_TYP','SYMBOL','PODZORG',,,1,,null());

   {? _ud_typ=null()
   || _result.MSG:='Brak typu schematów danych o symbolu PODZORG.'@;
      _result.RESULT:=0
   || _result.OBJ.SJO:=exec('FindInSet','#table','UD_SCH','SYMBOL',_obj.SJO,_ud_typ,,1,,null());
      {? _result.OBJ.SJO=null()
      || _result.MSG:='Nie znaleziono schematu jednostek organizacyjnych o symbolu %1.'@[_obj.SJO];
         _result.RESULT:=0
      ?}
   ?}
?};

{? _result.RESULT=1
||
   PROJTYPY.index('T');
   PROJTYPY.prefix(_obj.T,);
   {? PROJTYPY.first()
   || {? _mode=0
      || _result.RESULT:=0
      || _result.ACTION:='put';
         exec('record','xls_tproj',_obj,_mode,_result)
      ?}
   || _result.ACTION:='add';
      exec('record','xls_tproj',_obj,_mode,_result)
   ?}
?};
~~


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
|| {? _validate.ACTION='add'
   || _result:=PROJTYPY.add(1)
   |? _validate.ACTION='put'
   || _result:=PROJTYPY.put(1)
   ?}
?};
{? _result=0
|| _validate.MSG:={? _validate.ACTION='add'
                  || 'Dodanie typu projektu %1 nie powiodło się.'@[PROJTYPY.T]
                  || 'Modyfikacja typu projektu %1 nie powiodła się.'@[PROJTYPY.T]
                  ?}
?};
_result


\select
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Umożliwia wybór rekordów do eksportu
::   WE: _a - tab_tmp - tabela tymczasowa z polem REF którą należy zasilić
::   WY: 0 - użytkownik zrezygnował z wyboru
::       1 - użytkownik potwierdził wybór
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_selected:=_a;

_result:=0;

_tab:=tab_tmp(1,'T','STRING[8]','Typ'
   ,'REF','STRING[16]','SQL ref'
   ,'SELECTED','STRING[1]','Czy wybrano'
   ,'NAZ','STRING[60]','Nazwa'
   ,'KOD','STRING[3]','Kod numeracji'
   ,'R','STRING[20]','Rodzaj'
   ,'SJO','STRING[8]','Symbol schematu');

_ndx:=_tab.ndx_tmp(,,'SELECTED',,,'T',,);

PROJTYPY.cntx_psh();
PROJTYPY.index('T');
PROJTYPY.prefix();
{? PROJTYPY.first()
|| {!
   |?
      _tab.blank();
      _tab.REF:=$PROJTYPY.ref();
      _selected.prefix($PROJTYPY.ref());
      {? _selected.first()
      || _tab.SELECTED:='T'
      || _tab.SELECTED:='N'
      ?};
      _tab.T:=PROJTYPY.T;
      _tab.NAZ:=PROJTYPY.NAZ;
      _tab.KOD:=PROJTYPY.KOD;
      _tab.R:=PROJTYPY.R;
      _tab.SJO:=PROJTYPY.SJO().SYMBOL;
      _tab.add();
      PROJTYPY.next()
   !}
?};
_result:=exec('select_action','#table',_tab
 ,'T,NAZ,KOD,R,SJO',20,'Wybór parametrów typów projektów do eksportu'@,1);
{? _result>0
||
   _selected.erase();

   _tab.index(_ndx);
   _tab.prefix('T');
   {? _tab.first()
   || {!
      |?
         _selected.prefix(_tab.REF);
         {? _selected.first()=0
         || _selected.blank();
            _selected.REF:=_tab.REF;
            _selected.add()
         ?};
         _tab.next()
      !}
   ?}
?};
PROJTYPY.cntx_pop();
_result

