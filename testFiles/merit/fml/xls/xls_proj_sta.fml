\record
::----------------------------------------------------------------------------------------------------------------------
::  UTW: PD [20.42]
:: OPIS: Uzupełnia bufor tabeli wartościami obiektu
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;
PROJ_STA.prefix();
{? _validate.ACTION='add'
||
   PROJ_STA.blank()
?};

PROJ_STA.KOD:=_obj.KOD;
PROJ_STA.STATUS:=_obj.STATUS;
PROJ_STA.AKT:=_obj.AKT;
~~


\export
::----------------------------------------------------------------------------------------------------------------------
::  UTW: PD [20.42]
:: OPIS: Wypełnia obiekt który zapisze w Excel wiersz danymi z rekordu
::       Użycie: export
::   WE: _a - obj_new - środowisko mechanizmu
::       _b - obj_new - obiekt który zasilić wartościami z pól
::   WY: ANY - dowolny wynik (zwracany przez _excel.write_async())
::----------------------------------------------------------------------------------------------------------------------
_excel:=_a;
_table:=_b;

_result:=1;
_table.KOD.VALUE:=PROJ_STA.KOD;
_table.STATUS.VALUE:=PROJ_STA.STATUS;
_table.AKT.VALUE:=PROJ_STA.AKT;
_result


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: PD [20.42]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;

_result.RESULT:=1;

{? (+_obj.KOD)>6 || _result.msg_length('KOD',6); _result.RESULT:=0 ?};
{? (+_obj.STATUS)>50 || _result.msg_length('STATUS',50); _result.RESULT:=0 ?};
{? (+_obj.AKT)>1 || _result.msg_length('AKT',1); _result.RESULT:=0 ?};
{? _obj.AKT<>'N' & _obj.AKT<>'T' || _result.msg_inset('AKT','N','T');_result.RESULT:=0 ?};
{? _obj.KOD='' || _result.msg_empty('KOD'); _result.RESULT:=0 ?};
{? _obj.STATUS='' || _result.msg_empty('STATUS'); _result.RESULT:=0 ?};

PROJ_STA.index('KOD');
PROJ_STA.prefix(_obj.KOD,);
{? PROJ_STA.first()
||
   {? _mode=0
   || _result.RESULT:=0
   ||
      _result.ACTION:='put';
      exec('record','xls_proj_sta',_obj,_mode,_result)
   ?}
||
   _result.ACTION:='add';
   exec('record','xls_proj_sta',_obj,_mode,_result)
?};
~~


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: PD [20.42]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
||
   {? _validate.ACTION='add'
   ||
      PROJ_STA.prefix();
      _result:=PROJ_STA.add(1)
   |? _validate.ACTION='put'
   ||
      PROJ_STA.prefix();
      _result:=PROJ_STA.put(1)
   ?}
?};
{? _result=0
||

   {? _validate.ACTION='add'
   ||
      _validate.MSG:='Dodanie statusu %1 nie powiodło się.'@[_obj.KOD]
   ||
      _validate.MSG:='Poprawa statusu %1 nie powiodła się.'@[_obj.KOD]
   ?}
?};
_result


\select
::----------------------------------------------------------------------------------------------------------------------
::  UTW: PD [20.42]
:: OPIS: Umożliwia wybór rekordów do eksportu
::   WE: _a - tab_tmp - tabela tymczasowa z polem REF którą należy zasilić
::   WY: 0 - użytkownik zrezygnował z wyboru
::       1 - użytkownik potwierdził wybór
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_selected:=_a;

_result:=0;

_tab:=tab_tmp(2,'KOD','STRING[6]','Kod'
   ,'REF','STRING[16]','SQL ref'
   ,'SELECTED','STRING[1]','Czy wybrano'
   ,'STATUS','STRING[250]','Status'
   ,'AKT','STRING[1]','Aktywność'
   );

_ndx:=_tab.ndx_tmp(,,'SELECTED',,,'KOD',,);

PROJ_STA.cntx_psh();
PROJ_STA.index('KOD');
PROJ_STA.prefix();
{? PROJ_STA.first()
|| {!
   |?
      _tab.blank();
      _tab.REF:=$PROJ_STA.ref();
      _selected.prefix($PROJ_STA.ref());
      {? _selected.first()
      || _tab.SELECTED:='T'
      || _tab.SELECTED:='N'
      ?};
      _tab.KOD:=PROJ_STA.KOD;
      _tab.STATUS:=PROJ_STA.STATUS;
      _tab.AKT:=PROJ_STA.AKT;
      _tab.add();
      PROJ_STA.next()
   !}
?};
_result:=exec('select_action','#table',_tab
 ,'KOD',6,'Wybór statusów do eksportu'@,1);
{? _result>0
||
   _selected.erase();

   _tab.index(_ndx);
   _tab.prefix('T');
   {? _tab.first()
   || {!
      |?
         _selected.prefix(_tab.REF);
         {? _selected.first()=0
         || _selected.blank();
            _selected.REF:=_tab.REF;
            _selected.add()
         ?};
         _tab.next()
      !}
   ?}
?};
PROJ_STA.cntx_pop();

_result

