\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: PD [21.37]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='PROJ_STA';
_def.DOMAIN:=exec('name','#b_domain','ZWS');
_def.FUNPAR:='ZWS_PAR_PSTA';

_def.FILE:='parametryzacja.xlsx';
_def.SHEET:='Statusy projektów=1,1';
_def.NAME:='Statusy projektów'@;
_def.DESC:='Statusy projektów';
_def.MULTIFIR:='T';

_def.PREFIX:="exec('prefix','xls_proj_sta')";
_def.TABLE:="exec('table','xls_proj_sta')";
_def.FIELDS:="exec('fields','xls_proj_sta',_a)";

_def.BEFORE:="PROJ_STA.cntx_psh()";
_def.AFTER:="PROJ_STA.cntx_pop()";
_def.SELECT:="exec('select','xls_proj_sta',_a)";

_def.EXPORT:="exec('export','xls_proj_sta',_a,_b)";
_def.VALIDATE:="exec('validate','xls_proj_sta',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_proj_sta',_a,_b,_c)";
