\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Mario [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='TPAL';
_def.DOMAIN:=exec('name','#b_domain','LMO');
_def.FUNPAR:='ZWS_PAR_LMAG';

_def.FILE:='magazyn_mobilny.xlsx';
_def.SHEET:='Typy palet=1,1';
_def.NAME:='Typy palet'@;
_def.DESC:='Typy palet';

_def.PREFIX:="exec('prefix','xls_tpal')";
_def.TABLE:="exec('table','xls_tpal')";
_def.FIELDS:="exec('fields','xls_tpal',_a)";

_def.BEFORE:="TPAL.cntx_psh()";
_def.AFTER:="TPAL.cntx_pop()";
_def.SELECT:="";

_def.EXPORT:="exec('export','xls_tpal',_a,_b)";
_def.VALIDATE:="exec('validate','xls_tpal',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_tpal',_a,_b,_c)";
_def.SELECT:="exec('select','xls_tpal',_a)";
