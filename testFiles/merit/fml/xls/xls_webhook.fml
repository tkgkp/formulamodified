_result


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: PD [20.42]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;

_result.RESULT:=1;

{? (+_obj.NAZ)>20 || _result.msg_length('NAZ',20); _result.RESULT:=0 ?};
{? (+_obj.URL)>250 || _result.msg_length('URL',250); _result.RESULT:=0 ?};
{? (+_obj.AKT)>1 || _result.msg_length('AKT',1); _result.RESULT:=0 ?};
{? _obj.AKT<>'N' & _obj.AKT<>'T' || _result.msg_inset('AKT','N','T');_result.RESULT:=0 ?};
{? _obj.NAZ='' || _result.msg_empty('NAZ'); _result.RESULT:=0 ?};
{? _obj.URL='' || _result.msg_empty('URL'); _result.RESULT:=0 ?};

WEBHOOK.index('NAZ');
WEBHOOK.prefix(_obj.NAZ,);
{? WEBHOOK.first()
||
   {? _mode=0
   || _result.RESULT:=0
   ||
      _result.ACTION:='put';
      exec('record','xls_webhook',_obj,_mode,_result)
   ?}
||
      WEBHOOK.index('URL');
      WEBHOOK.prefix(_obj.URL);
      {? WEBHOOK.first()
      ||
         {? _mode=0
         || _result.RESULT:=0
         ||
            _result.ACTION:='put';
            exec('record','xls_webhook',_obj,_mode,_result)
         ?}
      ||
      _result.ACTION:='add';
      exec('record','xls_webhook',_obj,_mode,_result)
      ?}
?};
~~


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: PD [20.42]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
||
   {? _validate.ACTION='add'
   ||
      WEBHOOK.prefix();
      _result:=WEBHOOK.add(1)
   |? _validate.ACTION='put'
   ||
      WEBHOOK.prefix();
      _result:=WEBHOOK.put(1)
   ?}
?};
{? _result=0
||

   {? _validate.ACTION='add'
   ||
      _validate.MSG:='Dodanie zespołu %1 nie powiodło się.'@[_obj.NAZ]
   ||
      _validate.MSG:='Poprawa zespołu %1 nie powiodła się.'@[_obj.NAZ]
   ?}
?};
_result


\select
::----------------------------------------------------------------------------------------------------------------------
::  UTW: PD [20.42]
:: OPIS: Umożliwia wybór rekordów do eksportu
::   WE: _a - tab_tmp - tabela tymczasowa z polem REF którą należy zasilić
::   WY: 0 - użytkownik zrezygnował z wyboru
::       1 - użytkownik potwierdził wybór
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_selected:=_a;

_result:=0;

_tab:=tab_tmp(2,'NAZ','STRING[20]','Nazwa'
   ,'REF','STRING[16]','SQL ref'
   ,'SELECTED','STRING[1]','Czy wybrano'
   ,'URL','STRING[250]','URL'
   ,'AKT','STRING[1]','Aktywny'
   );

_ndx:=_tab.ndx_tmp(,,'SELECTED',,,'NAZ',,);

WEBHOOK.cntx_psh();
WEBHOOK.index('NAZ');
WEBHOOK.prefix();
{? WEBHOOK.first()
|| {!
   |?
      _tab.blank();
      _tab.REF:=$WEBHOOK.ref();
      _selected.prefix($WEBHOOK.ref());
      {? _selected.first()
      || _tab.SELECTED:='T'
      || _tab.SELECTED:='N'
      ?};
      _tab.NAZ:=WEBHOOK.NAZ;
      _tab.URL:=WEBHOOK.URL;
      _tab.AKT:=WEBHOOK.AKT;
      _tab.add();
      WEBHOOK.next()
   !}
?};
_result:=exec('select_action','#table',_tab
 ,'NAZ',20,'Wybór zespołów do eksportu'@,1);
{? _result>0
||
   _selected.erase();

   _tab.index(_ndx);
   _tab.prefix('T');
   {? _tab.first()
   || {!
      |?
         _selected.prefix(_tab.REF);
         {? _selected.first()=0
         || _selected.blank();
            _selected.REF:=_tab.REF;
            _selected.add()
         ?};
         _tab.next()
      !}
   ?}
?};
WEBHOOK.cntx_pop();

_result

