\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: PD [20.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='WEBHOOK';
_def.DOMAIN:=exec('name','#b_domain','ZWS');
_def.FUNPAR:='ZWS_PAR_TEAM';

_def.FILE:='parametryzacja.xlsx';
_def.SHEET:='MS Teams zespoły=1,1';
_def.NAME:='MS Teams zespoły'@;
_def.DESC:='MS Teams zespoły';

_def.PREFIX:="exec('prefix','xls_webhook')";
_def.TABLE:="exec('table','xls_webhook')";
_def.FIELDS:="exec('fields','xls_webhook',_a)";

_def.BEFORE:="WEBHOOK.cntx_psh()";
_def.AFTER:="WEBHOOK.cntx_pop()";
_def.SELECT:="exec('select','xls_webhook',_a)";

_def.EXPORT:="exec('export','xls_webhook',_a,_b)";
_def.VALIDATE:="exec('validate','xls_webhook',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_webhook',_a,_b,_c)";
