\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='WAL';
_def.DOMAIN:=exec('name','#b_domain','ZWS');
_def.FUNPAR:='ZWS_PAR_KRRS';

_def.FILE:='parametryzacja.xlsx';
_def.SHEET:='Waluty=1,1';
_def.NAME:='Waluty'@;
_def.DESC:='Waluty';
_def.TABLE:="exec('table','xls_wal')";
_def.FIELDS:="exec('fields','xls_wal',_a)";
_def.EXPORT:="exec('export','xls_wal',_a,_b)";
_def.IMPORT:="exec('import','xls_wal',_a,_b,_c)";
_def.VALIDATE:="exec('validate','xls_wal',_a,_b,_c)";
_def.SELECT:="exec('select','xls_wal',_a)";
_def.PREFIX:="WAL.index('WAL_KOD'); WAL.prefix()";
_def.BEFORE:="WAL.cntx_psh()";
_def.AFTER:="WAL.cntx_pop()";
