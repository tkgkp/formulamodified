_result


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::   WY: 0 - porażka
::       1 - sukces
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;

_result.RESULT:=1;
WAL.index('WAL_SYM');
WAL.prefix(_obj.SYM,);
{? WAL.first()
||
   {? _mode=0
   || _result.RESULT:=0
   ||
      _result.ACTION:='put';
      exec('record','xls_wal',_obj,_mode,_result);
      {? params_exec('chk_wal','slo_slu')<>''
      ||
         _result.RESULT:=0
      ?}
   ?}
||
   _result.ACTION:='add';
   exec('record','xls_wal',_obj,_mode,_result);
   {? params_exec('chk_wal','slo_slu')<>''
   || _result.RESULT:=0
   ?}
?};



_result


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
||
   {? _validate.ACTION='add'
   ||
      _result:=WAL.add(1)
   |? _validate.ACTION='put'
   ||
      _result:=WAL.put(1)
   ?}
?};
{? _result=0
||

   {? _validate.ACTION='add'
   ||
      FUN.info('Dodanie waluty o symbolu %1 nie powiodło się.'@[_obj.SYM])
   ||
      FUN.info('Poprawa waluty o symbolu %1 nie powiodła się.'@[_obj.SYM])
   ?}
?};
_result


\select
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Umożliwia wybór rekordów do eksportu
::   WE: _a - tab_tmp - tabela tymczasowa z polem REF którą należy zasilić
::   WY: 0 - użytkownik zrezygnował z wyboru
::       1 - użytkownik potwierdził wybór
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_selected:=_a;

_result:=0;

_tab:=tab_tmp(1,'REF','STRING[16]','SQL ref'
   ,'SELECTED','STRING[1]','Czy wybrano'
   ,'NAZ','STRING[20]','Nazwa'
   ,'SYM','STRING[3]','Symbol'
   ,'KRAJ','STRING[20]','Kraj');

_ndx:=_tab.ndx_tmp(,,'SELECTED',,,'NAZ',,);

WAL.cntx_psh();
WAL.index('WAL_KOD');
WAL.prefix();
{? WAL.first()
|| {!
   |?
      _tab.blank();
      _tab.REF:=$WAL.ref();
      _selected.prefix($WAL.ref());
      {? _selected.first()
      || _tab.SELECTED:='T'
      || _tab.SELECTED:='N'
      ?};
      _tab.SYM:=WAL.SYM;
      _tab.NAZ:=WAL.NAZ;
      _tab.KRAJ:=WAL.KRAJ;
      _tab.add();
      WAL.next()
   !}
?};
_result:=exec('select_action','#table',_tab
 ,'NAZ,SYM,KRAJ',20,'Wybór waluty do eksportu'@,1);
{? _result>0
||
   _selected.erase();

   _tab.index(_ndx);
   _tab.prefix('T');
   {? _tab.first()
   || {!
      |?
         _selected.prefix(_tab.REF);
         {? _selected.first()=0
         || _selected.blank();
            _selected.REF:=_tab.REF;
            _selected.add()
         ?};
         _tab.next()
      !}
   ?}
?};
WAL.cntx_pop();

_result

