\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='T2MG';
_def.DOMAIN:=exec('name','#b_domain','LMG');
_def.FUNPAR:='ZWS_PAR_LTDM';

_def.FILE:='magazyn.xlsx';
_def.SHEET:='Typy dokumentów w magazynach=1,1';
_def.NAME:='Typy dokumentów w magazynach'@;
_def.DESC:='Typy dokumentów w magazynach';

_def.PREFIX:="exec('prefix','xls_t2mg')";
_def.TABLE:="exec('table','xls_t2mg')";
_def.FIELDS:="exec('fields','xls_t2mg',_a)";

_def.BEFORE:="T2MG.cntx_psh()";
_def.AFTER:="T2MG.cntx_pop()";
_def.SELECT:="exec('select','xls_t2mg',_a)";

_def.EXPORT:="exec('export','xls_t2mg',_a,_b)";
_def.IMPORT:="exec('import','xls_t2mg',_a,_b,_c)";
_def.VALIDATE:="exec('validate','xls_t2mg',_a,_b,_c)";
