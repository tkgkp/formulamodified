\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: TS [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='KWAR';
_def.DOMAIN:=exec('name','#b_domain','TTE');
_def.FUNPAR:='ZWS_PAR_TTKT';

_def.FILE:='produkcja_kalkulacje.xlsx';
_def.SHEET:='Warianty kalkulacyjne'@+'=1,1';
_def.NAME:='Warianty kalkulacyjne'@;
_def.DESC:='Warianty kalkulacji kart technologicznych'@;

_def.PREFIX:="KWAR.index('NA'); KWAR.prefix()";
_def.TABLE:="KWAR";
_def.FIELDS:="exec('fields','xls_kwar',_a)";

_def.BEFORE:="KWAR.cntx_psh()";
_def.AFTER:="KWAR.cntx_pop()";
_def.SELECT:="exec('select','xls_kwar',_a)";

_def.EXPORT:="exec('export','xls_kwar',_a,_b)";
_def.VALIDATE:="exec('validate','xls_kwar',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_kwar',_a,_b,_c)";
