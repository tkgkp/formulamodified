\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Mario [18.42]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;

_result.RESULT:=1;

NRDOK.index('NRDOK');
NRDOK.prefix(_obj.TYP,);
{? NRDOK.first()
||
   {? _mode=0
   || _result.RESULT:=0
   || _result.ACTION:='put';
      _moz:=1;
      {? NRDOK.AB<>_obj.AB | NRDOK.P1<>_obj.P1 | NRDOK.P2<>_obj.P2 | NRDOK.P3<>_obj.P3
         | NRDOK.P4<>_obj.P4 | NRDOK.P5<>_obj.P5 | NRDOK.P6<>_obj.P6
      || _moz:=~exec('nrtyp_uzywany','numery',NRDOK.TYP);
         {? ~_moz
         || _result.msg_update();
            _result.MSG+=' Numeracja %1 jest używana, nie można zmienić akronimu ani klucza.'@[NRDOK.TYP]
         ?}
      ?};
      {? _moz
      || exec('record','xls_nrdok',_obj,_mode,_result);
         {? exec('chk_nrdo','numery','put')<>''
         || _result.RESULT:=0
         ?}
      || _result.RESULT:=0
      ?}
   ?}
||
   _result.ACTION:='add';
   exec('record','xls_nrdok',_obj,_mode,_result);
   {? exec('chk_nrdo','numery','add')<>''
   || _result.RESULT:=0
   ?}
?};
_result


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Mario [18.42]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
||
   {? _validate.ACTION='add'
   ||
      _result:=NRDOK.add(1)
   |? _validate.ACTION='put'
   ||
      _result:=NRDOK.put(1)
   ?}
?};
{? _result=0
||

   {? _validate.ACTION='add'
   ||
      _validate.MSG:='Dodanie numeracji o kodzie %1 nie powiodło się.'@[_obj.TYP]
   ||
      _validate.MSG:='Poprawa numeracji o kodzie %1 nie powiodło się.'@[_obj.TYP]
   ?}
?};
_result


\select
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Umożliwia wybór rekordów do eksportu
::   WE: _a - tab_tmp - tabela tymczasowa z polem REF którą należy zasilić
::   WY: 0 - użytkownik zrezygnował z wyboru
::       1 - użytkownik potwierdził wybór
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_selected:=_a;

_result:=0;

_tab:=tab_tmp(1,'TYP','STRING[3]','Symbol numeracji'
   ,'REF','STRING[16]','SQL ref'
   ,'SELECTED','STRING[1]','Czy wybrano'
   ,'OP','STRING[40]','Opis');

_ndx:=_tab.ndx_tmp(,,'SELECTED',,,'TYP',,);

NRDOK.cntx_psh();
NRDOK.index('NRDOK');
NRDOK.prefix();
{? NRDOK.first()
|| {!
   |?
      _tab.blank();
      _tab.REF:=$NRDOK.ref();
      _selected.prefix($NRDOK.ref());
      {? _selected.first()
      || _tab.SELECTED:='T'
      || _tab.SELECTED:='N'
      ?};
      _tab.TYP:=NRDOK.TYP;
      _tab.OP:=NRDOK.OP;
      _tab.add();
      NRDOK.next()
   !}
?};
_result:=exec('select_action','#table',_tab
 ,'TYP,OP',20,'Wybór numeracji dokumentów do eksportu'@,1);
{? _result>0
||
   _selected.erase();

   _tab.index(_ndx);
   _tab.prefix('T');
   {? _tab.first()
   || {!
      |?
         _selected.prefix(_tab.REF);
         {? _selected.first()=0
         || _selected.blank();
            _selected.REF:=_tab.REF;
            _selected.add()
         ?};
         _tab.next()
      !}
   ?}
?};
NRDOK.cntx_pop();

_result

