\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='MG_GRP';
_def.DOMAIN:=exec('name','#b_domain','LMO');
_def.FUNPAR:='ZWS_PAR_LMAG';

_def.FILE:='magazyn_mobilny.xlsx';
_def.SHEET:='Pozycje strefy mag.=1,1';
_def.NAME:='Pozycje stref magazynowania'@;
_def.DESC:='Pozycje stref magazynowania';

_def.PREFIX:="exec('prefix','xls_mg_grp')";
_def.TABLE:="exec('table','xls_mg_grp')";
_def.FIELDS:="exec('fields','xls_mg_grp',_a)";

_def.BEFORE:="MG_GRP.cntx_psh()";
_def.AFTER:="MG_GRP.cntx_pop()";
_def.SELECT:="exec('select','xls_mg_grp',_a)";

_def.EXPORT:="exec('export','xls_mg_grp',_a,_b)";
_def.IMPORT:="exec('import','xls_mg_grp',_a,_b,_c)";
_def.VALIDATE:="exec('validate','xls_mg_grp',_a,_b,_c)";
