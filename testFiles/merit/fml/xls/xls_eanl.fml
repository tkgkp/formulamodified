\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='EANL';
_def.DOMAIN:=exec('name','#b_domain','LMG');
_def.FUNPAR:='ZWS_PAR_LMAG';

_def.FILE:='magazyn.xlsx';
_def.SHEET:='Lokalizacje=1,1';
_def.NAME:='Lokalizacje magazynów'@;
_def.DESC:='Lokalizacje magazynów';

_def.PREFIX:="exec('prefix','xls_eanl')";
_def.TABLE:="exec('table','xls_eanl')";
_def.FIELDS:="exec('fields','xls_eanl',_a)";

_def.BEFORE:="EANL.cntx_psh()";
_def.AFTER:="EANL.cntx_pop()";
_def.SELECT:="exec('select','xls_eanl',_a)";

_def.EXPORT:="exec('export','xls_eanl',_a,_b)";
_def.IMPORT:="exec('import','xls_eanl',_a,_b,_c)";
_def.VALIDATE:="exec('validate','xls_eanl',_a,_b,_c)";
