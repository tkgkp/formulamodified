\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='ISTDEF';
_def.DOMAIN:=exec('name','#b_domain','ZWS');
_def.FUNPAR:='ZWS_DEF_IST';
_def.FILE:='intrastat.xlsx';
_def.SHEET:='Definicja Intrastat=1,1';
_def.NAME:='Definicja Intrastat'@;
_def.DESC:='Definicja Intrastat';
_def.TABLE:="exec('table','xls_istdef')";
_def.FIELDS:="exec('fields','xls_istdef',_a)";
_def.EXPORT:="exec('export','xls_istdef',_a,_b)";
_def.IMPORT:="exec('import','xls_istdef',_a,_b,_c)";
_def.VALIDATE:="exec('validate','xls_istdef',_a,_b,_c)";
_def.SELECT:="exec('select','xls_istdef',_a)";
_def.PREFIX:="ISTDEF.index('LP'); ISTDEF.prefix('','','I')";
_def.BEFORE:="ISTDEF.cntx_psh()";
_def.AFTER:="ISTDEF.cntx_pop()";
