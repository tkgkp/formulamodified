\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='EANC';
_def.DOMAIN:=exec('name','#b_domain','LMO');
_def.FUNPAR:='ZWS_MOBI_DEF';

_def.FILE:='magazyn_mobilny.xlsx';
_def.SHEET:='Urządzenia mobilne=1,1';
_def.NAME:='Urządzenia mobilne'@;
_def.DESC:='Urządzenia mobilne';

_def.PREFIX:="exec('prefix','xls_eanc')";
_def.TABLE:="exec('table','xls_eanc')";
_def.FIELDS:="exec('fields','xls_eanc',_a)";

_def.BEFORE:="EANC.cntx_psh()";
_def.AFTER:="EANC.cntx_pop()";
_def.SELECT:="exec('select','xls_eanc',_a)";

_def.EXPORT:="exec('export','xls_eanc',_a,_b)";
_def.IMPORT:="exec('import','xls_eanc',_a,_b,_c)";
_def.VALIDATE:="exec('validate','xls_eanc',_a,_b,_c)";
