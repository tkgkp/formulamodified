:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;

_result.RESULT:=1;
::_result.OBJ:=obj_new('KONTRAH');
::_result.OBJ.KONTRAH:=exec('FindInSet','#table','KH','SKR',_obj.KONTRAH,1,"KH.ref()",1);

::{? _obj.KONTRAH<>'' & _result.OBJ.KONTRAH=null()
::|| _result.msg_norec('KONTRAH');
::   _result.RESULT:=0

:: Ostrzeżenia
{? +_obj.KOD>10
|| _result.msg_length('KOD',10)
?};
{? +_obj.NA>50
|| _result.msg_length('NA',50)
?};

:: OK
TTOUT.index('KOD');
TTOUT.prefix(_obj.KOD,);
{? TTOUT.first()
|| {? _mode=0
   || _result.RESULT:=0
   || _result.ACTION:='put';
      exec('record','xls_ttout',_obj,_mode,_result);
      {? exec('chk_ttout','prod_tar',1)<>''
      || _result.RESULT:=0
      ?}
   ?}
|| _result.ACTION:='add';
   exec('record','xls_ttout',_obj,_mode,_result);
   {? exec('chk_ttout','prod_tar',0)<>''
   || _result.RESULT:=0
   ?}
?};
