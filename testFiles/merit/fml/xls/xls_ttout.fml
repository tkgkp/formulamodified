_table.NA.VALUE:=TTOUT.NA;
_table.CENA.VALUE:=TTOUT.CENA;
::_table.KONTRAH.VALUE:=TTOUT.KONTRAH().SKR;
_table.SRW.VALUE:=TTOUT.SRW;
_result


