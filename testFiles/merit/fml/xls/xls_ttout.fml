_def:=_a;

_def.define('KOD','Kod'@,0,,'Kod (max. 10 znaków)'@);
_def.define('NA','Nazwa'@,1,,'Nazwa (max. 50 znaków)'@);
_def.define('CENA','Cena'@,1);
::_def.define('KONTRAH','Kontrahent'@,1);
