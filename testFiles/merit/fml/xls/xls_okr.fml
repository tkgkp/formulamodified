\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::   WY: 0 - porażka
::       1 - sukces
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;

_result.RESULT:=1;

_validate:=exec('validate_obj','xls_okr', _obj);
{? _validate<>''
||
   _result.MSG:=_validate;
   _result.RESULT:=0
?};

{? _result.RESULT = 1
||
   OKRO.cntx_psh();
   OKRO.index('UNIK');
   OKRO.prefix(REF.FIRMA,_obj.ROK,_obj.MC);
   {? OKRO.first() & OKRO.NR_OKR = _obj.MC
   ||
      _result.RESULT:=1
   ||
      _rok:={? type_of(_obj.ROK)<>type_of('') || $_obj.ROK || _obj.ROK ?};
      _mc:={? type_of(_obj.MC)<>type_of('') || $_obj.MC || _obj.MC ?};
      _result.MSG:='Nie znaleziono roku %1 i miesiąca %2 w okresach całego pakietu.'@[_rok, _mc];
      _result.RESULT:=0;
      OKRO.cntx_pop();
      return(~~)
   ?};
   OKRO.cntx_pop()
?};

{? _result.RESULT = 1
||
   OKR.index('OKR');
   OKR.prefix(REF.FIRMA, _obj.ROK, _obj.MC);
   {? OKR.first()
   ||
      {? _mode=0
      || _result.RESULT:=0
      ||
         _result.ACTION:='put';
         exec('record','xls_okr',_obj,_mode,_result)
::         {? exec('validate_obj','xls_okr', _obj)
::         ||
::            _result.RESULT:=0
::         ?}
      ?}
   ||
      _result.ACTION:='add';
      exec('record','xls_okr',_obj,_mode,_result)
::      {? exec('validate_obj','xls_okr', _obj)
::      ||
::         _result.RESULT:=0
::      ?}
   ?}
?};
_result


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
||
   {? _validate.ACTION='add'
   ||
      _result:=OKR.add(1)
   |? _validate.ACTION='put'
   ||
      _result:=OKR.put(1)
   ?}
?};
{? _result=0
||
   {? _validate.ACTION='add'
   ||
      _rok:={? type_of(_obj.ROK)<>type_of('') || $_obj.ROK || _obj.ROK ?};
      _mc:={? type_of(_obj.MC)<>type_of('') || $_obj.MC || _obj.MC ?};
      FUN.info('Dodanie pozycji z roku: %1 miesiąca: %2 nie powiodło się.'@[_rok, _mc])
   ||
      FUN.info('Poprawa pozycji z roku: %1 miesiąca: %2 nie powiodło się.'@[_rok, _mc])
   ?}
?};
_result

