   ?}
!};
obj_del(_fld);

_ref:=null;
{? H_ODDSZ.find_tab(,'SYMBOL',,'=',_buf.SYMBOL)
|| _ref:=H_ODDSZ.ref();
   _val.ACTION:='put'
|| _val.ACTION:='add'
?};

: optymalizacja importu i standaryzacja kodu
_val.OBJ:=exec('write_obj','xls__util',_ref,
   "'%1 - %2'[_a.SYMBOL,_a.OPIS]"
