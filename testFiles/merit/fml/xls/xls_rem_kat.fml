\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: TS [19.22]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='REM_KAT';
_def.DOMAIN:=exec('name','#b_domain','TRE');
_def.FUNPAR:='ZWS_PAR_TRKZ';

_def.FILE:='remonty.xlsx';
_def.SHEET:='Kategorie zasobów'@+'=1,1';
_def.NAME:='Kategorie zasobów'@;
_def.DESC:='Kategorie zasobów remontowych'@;

_def.PREFIX:="REM_KAT.index('SYMBOL'); REM_KAT.prefix()";
_def.TABLE:="REM_KAT";
_def.FIELDS:="exec('fields','xls_rem_kat',_a)";

_def.BEFORE:="REM_KAT.cntx_psh()";
_def.AFTER:="REM_KAT.cntx_pop()";
_def.SELECT:="";

_def.EXPORT:="exec('export','xls_rem_kat',_a,_b)";
_def.VALIDATE:="exec('validate','xls_rem_kat',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_rem_kat',_a,_b,_c)";
_def.SELECT:="exec('select','xls_rem_kat',_a)";
