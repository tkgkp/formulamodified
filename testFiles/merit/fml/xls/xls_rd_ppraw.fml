   _env.define('ARTYKUL', MS.name(RD_PPRAW,'ARTYKUL'), 1,,MS.comment(RD_PPRAW,'ARTYKUL'));
   _env.define('ART_NDX', MS.name(RD_PPRAW,'ART_NDX'), 1,,MS.comment(RD_PPRAW,'ART_NDX'));
   _env.define('PARAGRAF',MS.name(RD_PPRAW,'PARAGRAF'),1,,MS.comment(RD_PPRAW,'PARAGRAF'));
   _env.define('PUNKT',   MS.name(RD_PPRAW,'PUNKT'),   1,,MS.comment(RD_PPRAW,'PUNKT'));
   _env.define('TRESC',   MS.name(RD_PPRAW,'TRESC'),   1,,MS.comment(RD_PPRAW,'TRESC'));
   _env.define('OPIS',    MS.name(RD_PPRAW,'OPIS'),    1,,MS.comment(RD_PPRAW,'OPIS'));
   ~~
";

: zawartość wiersza
_def.EXPORT:="
   _env:=_a;
   _buf:=_b;
   _buf.LP.VALUE:=RD_PPRAW.LP;
   _buf.ARTYKUL.VALUE:=RD_PPRAW.ARTYKUL;
   _buf.ART_NDX.VALUE:=RD_PPRAW.ART_NDX;
   _buf.PARAGRAF.VALUE:=RD_PPRAW.PARAGRAF;
   _buf.PUNKT.VALUE:=RD_PPRAW.PUNKT;
   _buf.TRESC.VALUE:=RD_PPRAW.TRESC;
   _buf.OPIS.VALUE:=RD_PPRAW.memo_txt(,1,'OPIS');
   1
";

: weryfikacja i zapis wiersza odczytanego z pliku wymiany
_def.VALIDATE:="exec('validate','xls_rd_ppraw',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_rd_ppraw',_a,_b,_c)";
