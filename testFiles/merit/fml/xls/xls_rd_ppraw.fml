\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [18.42]
:: OPIS: Weryfikuje poprawność wiersza odczytanego z pliku wymiany.
::   WE: _a [OBJECT] - tablica nazwana z wartościami pól wiersza pliku wymiany
::       _b [INTEGER] - tryb pracy: 0 - zachowaj istniejące, 1 - nadpisywać istniejące
::       _c [OBJECT] - obiekt z resultem, patrz exec('args_valid','#excel_imex')
::   WY: ~~
::----------------------------------------------------------------------------------------------------------------------
: mapa argumentów
_buf:=_a;
_mod:=_b;
_val:=_c;

_ref:=null;
{? RD_PPRAW.find_tab(,
      'ARTYKUL',,'=',_buf.ARTYKUL,
      'ART_NDX',,'=',_buf.ART_NDX,
      'PARAGRAF',,'=',_buf.PARAGRAF,
      'PUNKT',,'=',_buf.PUNKT
   )
|| _ref:=RD_PPRAW.ref()
?};

: optymalizacja importu i standaryzacja kodu
_obj:=_val.OBJ:=obj_new('RD_PPRAW','to_str');
_obj.to_str:="'%1, %2, %3, %4'[_a.ARTYKUL,_a.ART_NDX,_a.PARAGRAF,_a.PUNKT]";
_obj.RD_PPRAW:=_ref;

{? _ref=null
|| _val.ACTION:='add'
|| _val.ACTION:='put'
?};
~~


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [18.42]
:: OPIS: Tworzy lub modyfikuje wiersze na podstawie wartości odczytanych z pliku wymiany.
::   WE: _a [OBJECT] - tablica nazwana z wartościami pól wiersza pliku wymiany
::       _b [INTEGER] - tryb pracy: 0 - zachowaj istniejące, 1 - nadpisywać istniejące
::       _c [OBJECT] - rezultat walidacji i importu, patrz exec('args_valid','#excel_imex')
::   WY: ~~
::----------------------------------------------------------------------------------------------------------------------
: mapa argumentów
_buf:=_a;
_mod:=_b;
_val:=_c;
_obj:=_c.OBJ;

_set:="
   _a.LP:=_b.LP;
   _a.ARTYKUL:=_b.ARTYKUL;
   _a.ART_NDX:=_b.ART_NDX;
   _a.PARAGRAF:=_b.PARAGRAF;
   _a.PUNKT:=_b.PUNKT;
   _a.TRESC:=_b.TRESC;
   RD_PPRAW.memo_set(_b.OPIS,'OPIS');
   ~~
";

{? _val.ACTION='put' & _mod
:  włączono tryb nadpisywania
|| {? RD_PPRAW.seek(_obj.RD_PPRAW)
   || _set(RD_PPRAW,_buf,_obj);
      {? ~RD_PPRAW.put(1) | ~RD_PPRAW.memo_put(,'OPIS')
      || _val.msg_update(_obj.to_str(_buf));
         _val.RESULT:=0
      ?}
   || _val.msg_norec(,RD_PPRAW.comment());
      _val.RESULT:=0
   ?}

|? _val.ACTION='add'
:  brak ograniczeń
|| RD_PPRAW.blank();
   _set(RD_PPRAW,_buf,_obj);
   {? ~RD_PPRAW.add(1) | ~RD_PPRAW.memo_put(,'OPIS')
   || _val.msg_insert(_obj.to_str(_buf));
      _val.RESULT:=0
   ?}
?};
~~

