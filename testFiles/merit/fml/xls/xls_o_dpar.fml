: prolog
_def.BEFORE:="
   O_DPAR.cntx_psh();
   O_DPAR.index('KOD');
   O_DPAR.prefix();
   ~~
";

: epilog
_def.AFTER:="
   O_DPAR.cntx_pop();
   ~~
";

: definicja kolumn
_def.FIELDS:="
   _env:=_a;
