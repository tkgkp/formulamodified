\export
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [21.14]
:: OPIS: Ustawia wartości w polach bufora danych i asynchronicznie zapisuje powiązane dane.
::   WE:
::   WY: 1
::----------------------------------------------------------------------------------------------------------------------
:: mapa argumentów
_env:=_a;
_buf:=_b;

_buf.SYSTEM.VALUE:=O_DPAR.SYSTEM;
_buf.KOD.VALUE:=O_DPAR.KOD;
_buf.SYMBOL.VALUE:=O_DPAR.SYMBOL;
_buf.NAZWA.VALUE:=O_DPAR.NAZWA;
_buf.OPIS.VALUE:=O_DPAR.memo_txt(,1,'OPIS');
_buf.TYP.VALUE:=O_DPAR.TYP;
_buf.WYM_JEST.VALUE:=O_DPAR.WYM_JEST;
_buf.WYM_DOST.VALUE:=O_DPAR.WYM_DOST;
_buf.FML_BL.VALUE:=O_DPAR.memo_txt(,1,'FML_BL');
_buf.FML_AE.VALUE:=O_DPAR.memo_txt(,1,'FML_AE');

:: parametry w firmie
{? exec('runtime_dro','#system')
|| return(1)
?};
O_FPAR.cntx_psh();
O_FPAR.index('SYMBOL');
O_FPAR.prefix(exec('ref_firma','ustawienia'));
{? O_FPAR.find_key(O_DPAR.SYMBOL,)
|| _env.write_async('O_FPAR',O_FPAR.ref())
?};
O_FPAR.cntx_pop();

1


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [21.14]
:: OPIS: Weryfikuje poprawność wiersza odczytanego z pliku wymiany.
::   WE: _a [OBJECT] - tablica nazwana z wartościami pól wiersza pliku wymiany
::       _b [INTEGER] - tryb pracy: 0 - zachowaj istniejące, 1 - nadpisywać istniejące
::       _c [OBJECT] - obiekt z resultem, patrz exec('args_valid','#excel_imex')
::   WY: ~~
::----------------------------------------------------------------------------------------------------------------------
: mapa argumentów
_buf:=_a;
_mod:=_b;
_val:=_c;

: wychwyć błędy krytyczne
_fld:=
   {? _buf.SYSTEM=''   || 'SYSTEM'
   |? _buf.KOD=''      || 'KOD'
   |? _buf.SYMBOL=''   || 'SYMBOL'
   |? _buf.NAZWA=''    || 'NAZWA'
   |? _buf.TYP=''      || 'TYP'
   |? _buf.WYM_JEST='' || 'WYM_JEST'
   |? _buf.WYM_DOST='' || 'WYM_DOST'
   || ''
   ?};
{? _fld<>''
:  katastrofa
|| _val.msg_empty(_fld);
   _val.RESULT:=0;
   return()
?};

:: błędne wartości
{? ('TN'*(1+_buf.SYSTEM))=0
|| _val.msg_inset('SYSTEM','T','N');
   _val.RESULT:=0;
   return()
|? ('ZR'*(1+_buf.TYP))=0
|| _val.msg_inset('TYP','Z','R');
   _val.RESULT:=0;
   return()
|? ('TN'*(1+_buf.WYM_JEST))=0
|| _val.msg_inset('WYM_JEST','T','N');
   _val.RESULT:=0;
   return()
|? ('TN'*(1+_buf.WYM_DOST))=0
|| _val.msg_inset('WYM_DOST','T','N');
   _val.RESULT:=0;
   return()
?};

: ostrzeżenia
_max:=MS.fld_len(O_DPAR,'SYSTEM');
{? +_buf.SYSTEM>_max
|| _val.msg_length('SYSTEM',_max);
   _buf.SYSTEM:=_max+_buf.SYSTEM
?};
_max:=MS.fld_len(O_DPAR,'KOD');
{? +_buf.KOD>_max
|| _val.msg_length('KOD',_max);
   _buf.KOD:=_max+_buf.KOD
?};
_max:=MS.fld_len(O_DPAR,'SYMBOL');
{? +_buf.SYMBOL>_max
|| _val.msg_length('SYMBOL',_max);
   _buf.SYMBOL:=_max+_buf.SYMBOL
?};
_max:=MS.fld_len(O_DPAR,'NAZWA');
{? +_buf.NAZWA>_max
|| _val.msg_length('NAZWA',_max);
   _buf.NAZWA:=_max+_buf.NAZWA
?};

_ref:=null;
{? O_DPAR.find_key(_buf.KOD,)
|| _ref:=O_DPAR.ref();
   _val.ACTION:='put'
|| _val.ACTION:='add'
?};

: optymalizacja importu i standaryzacja kodu
_val.OBJ:=exec('write_obj','xls__util',_ref,
   "'%1'[_a.KOD]"
);
~~


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [21.14]
:: OPIS: Tworzy lub modyfikuje wiersze na podstawie wartości odczytanych z pliku wymiany.
::   WE: _a [OBJECT] - tablica nazwana z wartościami pól wiersza pliku wymiany
::       _b [INTEGER] - tryb pracy: 0 - zachowaj istniejące, 1 - nadpisywać istniejące
::       _c [OBJECT] - rezultat walidacji i importu, patrz exec('args_valid','#excel_imex')
::   WY: ~~
::----------------------------------------------------------------------------------------------------------------------
exec('write','xls__util',_a,_b,_c,O_DPAR,"
   _a.SYSTEM:=_b.SYSTEM;
   _a.KOD:=_b.KOD;
   _a.SYMBOL:=_b.SYMBOL;
   _a.NAZWA:=_b.NAZWA;
   _a.memo_set(_b.OPIS,'OPIS');
   _a.TYP:=_b.TYP;
   _a.WYM_JEST:=_b.WYM_JEST;
   _a.WYM_DOST:=_b.WYM_DOST;
   _a.memo_set(_b.FML_BL,'FML_BL');
   _a.memo_set(_b.FML_AE,'FML_AE');
   ~~
",'OPIS,FML_BL,FML_AE');
