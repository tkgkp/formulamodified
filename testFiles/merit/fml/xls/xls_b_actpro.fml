\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MW [19.02]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='B_ACTION_K2';
_def.DOMAIN:=exec('name','#b_domain','ZPR');
_def.FUNPAR:='';

_def.FILE:='procesy.xlsx';
_def.SHEET:='Czynności - konfig. wg firm'@+'=1,1';
_def.NAME:='Czynności - konfiguracja wg firm'@;
_def.DESC:='Czynności - konfiguracja wg firm'@;

_def.PREFIX:="exec('prefix','xls_b_actpro')";
_def.TABLE:="exec('table','xls_b_actpro')";
_def.FIELDS:="exec('fields','xls_b_actpro',_a)";

_def.BEFORE:="__TASK:=app_info('task');B_ACTPRO.cntx_psh()";
_def.AFTER:="VAR_DEL.delete('__TASK');B_ACTPRO.cntx_pop()";
_def.SELECT:="exec('select','xls_b_actpro',_a)";

_def.EXPORT:="exec('export','xls_b_actpro',_a,_b)";
_def.VALIDATE:="exec('validate','xls_b_actpro',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_b_actpro',_a,_b,_c)";
