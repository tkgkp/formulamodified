_tooltip:=MS.name(USERS,'KOD')+' '+'(max. %1 znaków). '@[$MS.fld_len(USERS,'KOD')];
_tooltip+='Wymagane.'@;
_def.define('USERS','Opiekun'@,1,,_tooltip,type_of(''));
