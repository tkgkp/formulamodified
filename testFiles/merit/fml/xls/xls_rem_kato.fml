\record
::----------------------------------------------------------------------------------------------------------------------
::  UTW: WH [19.42]
:: OPIS: Uzupełnia bufor tabeli wartościami obiektu
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;
REM_KATO.prefix();
{? _validate.ACTION='add'
|| REM_KATO.blank();
   REM_KATO.REM_KAT:=_validate.OBJ.REM_KAT;
   REM_KATO.USERS:=_validate.OBJ.USERS
?};
~~


\export
::----------------------------------------------------------------------------------------------------------------------
::  UTW: WH [19.42]
:: OPIS: Wypełnia obiekt który zapisze w Excel wiersz danymi z rekordu
::       Użycie: export
::   WE: _a - obj_new - środowisko mechanizmu
::       _b - obj_new - obiekt który zasilić wartościami z pól
::   WY: ANY - dowolny wynik (zwracany przez _excel.write_async())
::----------------------------------------------------------------------------------------------------------------------
_excel:=_a;
_table:=_b;

_result:=1;
_table.REM_KAT.VALUE:=REM_KATO.REM_KAT().SYMBOL;
_excel.write_async('REM_KAT',REM_KATO.REM_KAT);
_table.USERS.VALUE:=REM_KATO.USERS().KOD;
_excel.write_async('USERS',REM_KATO.USERS);
_result


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: WH [19.42]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;
_can_continue:=1;

_result.RESULT:=0;
_result.OBJ:=obj_new('REM_KAT','USERS');

REM_KAT.cntx_psh();
REM_KAT.index('SYMBOL');
REM_KAT.prefix(_obj.REM_KAT,);
{? REM_KAT.first()
|| _result.OBJ.REM_KAT:=REM_KAT.ref()
|| _result.OBJ.REM_KAT:=null()
?};
REM_KAT.cntx_pop();

USERS.cntx_psh();
USERS.index('USR_AKOD');
USERS.prefix('T',_obj.USERS,);
{? USERS.first()
|| _result.OBJ.USERS:=USERS.ref()
|| _result.OBJ.USERS:=null()
?};
USERS.cntx_pop();

:: Błędy
{? _obj.REM_KAT=''
|| _result.msg_empty('REM_KAT');
   _can_continue:=0
?};
{? _obj.USERS=''
|| _result.msg_empty('USERS');
   _can_continue:=0
?};

{? _obj.REM_KAT<>'' & _result.OBJ.REM_KAT=null()
|| _result.msg_norec('REM_KAT');
   _can_continue:=0
?};

{? _obj.USERS<>'' & _result.OBJ.USERS=null()
|| _result.msg_norec('USERS');
   _can_continue:=0
?};

{? _can_continue>0
||
   REM_KATO.cntx_psh();
   REM_KATO.index('REM_KAT');
   REM_KATO.prefix(_result.OBJ.REM_KAT,_result.OBJ.USERS);
   {? ~REM_KATO.first()
   || _result.ACTION:='add';
      exec('record','xls_rem_kato',_obj,_mode,_result);
      {? exec('rem_kato_valid','remonty_zgloszenia',0)<>''
      || _can_continue:=0
      ?}
   || _can_continue:=0
   ?};
   REM_KATO.cntx_pop();
   ~~
?};
{? _can_continue>0
|| _result.RESULT:=1
?};
~~


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: WH [19.42]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
|| exec('record','xls_rem_kato',_obj,_mode,_validate);
   {? _validate.ACTION='add'
   || _result:=REM_KATO.add(1)
   ?};
   {? _result=0
   || _validate.MSG:='Dodanie opiekuna: %1 kategorii: %2 nie powiodło się.'@[_obj.USERS,_obj.REM_KAT]
   ?}
?};
_result


\select
::----------------------------------------------------------------------------------------------------------------------
::  UTW: WH [19.42]
:: OPIS: Umożliwia wybór rekordów do eksportu
::   WE: _a - tab_tmp - tabela tymczasowa z polem REF którą należy zasilić
::   WY: 0 - użytkownik zrezygnował z wyboru
::       1 - użytkownik potwierdził wybór
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_selected:=_a;

_result:=0;

_tab:=tab_tmp(1
   ,'REM_KAT','STRING[100]','Kategoria zasobów'
   ,'USERS','STRING[100]','Opiekun'
   ,'REF','STRING[16]','SQL ref'
   ,'SELECTED','STRING[1]','Czy wybrano'
);

_ndx:=_tab.ndx_tmp(,,'SELECTED',,,'REM_KAT',,,'USERS',,);

REM_KATO.cntx_psh();
REM_KATO.index('REM_KAT');
REM_KATO.prefix();
{? REM_KATO.first()
|| {!
   |? _tab.blank();
      _tab.REF:=$REM_KATO.ref();
      _selected.prefix($REM_KATO.ref());
      {? _selected.first()
      || _tab.SELECTED:='T'
      || _tab.SELECTED:='N'
      ?};
      _tab.REM_KAT:=REM_KATO.REM_KAT().SYMBOL;
      _tab.USERS:=REM_KATO.USERS().KOD;
      _tab.add();
      REM_KATO.next()
   !}
?};
_result:=exec('select_action','#table',_tab,'REM_KAT,USERS',40,'Wybór opiekunów kategorii zasobów do eksportu'@,1);
{? _result>0
||
   _selected.erase();

   _tab.index(_ndx);
   _tab.prefix('T');
   {? _tab.first()
   || {!
      |?
         _selected.prefix(_tab.REF);
         {? _selected.first()=0
         || _selected.blank();
            _selected.REF:=_tab.REF;
            _selected.add()
         ?};
         _tab.next()
      !}
   ?}
?};
REM_KATO.cntx_pop();
_result

