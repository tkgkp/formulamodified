\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::   WY: 0 - porażka
::       1 - sukces
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;

_result.RESULT:=1;

_result.OBJ:=obj_new('ISTDEF');

ISTDEF.cntx_psh();
ISTDEF.index('LP');
ISTDEF.prefix('','','I',#_obj.TM_STAMP);
_result.OBJ.ISTDEF:={? ISTDEF.first() || ISTDEF.ref() || null() ?};
ISTDEF.cntx_pop();
{? _result.OBJ.ISTDEF=null()
||
   _result.MSG:='Nie znaleziono definicji Intrastat o znaczniku czasowym %1.'@[_obj.TM_STAMP];
   _result.RESULT:=0;
   return(~~)
?};

{? _result.RESULT = 1
||
   ISTDEFS.index('LP');
   ISTDEFS.prefix(_result.OBJ.ISTDEF, _obj.LP);
   {? ISTDEFS.first()
   ||
      {? _mode=0
      || _result.RESULT:=0
      ||
         _result.ACTION:='put';
         exec('record','xls_istdefs',_obj,_mode,_result);
         {? exec('chk_opis','edi_defxml','P')<>''
         ||
            _result.RESULT:=0
         ?}
      ?}
   ||
      _result.ACTION:='add';
      exec('record','xls_istdefs',_obj,_mode,_result);
      {? exec('chk_opis','edi_defxml','D')<>''
      || _result.RESULT:=0
      ?}
   ?}
?};
_result


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
||
   {? _validate.ACTION='add'
   ||
      _result:=ISTDEFS.add(1)
   |? _validate.ACTION='put'
   ||
      _result:=ISTDEFS.put(1)
   ?}
?};
{? _result=0
||
   {? _validate.ACTION='add'
   ||
      FUN.info('Dodanie pozycji %1 struktury definicji Intrastat %2 nie powiodło się.'@[$_obj.LP,_obj.TM_STAMP])
   ||
      FUN.info('Poprawa pozycji %1 struktury definicji Intrastat %2 nie powiodła się.'@[$_obj.LP,_obj.TM_STAMP])
   ?}
?};
_result

