\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='ISTDEFS';
_def.DOMAIN:=exec('name','#b_domain','ZWS');
_def.FUNPAR:='ZWS_DEF_IST';
_def.MULTIFIR:='T';

_def.HIDDEN:='T';
_def.FILE:='intrastat.xlsx';
_def.SHEET:='Struktura Intrastat=1,1';
_def.NAME:='Struktura Intrastat'@;
_def.DESC:='Struktura Intrastat';
_def.TABLE:="exec('table','xls_istdefs')";
_def.FIELDS:="exec('fields','xls_istdefs',_a)";
_def.EXPORT:="exec('export','xls_istdefs',_a,_b)";
_def.IMPORT:="exec('import','xls_istdefs',_a,_b,_c)";
_def.VALIDATE:="exec('validate','xls_istdefs',_a,_b,_c)";
_def.PREFIX:="ISTDEFS.index('XLS'); ISTDEFS.prefix('','I')";
_def.BEFORE:="ISTDEFS.cntx_psh()";
_def.AFTER:="ISTDEFS.cntx_pop()";
