\export
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [20.14]
:: OPIS: Ustawia wartości w polach bufora danych i asynchronicznie zapisuje powiązane dane.
::   WE:
::   WY: 1
::----------------------------------------------------------------------------------------------------------------------
_env:=_a;
_buf:=_b;
_buf.SYSTEM.VALUE:=SD_PAR.SYSTEM;
_buf.KOD.VALUE:=SD_PAR.KOD;
_buf.SD_DOK.VALUE:=SD_PAR.SD_DOK().KOD;
_buf.NUMER.VALUE:=SD_PAR.NUMER;
_buf.SYMBOL.VALUE:=SD_PAR.SYMBOL;
_buf.NAZWA.VALUE:=SD_PAR.NAZWA;
_buf.OPIS.VALUE:=SD_PAR.memo_txt(,1,'OPIS');
_buf.WIDOCZNY.VALUE:=SD_PAR.WIDOCZNY;
_buf.WYMAGANY.VALUE:=SD_PAR.WYMAGANY;
_buf.TYP.VALUE:=SD_PAR.TYP;
_buf.DLUGOSC.VALUE:=SD_PAR.DLUGOSC;
_buf.PRECYZJA.VALUE:=SD_PAR.PRECYZJA;
_buf.OKIENKO.VALUE:=SD_PAR.memo_txt(,1,'OKIENKO');

:: formuły parametru
SD_FML.cntx_psh();
SD_FML.index('NUMER');
SD_FML.prefix(SD_PAR.ref());
_loop:=SD_FML.first();
{!
|? _loop
|! _env.write_async('SD_FML',SD_FML.ref());
   _loop:=SD_FML.next()
!};
SD_FML.cntx_pop();
1


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [20.14]
:: OPIS: Weryfikuje poprawność wiersza odczytanego z pliku wymiany.
::   WE: _a [OBJECT] - tablica nazwana z wartościami pól wiersza pliku wymiany
::       _b [INTEGER] - tryb pracy: 0 - zachowaj istniejące, 1 - nadpisywać istniejące
::       _c [OBJECT] - obiekt z resultem, patrz exec('args_valid','#excel_imex')
::   WY: ~~
::----------------------------------------------------------------------------------------------------------------------
: mapa argumentów
_buf:=_a;
_mod:=_b;
_val:=_c;

: wychwyć błędy krytyczne
_fld:=
   {? _buf.SYSTEM=''   || 'SYSTEM'
   |? _buf.KOD=''      || 'KOD'
   |? _buf.SD_DOK=''   || 'SD_DOK'
   |? _buf.SYMBOL=''   || 'SYMBOL'
   |? _buf.NAZWA=''    || 'NAZWA'
   |? _buf.WIDOCZNY='' || 'WIDOCZNY'
   |? _buf.WYMAGANY='' || 'WYMAGANY'
   |? _buf.TYP=''      || 'TYP'
   || ''
   ?};
{? _fld<>''
:  katastrofa
|| _val.msg_empty(_fld);
   _val.RESULT:=0;
   return()
?};

:: błędne wartości
{? ('TN'*(1+_buf.SYSTEM))=0
|| _val.msg_inset('SYSTEM','T','N');
   _val.RESULT:=0;
   return()
?};
{? ('TN'*(1+_buf.WIDOCZNY))=0
|| _val.msg_inset('WIDOCZNY','T','N');
   _val.RESULT:=0;
   return()
?};
{? ('TN'*(1+_buf.WYMAGANY))=0
|| _val.msg_inset('WYMAGANY','T','N');
   _val.RESULT:=0;
   return()
?};

: ostrzeżenia
_max:=MS.fld_len(SD_PAR,'SYSTEM');
{? +_buf.SYSTEM>_max
|| _val.msg_length('SYSTEM',_max);
   _buf.SYSTEM:=_max+_buf.SYSTEM
?};
_max:=MS.fld_len(SD_PAR,'KOD');
{? +_buf.KOD>_max
|| _val.msg_length('KOD',_max);
   _buf.KOD:=_max+_buf.KOD
?};
_max:=MS.fld_len(SD_DOK,'KOD');
{? +_buf.SD_DOK>_max
|| _val.msg_length('SD_DOK',_max);
   _buf.SD_DOK:=_max+_buf.SD_DOK
?};
_max:=MS.fld_len(SD_PAR,'SYMBOL');
{? +_buf.SYMBOL>_max
|| _val.msg_length('SYMBOL',_max);
   _buf.SYMBOL:=_max+_buf.SYMBOL
?};
_max:=MS.fld_len(SD_PAR,'NAZWA');
{? +_buf.NAZWA>_max
|| _val.msg_length('NAZWA',_max);
   _buf.NAZWA:=_max+_buf.NAZWA
?};
_max:=MS.fld_len(SD_PAR,'WIDOCZNY');
{? +_buf.WIDOCZNY>_max
|| _val.msg_length('WIDOCZNY',_max);
   _buf.WIDOCZNY:=_max+_buf.WIDOCZNY
?};
_max:=MS.fld_len(SD_PAR,'WYMAGANY');
{? +_buf.WYMAGANY>_max
|| _val.msg_length('WYMAGANY',_max);
   _buf.WYMAGANY:=_max+_buf.WYMAGANY
?};

: weryfikacja spójności referencyjnej
_dok:=null;
{? SD_DOK.find_key(_buf.SD_DOK,)
|| _dok:=SD_DOK.ref()
|| _val.msg_norec('SD_WREK');
   _val.RESULT:=0;
   return()
?};

_ref:=null;
{? (SD_PAR.index('KOD'); SD_PAR.find_key(_buf.KOD,)) |
   (SD_PAR.index('SYMBOL'); SD_PAR.find_key(_dok,_buf.SYMBOL,))
|| _ref:=SD_PAR.ref();
   _val.ACTION:='put'
|| _val.ACTION:='add'
?};

: optymalizacja importu i standaryzacja kodu
_val.OBJ:=exec('write_obj','xls__util',_ref,
   "'%1'[_a.KOD]",
   'SD_DOK',_dok
);
