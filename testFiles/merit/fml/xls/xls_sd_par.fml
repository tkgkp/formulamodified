\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [20.14]
:: OPIS: Inicjalizuje mechanizm importu/eksportu.
::   WE: _a [OBJECT] - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;

_def.ID:='SD_PAR';
_def.FUNPAR:='ZWS_PAR_ASDD';
_def.DOMAIN:=exec('name','#b_domain','ZWS');
_def.FILE:=exec('def_sd_def_xlsx','xls__init');
_def.SHEET:='Parametry szablonów=1,1';
_def.NAME:='Parametry szablonów dokumentów'@;
_def.DESC:='Paramatry szablonów dokumentów';
_def.ADD_ROWS:=0;
_def.HIDDEN:='T';
_def.MULTIFIR:='T';

: źródło danych
_def.TABLE:="SD_PAR";

: prolog
_def.BEFORE:="
   SD_PAR.cntx_psh();
   SD_PAR.f_clear();
   SD_PAR.index('KOD');
   SD_PAR.clear();
   SD_DOK.cntx_psh();
   SD_DOK.index('KOD');
   SD_DOK.prefix();
   ~~
";

: epilog
_def.AFTER:="
   SD_DOK.cntx_pop();
   SD_PAR.cntx_pop();
   ~~
";

: definicja kolumn
_def.FIELDS:="
   _env:=_a;
   _env.define('SYSTEM',  MS.name(SD_PAR,'SYSTEM'),0,,  MS.comment(SD_PAR,'SYSTEM'));
   _env.define('KOD',     MS.name(SD_PAR,'KOD'),0,,     MS.comment(SD_PAR,'KOD'));
   _env.define('SD_DOK',  MS.name(SD_PAR,'SD_DOK'),0,,  MS.comment(SD_PAR,'SD_DOK'),type_of(''));
   _env.define('NUMER',   MS.name(SD_PAR,'NUMER'),0,,   MS.comment(SD_PAR,'NUMER'),,0);
   _env.define('SYMBOL',  MS.name(SD_PAR,'SYMBOL'),0,,  MS.comment(SD_PAR,'SYMBOL'));
   _env.define('NAZWA',   MS.name(SD_PAR,'NAZWA'),0,,   MS.comment(SD_PAR,'NAZWA'));
   _env.define('OPIS',    MS.name(SD_PAR,'OPIS'),0,,    MS.comment(SD_PAR,'OPIS'));
   _env.define('WIDOCZNY',MS.name(SD_PAR,'WIDOCZNY'),0,,MS.comment(SD_PAR,'WIDOCZNY'));
   _env.define('WYMAGANY',MS.name(SD_PAR,'WYMAGANY'),0,,MS.comment(SD_PAR,'WYMAGANY'));
   _env.define('TYP',     MS.name(SD_PAR,'TYP'),0,,     MS.comment(SD_PAR,'TYP'));
   _env.define('DLUGOSC', MS.name(SD_PAR,'DLUGOSC'),0,, MS.comment(SD_PAR,'DLUGOSC'),,0);
   _env.define('PRECYZJA',MS.name(SD_PAR,'PRECYZJA'),0,,MS.comment(SD_PAR,'PRECYZJA'),,0);
   _env.define('OKIENKO', MS.name(SD_PAR,'OKIENKO'),0,, MS.comment(SD_PAR,'OKIENKO'));
   ~~
";

: zawartość wiersza
_def.EXPORT:="exec('export','xls_sd_par',_a,_b)";

: weryfikacja i zapis wiersza odczytanego z pliku wymiany
_def.VALIDATE:="exec('validate','xls_sd_par',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_sd_par',_a,_b,_c)";
