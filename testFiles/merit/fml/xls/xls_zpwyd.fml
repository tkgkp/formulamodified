\record
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MW [19.02]
:: OPIS: Uzupełnia bufor tabeli wartościami obiektu
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;
ZPWYD.prefix();
{? _validate.ACTION='add'
||
   ZPWYD.blank()
?};
ZPWYD.PWYD:=_obj.PWYD;
~~


\export
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MW [19.02]
:: OPIS: Wypełnia obiekt który zapisze w Excel wiersz danymi z rekordu
::       Użycie: export
::   WE: _a - obj_new - środowisko mechanizmu
::       _b - obj_new - obiekt który zasilić wartościami z pól
::   WY: ANY - dowolny wynik (zwracany przez _excel.write_async())
::----------------------------------------------------------------------------------------------------------------------
_excel:=_a;
_table:=_b;

{? 1+ZPWYD.PWYD='~'
||
   _result:=0
||
   _result:=1;
   _table.PWYD.VALUE:=ZPWYD.PWYD
?};
_result


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MW [19.02]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;

_result.RESULT:=1;

{? 1+_obj.PWYD='~'
|| _result.msg_value('PWYD','Zastrzeżona podstawa powołania zlecenia nie może być importowana.');
   _result.RESULT:=0
?};

{? (+_obj.PWYD)>60 ||
  _result.msg_length('PWYD',60);
  _result.RESULT:=0
?};

{? _result.RESULT>0
||
  ZPWYD.index('ZPWYD_PW');
  ZPWYD.prefix(_obj.PWYD,);
  {? ZPWYD.first()
  ||
    {? _mode=0
    || _result.RESULT:=0
    ||
      _result.ACTION:='put';
      exec('record','xls_zpwyd',_obj,_mode,_result);
      {? exec('chk_zpwyd','zl_head',1)<>''
      ||
         _result.RESULT:=0
      ?}
    ?}
  ||
    _result.ACTION:='add';
    exec('record','xls_zpwyd',_obj,_mode,_result);
    {? exec('chk_zpwyd','zl_head',0)<>''
    || _result.RESULT:=0
    ?}
  ?}
?};
~~


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MW [19.02]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
||
   {? _validate.ACTION='add'
   ||
      _result:=ZPWYD.add(1)
   |? _validate.ACTION='put'
   ||
      _result:=ZPWYD.put(1)
   ?}
?};
{? _result=0
||

   {? _validate.ACTION='add'
   ||
      _validate.MSG:='Dodanie podstawy powołania zlecenia "%1" nie powiodło się.'@[_obj.PWYD]
   ||
      _validate.MSG:='Poprawa podstawy powołania zlecenia "%1" nie powiodła się.'@[_obj.PWYD]
   ?}
?};
_result


\select
::----------------------------------------------------------------------------------------------------------------------
::  UTW: MW [19.02]
:: OPIS: Umożliwia wybór rekordów do eksportu
::   WE: _a - tab_tmp - tabela tymczasowa z polem REF którą należy zasilić
::   WY: 0 - użytkownik zrezygnował z wyboru
::       1 - użytkownik potwierdził wybór
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_selected:=_a;

_result:=0;

_tab:=tab_tmp(2,'REF','STRING[16]','SQL ref'
   ,'SELECTED','STRING[1]','Czy wybrano'
   ,'PWYD','STRING[60]','Podstawa powołania zlecenia');

_ndx:=_tab.ndx_tmp(,,'SELECTED',,,'PWYD',,);

ZPWYD.cntx_psh();
ZPWYD.index('ZPWYD_PW');
ZPWYD.prefix();
{? ZPWYD.first()
|| {!
   |?
      _tab.blank();
      _tab.REF:=$ZPWYD.ref();
      _selected.prefix($ZPWYD.ref());
      {? _selected.first()
      || _tab.SELECTED:='T'
      || _tab.SELECTED:='N'
      ?};
      _tab.PWYD:=ZPWYD.PWYD;
      _tab.add();
      ZPWYD.next()
   !}
?};
_result:=exec('select_action','#table',_tab
 ,'PWYD',20,'Wybór podstaw powołania zlecenia do eksportu'@,1);
{? _result>0
||
   _selected.erase();

   _tab.index(_ndx);
   _tab.prefix('T');
   {? _tab.first()
   || {!
      |?
         _selected.prefix(_tab.REF);
         {? _selected.first()=0
         || _selected.blank();
            _selected.REF:=_tab.REF;
            _selected.add()
         ?};
         _tab.next()
      !}
   ?}
?};
ZPWYD.cntx_pop();

_result

