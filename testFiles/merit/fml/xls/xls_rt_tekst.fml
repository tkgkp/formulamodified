\export
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [20.42]
:: OPIS: Ustawia wartości w polach bufora danych i asynchronicznie zapisuje powiązane dane.
::   WE:
::   WY: 1
::----------------------------------------------------------------------------------------------------------------------
:: mapa argumentów
_env:=_a;
_buf:=_b;

RT_TEKST.RT_KONF();
_buf.TABELA.VALUE:=RT_KONF.TABELA;
_buf.POLE.VALUE:=RT_KONF.POLE;
_buf.WARTOSC.VALUE:=RT_KONF.WARTOSC;
_buf.OPIS.VALUE:=RT_KONF.OPIS;
_buf.DL_OBCY.VALUE:=RT_KONF.DL_OBCY;
_buf.KOD.VALUE:=RT_TEKST.SLO_KOD().KOD;
_buf.ORYGINAL.VALUE:=RT_TEKST.ORYGINAL;
_buf.OBCY.VALUE:=RT_TEKST.OBCY;

_env.write_async('RT_KONF',RT_TEKST.RT_KONF);
_env.write_async('SLO_KOD',RT_TEKST.SLO_KOD);

1


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [20.42]
:: OPIS: Weryfikuje poprawność wiersza odczytanego z pliku wymiany.
::   WE: _a [OBJECT] - tablica nazwana z wartościami pól wiersza pliku wymiany
::       _b [INTEGER] - tryb pracy: 0 - zachowaj istniejące, 1 - nadpisywać istniejące
::       _c [OBJECT] - obiekt z resultem, patrz exec('args_valid','#excel_imex')
::   WY: ~~
::----------------------------------------------------------------------------------------------------------------------
:: mapa argumentów
_buf:=_a;
_mod:=_b;
_val:=_c;

: wychwyć błędy krytyczne
_fld:=
   {? _buf.TABELA=''   || 'TABELA'
   |? _buf.POLE=''     || 'POLE'
   |? _buf.KOD=''      || 'KOD'
   |? _buf.ORYGINAL='' || 'ORYGINAL'
   || ''
   ?};
{? _fld<>''
:  katastrofa
|| _val.msg_empty(_fld);
   _val.RESULT:=0;
   return()
?};

: ostrzeżenia
_max:=MS.fld_len(RT_KONF,'TABELA');
{? +_buf.TABELA>_max
|| _val.msg_length('TABELA',_max);
   _buf.TABELA:=_max+_buf.TABELA
?};
_max:=MS.fld_len(RT_KONF,'POLE');
{? +_buf.POLE>_max
|| _val.msg_length('POLE',_max);
   _buf.POLE:=_max+_buf.POLE
?};
_max:=MS.fld_len(RT_KONF,'WARTOSC');
{? +_buf.WARTOSC>_max
|| _val.msg_length('WARTOSC',_max);
   _buf.WARTOSC:=_max+_buf.WARTOSC
?};
_max:=MS.fld_len(SLO_KOD,'KOD');
{? +_buf.KOD>_max
|| _val.msg_length('KOD',_max);
   _buf.KOD:=_max+_buf.KOD
?};
_max:=MS.fld_len(RT_TEKST,'ORYGINAL');
{? +_buf.ORYGINAL>_max
|| _val.msg_length('ORYGINAL',_max);
   _buf.ORYGINAL:=_max+_buf.ORYGINAL
?};
_max:=MS.fld_len(RT_TEKST,'OBCY');
{? +_buf.OBCY>_max
|| _val.msg_length('OBCY',_max);
   _buf.OBCY:=_max+_buf.OBCY
?};

: weryfikacja spójności referencyjnej
{? RT_KONF.find_key(_buf.TABELA,_buf.POLE,_buf.WARTOSC,)
|| _cfg:=RT_KONF.ref()
|| _val.msg_norec('TABELA');
   _val.RESULT:=0;
   return()
?};
{? (_kod:=exec('kod','ext_slo','JEZRTL',_buf.KOD))=null
|| _val.msg_norec('KOD');
   _val.RESULT:=0;
   return()
?};

_ref:=null;
{? RT_TEKST.find_key(_buf.TABELA,_buf.POLE,_buf.WARTOSC,_buf.ORYGINAL,)
|| _ref:=RT_TEKST.ref();
   _val.ACTION:='put'
|| _val.ACTION:='add'
?};

: optymalizacja importu i standaryzacja kodu
_val.OBJ:=exec('write_obj','xls__util',_ref,
   "'%1, %2%3'[_a.TABELA,_a.POLE,{? _a.WARTOSC<>'' || ' (%1)'[_a.WARTOSC] || '' ?}]",
   'RT_KONF',_cfg,
   'SLO_KOD',_kod
);
