\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [20.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu.
::   WE: _a [OBJECT] - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
:: mapa argumentów
_def:=_a;

_def.ID:='RT_TEKST';
_def.FUNPAR:='ZWS_PAR_ARTL';
_def.DOMAIN:=exec('name','#b_domain','ZWS');
_def.FILE:=exec('def_rt_xlsx','xls__init');
_def.SHEET:='Zawartość rejestru=1,1';
_def.NAME:='Zawartość rejestru'@;
_def.DESC:='Zawartość rejestru';
_def.ADD_ROWS:=0;
_def.HIDDEN:='N';
_def.MULTIFIR:='T';

: źródło danych
_def.TABLE:="RT_TEKST";

: prolog
_def.BEFORE:="
   RT_TEKST.cntx_psh();
   RT_TEKST.index('DEF');
   RT_TEKST.clear();
   RT_KONF.cntx_psh();
   RT_KONF.index('UNIQUE');
   RT_KONF.clear();
   SLO_KOD.cntx_psh();
   SLO_KOD.clear();
   ~~
";

: epilog
_def.AFTER:="
   SLO_KOD.cntx_pop();
   RT_KONF.cntx_pop();
   RT_TEKST.cntx_pop();
   ~~
";

: definicja kolumn
_def.FIELDS:="
   _env:=_a;
   _env.define('TABELA',  MS.name(RT_KONF,'TABELA'),0,,   MS.comment(RT_KONF,'TABELA'));
   _env.define('POLE',    MS.name(RT_KONF,'POLE'),0,,     MS.comment(RT_KONF,'POLE'));
   _env.define('WARTOSC', MS.name(RT_KONF,'WARTOSC'),0,,  MS.comment(RT_KONF,'WARTOSC'));
   _env.define('OPIS',    MS.name(RT_KONF,'OPIS'),0,,     MS.comment(RT_KONF,'OPIS'));
   _env.define('DL_OBCY', MS.name(RT_KONF,'DL_OBCY'),0,,  MS.comment(RT_KONF,'DL_OBCY'),type_of(0),0);
   _env.define('KOD',     MS.name(SLO_KOD,'KOD'),0,,      MS.comment(SLO_KOD,'KOD'));
   _env.define('ORYGINAL',MS.name(RT_TEKST,'ORYGINAL'),0,,MS.comment(RT_TEKST,'ORYGINAL'));
   _env.define('OBCY',    MS.name(RT_TEKST,'OBCY'),1,,    MS.comment(RT_TEKST,'OBCY'));
   ~~
";

: zawartość wiersza
_def.EXPORT:="exec('export','xls_rt_tekst',_a,_b)";

: weryfikacja i zapis wiersza odczytanego z pliku wymiany
_def.VALIDATE:="exec('validate','xls_rt_tekst',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_rt_tekst',_a,_b,_c)";
