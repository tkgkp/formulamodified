\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: TS [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='TWRKPLC';
_def.DOMAIN:=exec('name','#b_domain','TTE');
_def.FUNPAR:='ZWS_PAR_TZAS';

_def.FILE:='produkcja.xlsx';
_def.SHEET:='Stanowiska produkcyjne'@+'=1,1';
_def.NAME:='Stanowiska produkcyjne'@;
_def.DESC:='Stanowiska produkcyjne'@;

_def.PREFIX:="TWRKPLC.index('KOD'); TWRKPLC.prefix()";
_def.TABLE:="TWRKPLC";
_def.FIELDS:="exec('fields','xls_twrkplc',_a)";

_def.BEFORE:="TWRKPLC.cntx_psh()";
_def.AFTER:="TWRKPLC.cntx_pop()";
_def.SELECT:="exec('select','xls_twrkplc',_a)";

_def.EXPORT:="exec('export','xls_twrkplc',_a,_b)";
_def.VALIDATE:="exec('validate','xls_twrkplc',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_twrkplc',_a,_b,_c)";
