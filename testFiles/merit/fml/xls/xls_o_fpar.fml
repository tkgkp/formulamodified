\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [21.14]
:: OPIS: Weryfikuje poprawność wiersza odczytanego z pliku wymiany.
::   WE: _a [OBJECT] - tablica nazwana z wartościami pól wiersza pliku wymiany
::       _b [INTEGER] - tryb pracy: 0 - zachowaj istniejące, 1 - nadpisywać istniejące
::       _c [OBJECT] - obiekt z resultem, patrz exec('args_valid','#excel_imex')
::   WY: ~~
::----------------------------------------------------------------------------------------------------------------------
: mapa argumentów
_buf:=_a;
_mod:=_b;
_val:=_c;

: wychwyć błędy krytyczne
_fld:=
   {? _buf.O_DPAR=''   || 'O_DPAR'
   |? _buf.WLACZONY='' || 'TYP'
   |? _buf.WYM_JEST='' || 'WYM_JEST'
   |? _buf.MOD_BL=''   || 'MOD_BL'
   |? _buf.MOD_AE=''   || 'MOD_AE'
   || ''
   ?};
{? _fld<>''
:  katastrofa
|| _val.msg_empty(_fld);
   _val.RESULT:=0;
   return()
?};

:: błędne wartości
{? ('TN'*(1+_buf.WLACZONY))=0
|| _val.msg_inset('WLACZONY','T','N');
   _val.RESULT:=0;
   return()
|? ('TN'*(1+_buf.WYM_JEST))=0
|| _val.msg_inset('WYM_JEST','T','N');
   _val.RESULT:=0;
   return()
|? ('TN'*(1+_buf.MOD_BL))=0
|| _val.msg_inset('MOD_BL','T','N');
   _val.RESULT:=0;
   return()
|? ('TN'*(1+_buf.MOD_AE))=0
|| _val.msg_inset('MOD_AE','T','N');
   _val.RESULT:=0;
   return()
?};

: ostrzeżenia
_max:=MS.fld_len(O_DPAR,'KOD');
{? +_buf.O_DPAR>_max
|| _val.msg_length('O_DPAR',_max);
   _buf.SYSTEM:=_max+_buf.SYSTEM
?};

_def:=null;
{? O_DPAR.find_key(_buf.O_DPAR,)
|| _def:=O_DPAR.ref()
|| _val.msg_norec('O_DPAR');
   _val.RESULT:=0;
   return()
?};

_ref:=null;
{? O_FPAR.find_tab(,'O_DPAR',,'=',_def)
|| _ref:=O_FPAR.ref();
   _val.ACTION:='put'
|| _val.ACTION:='add'
?};

: optymalizacja importu i standaryzacja kodu
_val.OBJ:=exec('write_obj','xls__util',_ref,
   "'%1'[_a.O_DPAR]",
   'O_DPAR',_def
);
~~


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [21.14]
:: OPIS: Tworzy lub modyfikuje wiersze na podstawie wartości odczytanych z pliku wymiany.
::   WE: _a [OBJECT] - tablica nazwana z wartościami pól wiersza pliku wymiany
::       _b [INTEGER] - tryb pracy: 0 - zachowaj istniejące, 1 - nadpisywać istniejące
::       _c [OBJECT] - rezultat walidacji i importu, patrz exec('args_valid','#excel_imex')
::   WY: ~~
::----------------------------------------------------------------------------------------------------------------------
exec('write','xls__util',_a,_b,_c,O_FPAR,"
   _a.FIRMA:=exec('ref_firma','ustawienia');
   _a.O_DPAR:=_c.O_DPAR;
   _a.WLACZONY:=_b.WLACZONY;
   _a.WYM_JEST:=_b.WYM_JEST;
   _a.MOD_BL:=_b.MOD_BL;
   _a.memo_set(_b.FML_BL,'FML_BL');
   _a.MOD_AE:=_b.MOD_AE;
   _a.memo_set(_b.FML_AE,'FML_AE');
   ~~
",'FML_BL,FML_AE');
