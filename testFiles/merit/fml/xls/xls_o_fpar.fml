\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: jaws [21.14]
:: OPIS: Inicjalizuje mechanizm importu/eksportu.
::   WE: _a [OBJECT] - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
:: mapa argumentów
_def:=_a;

_def.ID:='O_FPAR';
_def.FUNPAR:='ZWS_PAR_PALS';
_def.DOMAIN:=exec('name','#b_domain','ZWS');
_def.FILE:=exec('def_o_par','xls__init');
_def.SHEET:='Parametry w firmie=1,1';
_def.NAME:='Parametry w firmie'@;
_def.DESC:='Parametry w firmie';
_def.ADD_ROWS:=0;
_def.HIDDEN:='N';

: źródło danych
_def.TABLE:="O_FPAR";

: prolog
_def.BEFORE:="
   O_DPAR.cntx_psh();
   O_DPAR.index('KOD');
   O_DPAR.prefix();
   O_FPAR.cntx_psh();
   O_FPAR.index('SYMBOL');
   _ref:=exec('ref_firma','ustawienia');
   {? _a.is_export() & exec('runtime_dro','#system')
   || _ref:=null
   ?};
   O_FPAR.prefix(_ref);
   ~~
";

: epilog
_def.AFTER:="
   O_FPAR.cntx_pop();
   O_DPAR.cntx_pop();
   ~~
";

: definicja kolumn
_def.FIELDS:="
   _env:=_a;
   _env.define('O_DPAR',  MS.name(O_FPAR,'O_DPAR'),0,,  MS.comment(O_FPAR,'O_DPAR'));
   _env.define('SYMBOL',  MS.name(O_DPAR,'SYMBOL'),0,,  MS.comment(O_DPAR,'SYMBOL'));
   _env.define('NAZWA',   MS.name(O_DPAR,'NAZWA'),0,,   MS.comment(O_DPAR,'NAZWA'));
   _env.define('WLACZONY',MS.name(O_FPAR,'WLACZONY'),0,,MS.comment(O_FPAR,'WLACZONY'));
   _env.define('WYM_JEST',MS.name(O_FPAR,'WYM_JEST'),0,,MS.comment(O_FPAR,'WYM_JEST'));
   _env.define('MOD_BL',  MS.name(O_FPAR,'MOD_BL'),0,,  MS.comment(O_FPAR,'MOD_BL'));
   _env.define('FML_BL',  MS.name(O_FPAR,'FML_BL'),0,,  MS.comment(O_FPAR,'FML_BL'));
   _env.define('MOD_AE',  MS.name(O_FPAR,'MOD_AE'),0,,  MS.comment(O_FPAR,'MOD_AE'));
   _env.define('FML_AE',  MS.name(O_FPAR,'FML_AE'),0,,  MS.comment(O_FPAR,'FML_AE'));
   ~~
";

: zawartość wiersza
_def.EXPORT:="exec('export','xls_o_fpar',_a,_b)";

: weryfikacja i zapis wiersza odczytanego z pliku wymiany
_def.VALIDATE:="exec('validate','xls_o_fpar',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_o_fpar',_a,_b,_c)";
~~


