\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [19.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='TR_RODZ';
_def.DOMAIN:=exec('name','#b_domain','LTR');
_def.FUNPAR:='ZWS_ZLE_RODZ';
_def.MULTIFIR:='T';

_def.FILE:='transport.xlsx';
_def.SHEET:='Definicja kategorii transportu=1,1';
_def.NAME:='Definicja kategorii transportu'@;
_def.DESC:='Definicja kategorii transportu';
_def.TABLE:="exec('table','xls_tr_rodz')";
_def.FIELDS:="exec('fields','xls_tr_rodz',_a)";
_def.EXPORT:="exec('export','xls_tr_rodz',_a,_b)";
_def.IMPORT:="exec('import','xls_tr_rodz',_a,_b,_c)";
_def.VALIDATE:="exec('validate','xls_tr_rodz',_a,_b,_c)";
_def.SELECT:="exec('select','xls_tr_rodz',_a)";
_def.PREFIX:="TR_RODZ.index('KOD'); TR_RODZ.prefix()";
_def.BEFORE:="TR_RODZ.cntx_psh()";
_def.AFTER:="TR_RODZ.cntx_pop()";
