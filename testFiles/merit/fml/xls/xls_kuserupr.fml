\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='KUSERUPR';
_def.DOMAIN:=exec('name','#b_domain','KAS');
_def.FUNPAR:='ZWS_PAR_FKMK';

_def.FILE:='kasa.xlsx';
_def.SHEET:='Uprawnienia multikasa=1,1';
_def.NAME:='Uprawnienia multikasa'@;
_def.DESC:='Uprawnienia użytkowników do stanowisk kasowych';
_def.TABLE:="exec('table','xls_kuserupr')";
_def.FIELDS:="exec('fields','xls_kuserupr',_a)";
_def.EXPORT:="exec('export','xls_kuserupr',_a,_b)";
_def.IMPORT:="exec('import','xls_kuserupr',_a,_b,_c)";
_def.VALIDATE:="exec('validate','xls_kuserupr',_a,_b,_c)";
_def.SELECT:="exec('select','xls_kuserupr',_a)";
_def.PREFIX:="KUSERUPR.index('KU'); KUSERUPR.prefix(null)";
_def.BEFORE:="KUSERUPR.cntx_psh()";
_def.AFTER:="KUSERUPR.cntx_pop()";
