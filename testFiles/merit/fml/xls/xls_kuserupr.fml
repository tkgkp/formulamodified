\export
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Wypełnia obiekt który zapisze w Excel wiersz danymi z rekordu
::       Użycie: export
::   WE: _a - obj_new - środowisko mechanizmu
::       _b - obj_new - obiekt który zasilić wartościami z pól
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_excel:=_a;
_table:=_b;

_result:=1;

_table.MKASA.VALUE:=KUSERUPR.MKASA().NAZ;
_excel.write_async('MKASA',KUSERUPR.MKASA);

_table.KU.VALUE:=KUSERUPR.KU().KOD;
_excel.write_async('USERS',KUSERUPR.KU);

_table.STANKAS.VALUE:=form(KUSERUPR.STANKAS().KOD,,,'99');
_excel.write_async('STANKAS',KUSERUPR.STANKAS);

_table.STANKASN.VALUE:=KUSERUPR.STANKASN;
_table.UPR.VALUE:=KUSERUPR.UPR;
_table.LP.VALUE:=KUSERUPR.LP;
_table.MTAB.VALUE:=KUSERUPR.MTAB;
_table.TAB.VALUE:=KUSERUPR.TAB;
_table.DOKUMENT.VALUE:=KUSERUPR.DOKUMENT;
_table.POZDOK.VALUE:=KUSERUPR.POZDOK;
_result


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::   WY: 0 - porażka
::       1 - sukces
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;

_result.RESULT:=1;

_result.OBJ:=obj_new('MKASA', 'KU', 'STANKAS');

{? _obj.MKASA='' & _obj.KU=''
   | _obj.MKASA<>'' & _obj.KU<>''
|| _result.RESULT:=0;
   _result.MSG:='Niewłaściwa parametryzacja uprawnień użytkownika do stanowiska kasowego lub pozycji multikasy.';
   return(~~)
?};

{? _obj.MKASA=''
||
   _result.OBJ.MKASA:=null()
||
   _result.OBJ.MKASA:=exec('FindInSet','#table','MKASA','NAZ',_obj.MKASA,,,1);
   {? _result.OBJ.MKASA=null()
   ||
      _result.MSG:='Nie znaleziono multikasy o nazwie %1.'@[_obj.MKASA];
      _result.RESULT:=0;
      return(~~)
   ?}
?};

{? _obj.KU=''
||
   _result.OBJ.KU:=null()
||
   _result.OBJ.KU:=exec('FindInSet','#table','USERS','USR_AKOD',_obj.KU,'T',,1);
   {? _result.OBJ.KU=null()
   ||
      _result.MSG:='Nie znaleziono użytkownika o kodzie %1.'@[_obj.KU];
      _result.RESULT:=0;
      return(~~)
   ?}
?};

{? _obj.STANKAS=''
||
   _result.OBJ.STANKAS:=null()
||
   _result.OBJ.STANKAS:=exec('FindInSet','#table','STANKAS','KOD',#_obj.STANKAS);
   {? _result.OBJ.STANKAS=null()
   ||
      _result.MSG:='Nie znaleziono stanowiska o kodzie %1.'@[_obj.STANKAS];
      _result.RESULT:=0;
      return(~~)
   ?}
?};

{? _result.RESULT = 1
||
   KUSERUPR.index('KU');
   KUSERUPR.prefix(_result.OBJ.KU, #_obj.STANKAS, _result.OBJ.MKASA);
   {? KUSERUPR.first() & KUSERUPR.MKASA = _result.OBJ.MKASA
   ||
      {? _mode=0
      || _result.RESULT:=0
      ||
         _result.ACTION:='put';
         exec('record','xls_kuserupr',_obj,_mode,_result);
         {? exec('kuserupr_chk','kasa_wspolne')<>''
         ||
            _result.RESULT:=0
         ?}
      ?}
   ||
      _result.ACTION:='add';
      exec('record','xls_kuserupr',_obj,_mode,_result);
      {? exec('kuserupr_chk','kasa_wspolne')<>''
      || _result.RESULT:=0
      ?}
   ?}
?};
_result


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
||
   {? _validate.ACTION='add'
   ||
      _result:=KUSERUPR.add(1)
   |? _validate.ACTION='put'
   ||
      _result:=KUSERUPR.put(1)
   ?}
?};
{? _result=0
||
   {? _validate.ACTION='add'
   ||
      FUN.info('Dodanie uprawnień multikasy: %1 dla użytkownika: %2 na stanowisku: %3 nie powiodło się.'@[_obj.MKASA, _obj.KU, _obj.STANKAS])
   ||
      FUN.info('Poprawa uprawnień multikasy: %1 dla użytkownika: %2 na stanowisku: %3 nie powiodło się.'@[_obj.MKASA, _obj.KU, _obj.STANKAS])
   ?}
?};
_result


\select
::----------------------------------------------------------------------------------------------------------------------
::  UTW: Markus [18.42]
:: OPIS: Umożliwia wybór rekordów do eksportu
::   WE: _a - tab_tmp - tabela tymczasowa z polem REF którą należy zasilić
::   WY: 0 - użytkownik zrezygnował z wyboru
::       1 - użytkownik potwierdził wybór
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_selected:=_a;

_result:=0;

_tab:=tab_tmp(1,'STANKASN','STRING[30]','Nazwa stanowiska'
   ,'REF','STRING[16]','SQL ref'
   ,'SELECTED','STRING[1]','Czy wybrano'
   ,'LP','INTEGER','Lp.'
   ,'MKASA','STRING[100]','Nazwa multikasy'
   ,'KU','STRING[30]','Użytkownik');

_ndx:=_tab.ndx_tmp(,,'SELECTED',,,'STANKASN',,);

KUSERUPR.cntx_psh();
KUSERUPR.index('KU');
KUSERUPR.prefix(null);
{? KUSERUPR.first()
|| {!
   |?
      _tab.blank();
      _tab.REF:=$KUSERUPR.ref();
      _selected.prefix($KUSERUPR.ref());
      {? _selected.first()
      || _tab.SELECTED:='T'
      || _tab.SELECTED:='N'
      ?};
      _tab.STANKASN:=KUSERUPR.STANKASN;
      _tab.LP:=KUSERUPR.LP;
      _tab.MKASA:=KUSERUPR.MKASA().NAZ;
      _tab.KU:=KUSERUPR.KU().NAME;
      _tab.add();
      KUSERUPR.next()
   !}
?};
_result:=exec('select_action','#table',_tab
 ,'STANKASN,LP,MKASA,KU',20,'Wybór uprawnień multikasy do eksportu'@,1);
{? _result>0
||
   _selected.erase();

   _tab.index(_ndx);
   _tab.prefix('T');
   {? _tab.first()
   || {!
      |?
         _selected.prefix(_tab.REF);
         {? _selected.first()=0
         || _selected.blank();
            _selected.REF:=_tab.REF;
            _selected.add()
         ?};
         _tab.next()
      !}
   ?}
?};
KUSERUPR.cntx_pop();

_result

