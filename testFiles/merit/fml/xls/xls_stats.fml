\record
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Uzupełnia bufor tabeli wartościami obiektu
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

STATS.index('NN');
STATS.prefix();
{? _validate.ACTION='add'
||
   STATS.blank();
   STATS.N:=_obj.N;
   STATS.KIND:=_obj.KIND
|? _validate.ACTION='put'
||
:: domyślne systemowe statusy - nie zmieniamy rodzajów żeby się nie podupiło
   _can_continue:=1;
   {? _obj.N='~Zgodny'
   || _can_continue:=0
   |? _obj.N='~Niezgodny'
   || _can_continue:=0
   |? _obj.N='~Nieokreślony'
   || _can_continue:=0
   ?};
   {? _can_continue>0
   || STATS.KIND:=_obj.KIND
   ?}
?};
STATS.ICON:=_obj.ICON;
~~


\export
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Wypełnia obiekt który zapisze w Excel wiersz danymi z rekordu
::       Użycie: export
::   WE: _a - obj_new - środowisko mechanizmu
::       _b - obj_new - obiekt który zasilić wartościami z pól
::   WY: ANY - dowolny wynik (zwracany przez _excel.write_async())
::----------------------------------------------------------------------------------------------------------------------
_excel:=_a;
_table:=_b;

_result:=1;
_table.N.VALUE:=STATS.N;
_table.KIND.VALUE:=STATS.KIND;
_table.ICON.VALUE:=STATS.ICON;
_result


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;

_result.RESULT:=1;

{? (+_obj.N)>40 || _result.msg_length('N',40); _result.RESULT:=0 ?};
{? (+_obj.KIND)<>1 | ~((';ZNO'*_obj.KIND)>1) || _result.msg_inset('KIND','Z','N','O'); _result.RESULT:=0 ?};

{? _result.RESULT=1
||
   STATS.index('NN');
   STATS.prefix(_obj.N,);
   {? STATS.first()
   || {? _mode=0
      || _result.RESULT:=0
      || _result.ACTION:='put';
         exec('record','xls_stats',_obj,_mode,_result);
         {? ~exec('stats_afe','statexam',2) || _result.RESULT:=0 ?}
      ?}
   || _result.ACTION:='add';
      exec('record','xls_stats',_obj,_mode,_result);
      {? ~exec('stats_afe','statexam',1) || _result.RESULT:=0 ?}
   ?}
?};
~~


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
|| {? _validate.ACTION='add'
   || _result:=STATS.add(1)
   |? _validate.ACTION='put'
   || _result:=STATS.put(1)
   ?}
?};
{? _result=0
|| _validate.MSG:='Dodanie definicji statusu dostawy %1 nie powiodło się.'@[STATS.N]
?};
_result


\select
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Umożliwia wybór rekordów do eksportu
::   WE: _a - tab_tmp - tabela tymczasowa z polem REF którą należy zasilić
::       _b - typ atrybutów: 'B'-indeksu, 'C'-dostaw
::   WY: 0 - użytkownik zrezygnował z wyboru
::       1 - użytkownik potwierdził wybór
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_selected:=_a;

_result:=0;

_tab:=tab_tmp(1,'N','STRING[40]','Nazwa'
   ,'REF','STRING[16]','SQL ref'
   ,'SELECTED','STRING[1]','Czy wybrano'
   ,'KIND','STRING[1]','Typ'
   ,'ICON','STRING[20]','Ikona');

_ndx:=_tab.ndx_tmp(,,'SELECTED',,,'N',,);

STATS.cntx_psh();
STATS.index('NN');
STATS.prefix();
{? STATS.first()
|| {!
   |?
      _tab.blank();
      _tab.REF:=$STATS.ref();
      _selected.prefix($STATS.ref());
      {? _selected.first()
      || _tab.SELECTED:='T'
      || _tab.SELECTED:='N'
      ?};
      _tab.N:=STATS.N;
      _tab.KIND:=STATS.KIND;
      _tab.ICON:=STATS.ICON;
      _tab.add();
      STATS.next()
   !}
?};
_result:=exec('select_action','#table',_tab
 ,'N,KIND,ICON',20,'Wybór statusów dostaw do eksportu'@,1);
{? _result>0
||
   _selected.erase();

   _tab.index(_ndx);
   _tab.prefix('T');
   {? _tab.first()
   || {!
      |?
         _selected.prefix(_tab.REF);
         {? _selected.first()=0
         || _selected.blank();
            _selected.REF:=_tab.REF;
            _selected.add()
         ?};
         _tab.next()
      !}
   ?}
?};
STATS.cntx_pop();
_result

