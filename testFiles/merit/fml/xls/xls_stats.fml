\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: [rr] [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='STATS';
_def.DOMAIN:=exec('name','#b_domain','LMG');
_def.FUNPAR:='LMG_KDOST_BAD';

_def.FILE:='logistyka_badania.xlsx';
_def.SHEET:='Statusy dostaw=1,1';
_def.NAME:='Definicja statusów dostawy'@;
_def.DESC:='Definicja statusów dostawy';

_def.PREFIX:="exec('prefix','xls_stats')";
_def.TABLE:="exec('table','xls_stats')";
_def.FIELDS:="exec('fields','xls_stats',_a)";

_def.BEFORE:="STATS.cntx_psh()";
_def.AFTER:="STATS.cntx_pop()";
_def.SELECT:="exec('select','xls_stats',_a)";

_def.EXPORT:="exec('export','xls_stats',_a,_b)";
_def.IMPORT:="exec('import','xls_stats',_a,_b,_c)";
_def.VALIDATE:="exec('validate','xls_stats',_a,_b,_c)";
~~


