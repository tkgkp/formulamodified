_def.DESC:='Koszty projektów'@;

_def.PREFIX:="PR_KOS.index('PR_KOS_P');PR_KOS.prefix()
";
_def.TABLE:="PR_KOS";
_def.FIELDS:="exec('fields','xls_pr_kos',_a)";

_def.BEFORE:="PR_KOS.cntx_psh()";
_def.AFTER:="PR_KOS.cntx_pop()";

_def.EXPORT:="exec('export','xls_pr_kos',_a,_b)";
_def.VALIDATE:="exec('validate','xls_pr_kos',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_pr_kos',_a,_b,_c)";
