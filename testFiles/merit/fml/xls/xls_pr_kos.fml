::  UTW: PD [22.26]
:: OPIS: Wypełnia obiekt który zapisze w Excel wiersz danymi z rekordu
::       Użycie: export
::   WE: _a - obj_new - środowisko mechanizmu
::       _b - obj_new - obiekt który zasilić wartościami z pól
::   WY: ANY - dowolny wynik (zwracany przez _excel.write_async())
::----------------------------------------------------------------------------------------------------------------------
_excel:=_a;
_table:=_b;

_result:=1;
_table.REF.VALUE:=$PR_KOS.ref();
_table.PROJEKTY.VALUE:=PR_KOS.PROJEKTY().ID_WEW;
_table.OPIS.VALUE:=PR_KOS.OPIS;
_table.GR_K.VALUE:=PR_KOS.GR_K().KOD;
_table.M.VALUE:=PR_KOS.M().KTM;
_table.IL.VALUE:=PR_KOS.IL;
_table.SV.VALUE:=PR_KOS.SV().KOD;
_table.WAL.VALUE:=PR_KOS.WAL().KOD;
_table.KRS.VALUE:=PR_KOS.KRS;
_table.DTK.VALUE:=PR_KOS.DTK;
_table.CW.VALUE:=PR_KOS.CW;
_table.CN.VALUE:=PR_KOS.CN;
_table.CB.VALUE:=PR_KOS.CB;
_table.WN.VALUE:=PR_KOS.WN;
_table.WB.VALUE:=PR_KOS.WB;
_table.WW.VALUE:=PR_KOS.WW;
_table.WV.VALUE:=PR_KOS.WV;
_result


\validate
::----------------------------------------------------------------------------------------------------------------------
::  UTW: PD [22.26]
:: OPIS: Waliduje czy można poprawić/dodać rekord
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów do przekazania dla import)
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_result:=_c;
_result.RESULT:=1;
_result.OBJ:=obj_new('PROJEKTY','GR_K','M','SV','WAL');

_result.OBJ.PROJEKTY:=  {? _obj.PROJEKTY=''
                        || null()
                        || exec('FindInSet','#table','PROJEKTY','ID_WEW',_obj.PROJEKTY,REF.FIRMA,,1)
                        ?};
_result.OBJ.GR_K:=      {? _obj.GR_K=''
                        || null()
                        || exec('FindInSet','#table','SLO','KOD',_obj.GR_K,,,1)
                        ?};
_result.OBJ.M:=         {? _obj.M=''
                        || null()
                        || exec('FindInSet','#table','M','MATKTM',_obj.M,,,1)
                        ?};
_result.OBJ.SV:=         {? _obj.SV=''
                        || null()
                        || exec('FindInSet','#table','SLO','KOD',_obj.SV,,,1)
                        ?};
_result.OBJ.WAL:=       {? _obj.WAL=''
                        || null()
                        || exec('FindInSet','#table','SLO','KOD',_obj.WAL,,,1)
                        ?};

{? _obj.PROJEKTY<>'' & _result.OBJ.PROJEKTY=null()
|| _result.msg_norec('PROJEKTY');
   _result.RESULT:=0
?};
{? _obj.GR_K<>'' & _result.OBJ.GR_K=null()
|| _result.msg_norec('GR_K');
   _result.RESULT:=0
?};
{? _obj.M<>'' & _result.OBJ.M=null()
|| _result.msg_norec('M');
   _result.RESULT:=0
?};
{? _obj.SV<>'' & _result.OBJ.SV=null()
|| _result.msg_norec('SV');
   _result.RESULT:=0
?};
{? _obj.WAL<>'' & _result.OBJ.WAL=null()
|| _result.msg_norec('WAL');
   _result.RESULT:=0
?};

{? _obj.REF='' || _result.ACTION:='add' || _result.ACTION:='put' ?};
exec('record','xls_pr_kos',_obj,_mode,_result);
~~


\import
::----------------------------------------------------------------------------------------------------------------------
::  UTW: PD [22.26]
:: OPIS: Tworzy lub modyfikuje rekord na podstawie wartości odczytanych z Excel
::       Użycie: import
::   WE: _a - obj_new() - tablica nazwana z polami odczytanymi z excel
::       _b - INTEGER - tryb pracy: 0 - nie zastępować istniejących wartości, 1 - zastępować istniejące
::       _c - obiekt Result, zawiera .RESULT, .ACTION, .OBJ (własna tablica parametrów)
::   WY: 0 - porażka
::       1 - sukces
::----------------------------------------------------------------------------------------------------------------------
_obj:=_a;
_mode:=_b;
_validate:=_c;

_result:=0;
{? _validate.RESULT=1
|| EXCEL_ENV.ID_GRP:='Koszt ' + PR_KOS.OPIS;
   {? _validate.ACTION='add'
   || _result:=PR_KOS.add(1)
   |? _validate.ACTION='put'
   || _result:=PR_KOS.put(1)
   ?}
|| EXCEL_ENV.ID_GRP:=''
?};
{? _result=0
|| {? _validate.ACTION='add'
   || _validate.MSG:='Dodanie kosztu %1 nie powiodło się.'@[_obj.OPIS]
   || _validate.MSG:='Poprawa kosztu %1 nie powiodła się.'@[_obj.OPIS]
   ?}
?};
_result


