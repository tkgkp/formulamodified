_def.define('DEF_OPCK','Domyślny wariant kalkulacji'@,1);
_def.define('CRUB','Nr rubryki ceny'@,1,,,,0);
_def.define('CRUBMAT','Nr rubryki materiałów'@,1,,,,0);
_def.define('CRUBROB','Nr rubryki robocizny'@,1,,,,0);
_def.define('CRUBIL','Nr rubryki ilości'@,1,,,,0);
