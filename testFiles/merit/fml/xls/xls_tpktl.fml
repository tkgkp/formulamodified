\init
::----------------------------------------------------------------------------------------------------------------------
::  UTW: TS [18.42]
:: OPIS: Inicjalizuje mechanizm importu/eksportu do Excel
::   WE: _a - obj_new - środowisko mechanizmu
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------
_def:=_a;
_def.ID:='TPKTL';
_def.DOMAIN:=exec('name','#b_domain','TTE');
_def.FUNPAR:='ZWS_PAR_TTKT';

_def.FILE:='produkcja.xlsx';
_def.SHEET:='Typy technologii'@+'=1,1';
_def.NAME:='Typy kart technologicznych'@;
_def.DESC:='Typy kart technologicznych'@;

_def.PREFIX:="TPKTL.index('TYP'); TPKTL.prefix()";
_def.TABLE:="TPKTL";
_def.FIELDS:="exec('fields','xls_tpktl',_a)";

_def.BEFORE:="TPKTL.cntx_psh()";
_def.AFTER:="TPKTL.cntx_pop()";
_def.SELECT:="exec('select','xls_tpktl',_a)";

_def.EXPORT:="exec('export','xls_tpktl',_a,_b)";
_def.VALIDATE:="exec('validate','xls_tpktl',_a,_b,_c)";
_def.IMPORT:="exec('import','xls_tpktl',_a,_b,_c)";
