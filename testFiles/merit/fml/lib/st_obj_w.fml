\delete_not_used
::----------------------------------------------------------------------------------------------------------------------
::  UTW: WH [23.25]
:: OPIS: Usuwa wszystkie nieużywane rekordy
::   WY: 0 - porażka
::       1 - sukces
::  TAG: <PUBLICZNA>
::----------------------------------------------------------------------------------------------------------------------

_result:=0;
_can_continue:=1;

_mydo:=do_state()=0;
{? _mydo || do() ?};

ST_OBJ_W.cntx_psh();
ST_OBJ_W.index('ST_WER');
ST_OBJ_W.prefix();
{? ST_OBJ_W.first()
|| {!
   |? _next:=0;
      _ref_nxt:=null();
      ST_OBJ_W.cntx_psh();
      {? ST_OBJ_W.next()
      || _ref_nxt:=ST_OBJ_W.ref()
      ?};
      ST_OBJ_W.cntx_pop();

      {? ST_OBJ_W.count()=0
      || _can_continue:=exec('delete','st_obj_w',ST_OBJ_W.ref())
      ?};

      {? _ref_nxt<>null()
      || _next:=ST_OBJ_W.seek(_ref_nxt)
      ?};
      _next>0 & _can_continue>0
   !}
?};
ST_OBJ_W.cntx_pop();
{? _can_continue>0
|| _result:=1
|| undo()
?};
{? _mydo || end() ?};
_result

