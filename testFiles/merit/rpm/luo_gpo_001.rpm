{TITLE:A. Zestawienie odebranych odpadów}
{PRINTER: exec('set_parw','param_wydr'); exec('prt','param_wydr','h'),,,,,'Q','C',,,,,,1,
   PAR_WYDR.MBOT,PAR_WYDR.MLEFT,PAR_WYDR.MTOP,PAR_WYDR.MRIGHT,0,1,,'enable'}
{BEGIN:
   VAR_DEL.delete('PRN','PRNS','w','s','tryb','kkh');
   PRN:=obj_new(@.CLASS.PRINT,20); PRN.s_frame();
   PRNS:=obj_new(@.CLASS.PRINT,20); PRNS.s_frame();
   tryb:=rep_export();

   w:=obj_new(20);
   s:=obj_new(20);

   i:=0;
   color:=prn1:=prn2:='';
   lm:=ll:=vp:=lmt:=rsep:=0;

   'parametry z tabeli WYDRUKI';
   _wydr_naz:='gpo_001';
   WYDRUKIL.win_edit('GPO_001');
   WYDRUKIL.index('WYDRUKI');
   WYDRUKIL.prefix(OPERATOR.USER().KOD,_wydr_naz,);
   {? ~WYDRUKIL.first()
   ||
      WYDRUKIL.blank();
      WYDRUKIL.USERS:=OPERATOR.USER().KOD;
      WYDRUKIL.WYDRUK:=_wydr_naz;
      WYDRUKIL.add()
   ?};
   {? WYDRUKIL.GPOD=null() & GPOD.size()>0
   || WYDRUKIL.GPOD:=GPOD.ref()
   ?};
   dat_min:=dat_max:=date(0,0,0)
;~~}
{END:
   VAR_DEL.delete('PRN','PRNS','w','s','tryb','kkh');
   exec('zle_open','open_tab',ST.ODDZ,2-$ST.AR,form(ST.AM,-2));
   &i;
   &color; &prn1; &prn2;
   &lm; &ll; &vp; &lmt; &rsep;
   &dat_min;&dat_max;
   &odp_il
;~~}
{EXIT: ~WYDRUKIL.edit("{? WYDRUKIL.OD_DATY>WYDRUKIL.DO_DATY & WYDRUKIL.DO_DATY<>date(0,0,0)
                       || FUN.info('Niepoprawny zakres dat.'@);
                          'OD_DATY'
                       |? WYDRUKIL.GPOD=null()
                       ||   FUN.info('Nie wybrano gminnego punktu odbioru odpadów.');
                          'GPOD'
                       || ''
                       ?}")}
{  WYDRUKIL.put(1);
   {? tryb<>1
   || PRN.add("w[1]",5,'Lp.',1)
   ?};
   PRN.add("w[2]",10,'Kod odpadu'@);
   PRN.add("w[3]",40,'Nazwa odpadu'@);
   PRN.add("form(w[4],,3)",12,'Ilość'@,1);
   PRN.add("w[5]",8,'jm'@);

   PRNS.add("s[1]",61);
   PRNS.add("form(s[2],,3)",12,'Ilość'@,1);
   PRNS.add("s[3]",8,'jm'@)
;~~}
