{ rsep:=PAR_WYDR.RSEP; w[1]:=0;
  dat_min:=WYDRUKIL.OD_DATY; dat_max:=WYDRUKIL.DO_DATY;
~~}
{s[1]:='Razem';s[2]:=0;s[3]:='kg';~~}
{FOR: 'ODP'}
{INDEX: 'KOD'}
{DO}
  {odp_il:=0;~~}
  {FOR: 'OKR'}
  {INDEX: 'OKR'}
  {DO}
    {IF: (dat_min=date(0,0,0) | dat_min~1 <= OKR.ROK) & (dat_max=date(0,0,0) | OKR.ROK <= dat_max~1) & OKR.MC=1}
      {GPODPOZ.use('gpodb'+ST.ODDZ+(2-$OKR.ROK));~~}
      {FOR: 'GPODPOZ'}
      {INDEX: 'D'}
      {PREFIX: WYDRUKIL.GPOD}
      {DO}
        {IF: ((WYDRUKIL.OD_DATY<=GPODPOZ.D | WYDRUKIL.OD_DATY=date(0,0,0))
             & (WYDRUKIL.DO_DATY>=GPODPOZ.D | WYDRUKIL.DO_DATY=date(0,0,0)))
             & GPODPOZ.ODP=ODP.ref()}
          {odp_il+=GPODPOZ.WAGA;~~}
        {FI}
      {OD}
    {FI}
  {OD}
  {IF: odp_il<>0}       
   {
    w[1]+=1;
    w[2]:=ODP.KOD;
    w[3]:=ODP.NAZ;
    w[4]:=odp_il;
    w[5]:='kg';
    s[2]+=odp_il;
    ~~}
   {SUBSTITUTE: 'LINIA0'}
  {FI}
{OD}
