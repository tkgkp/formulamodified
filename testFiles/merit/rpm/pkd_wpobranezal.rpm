:!UTF-8
{TITLE:Wykaz pobranych załączników}
{PRINTER: exec('prt','param_wydr','v',KST),,,,,'M','C',,,,,,1,
          PAR_WYDR.MLEFT,PAR_WYDR.MTOP,PAR_WYDR.MRIGHT,PAR_WYDR.MBOT,0,1,,'enable'}
{BEGIN:
   VAR_DEL.delete('par','prn1','vp','lmt','b_rat','h_rat','pierwszy','zam','zal_ref','lp','tresc');
   tresc:='pkd_wpobranezal';
   PAR_WYDR.TITLE:='Wykaz pobranych załączników';
   OSOBA.cntx_psh();
   P.cntx_psh();
   par:=obj_new('prn1','SLO','p6','p7','p8','p_ref','TAB','ndx','firstRec','ok','tab');
   par.ok:=0;
   _upr:=exec('uprawnieniawrap','pkd','załącznikach pracownika'@,'PKD_EZK_OPZA','PKD_EZK_ORZA');
   {? +_upr
   || FUN.emsg('Brak wymaganych uprawnień pozwalających na przeglądanie informacji o: %1'@[_upr])
   || par.SLO:=obj_new('WYBOR','lista');
      par.SLO.WYBOR:='';
      par.SLO.lista:='';
      EDIT_VAR.SLO_TYP:='ZAL';
      _slo_naz:=null();
      _slo_typ:=exec('slo_typ','ext_slo');
      par.tab:=exec('pkd_zalaczniki','!pkd_zes_orka',PAR_WYDR.TITLE,0);
      {? par.ok:=par.tab.size()
      || {? par.tab.TYP
         || {? var_pres('_res')>100 || obj_del(_res) ?};
            _res:=exec('wybierz_nazwy','ext_slo',_slo_typ);
            {? _res.OK & _res.WYBOR.first()
            || par.SLO.WYBOR:=_res.WYBOR;
               {!
               |? par.SLO.lista+=_res.WYBOR.NAZWA+', ';
                  _res.WYBOR.next()
               !};
               par.SLO.lista:=(par.SLO.lista-2)+'.';
               0
            || ~FUN.ask('%1 %2'['Nie wybrano typu załącznika.'@,'Czy na pewno chcesz kontynuować?'@])
            ?}
         ?};

         par.TAB:=tab_tmp(1,
            'LP','INTEGER',,
            'P','STRING[150]',,
            'IMIONA','STRING[50]',,
            'NAZWISKO','STRING[50]',,
            'TECZKA','STRING[50]',,
            'ZAL_TYP','STRING[150]',,
            'ZAL_NAME','STRING[64]',,
            'ZAL_REF','STRING[16]',,
            'POB_D','DATE',,
            'POB_G','TIME',,
            'POTW','STRING[1]',,
            'LOGIN','STRING[100]',
         );
         par.ndx:=par.TAB.ndx_tmp(,1,'LP',,0,'POB_D',,0);
         par.TAB.index(par.ndx);

         par.prn1:=obj_new(@.CLASS.PRINT,{? rep_export() || 9 || 6 ?});
         {? rep_export()
         || par.prn1.add("par.TAB.NAZWISKO",30,'Nazwisko'@);
            par.prn1.add("par.TAB.IMIONA",41,'Imiona'@);
            par.prn1.add("par.TAB.TECZKA",9,'Nr Teczki'@)
         ?};
         par.prn1.add("
            {? par.firstRec
            || par.TAB.ZAL_TYP
            || {? ~rep_export()
               || ''
               || par.TAB.ZAL_TYP
               ?}
            ?}
         ",25,'Typ załącznika'@);
         par.prn1.add("
            {? par.firstRec
            || par.TAB.ZAL_NAME
            || {? ~rep_export()
               || ''
               || par.TAB.ZAL_NAME
               ?}
            ?}
         ",30,'Nazwa załącznika'@);
         par.prn1.add("par.TAB.POB_D$1",10,'Data pobrania'@);
         par.prn1.add("par.TAB.POB_G$3",10,'Godzina pobrania'@);
         par.prn1.add("par.TAB.POTW",13 ,'Potwierdzenie'@);
         par.prn1.add("par.TAB.LOGIN",20,'Login'@);
         par.prn1.s_frame();

         par.p7:=vp:=pierwszy:=zam:=b_rat:=h_rat:=1;
         par.p8:=par.p_ref:=lmt:=lp:=0;
         prn1:='par[1]';
         zal_ref:='';
         params_set('P',exec('wybierz_parses','pracownik','PKD').P)
      ?}
   ?}
}
{END:
   VAR_DEL.delete('par','prn1','vp','lmt','b_rat','h_rat','pierwszy','zam','zal_ref','lp','tresc');
   P.cntx_pop();
   OSOBA.cntx_pop()
}
{COMMENT}OLD: wzalpobh.rpm{COMMENT-}
{COMMENT}OLD: skid_pw.rpi{COMMENT-}
{COMMENT}OLD: std_prac.rpi{COMMENT-}
