{BEGIN:
   iH:=obj_new(30);
   iB:=obj_new(4);
   {! _i:=1..4 |! iB[_i]:=obj_new(26) !};
   iFo:=obj_new(6);
   loop:=1;
   {? IST.TYP='P'
   || kl:='0:0:0,255:249:175'
   || kl:='0:0:0,252:211:194'
