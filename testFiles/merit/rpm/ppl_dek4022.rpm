           {? +US.UK & +US.MU || ', '+(6+US.UK)+' '+US.MU || '' ?};
   pit[5]:=~-pit[5];
   pit[6]:=VAT_DEK.KOR;
   pit[9]:='1';
   {? var_pres('REZYDENT',VAT_DEK)>0
   || pit[9]:={? VAT_DEK.REZYDENT='T' || '1' || '2' ?}
   ?};
