   pit[15]:=VAT_DEK.PIERWSZE;
   pit[16]:=VAT_DEK.DATA_UR$4;
   {? VAT_DEK.KRAJ<>null || pit[17]:=VAT_DEK.KRAJ().NAZ || pit[17]:='' ?};
   pit[18]:=VAT_DEK.WOJEWODZ;
   pit[19]:=VAT_DEK.POWIAT;
   pit[20]:=VAT_DEK.GMINA;
   pit[21]:=VAT_DEK.ULICA;
   pit[22]:=VAT_DEK.DOM;
   pit[23]:=VAT_DEK.LOKAL;
   pit[24]:=VAT_DEK.MIASTO;
   pit[25]:=VAT_DEK.KOD;
