{PRINTER: exec('prt','param_wydr','v',KST),,,,,'Q','C',,,,,,1,5,5,5,5,1,1,'A4'}
{BEGIN:
   VAR_DEL.delete('pit','czy_raport','y');
   pit:=obj_new(80);
   {! _nx:=1..27 |! pit[_nx]:='' !};
   {! _nx:=28..obj_len(pit) |! pit[_nx]:=0 !};
   pit[64]:=pit[73]:='';

   exec('czytaj','#stalesys',date(__Rok,12,0),KST);

   pit[1]:=KST.NIP;
   pit[4]:='';
   pit[5]:='';
   pit[6]:='';
   pit[7]:='N';
   {? VAT_DEK.POD=1 || pit[7]:='T' ?};
   {? pit[7]='N'
   || pit[8]:=KST.NAZWA+', '+KST.REG;    'Platnik niebedacy osoba fizyczna'
   || pit[8]:=KST.PODNAZ+', '+KST.PODIME+', '+STR.gsub(KST.PODURDAT$4,'.','-'); 'Platnik bedacy osoba fizyczna'
   ?};

   {! _nx:=1..8 |! pit[_nx]:=~(-pit[_nx]) !};
   pit[78]:=VAT_DEK.IMIE;
   pit[79]:=VAT_DEK.NAZ;

   czy_raport:=0;

   {? VAT_DEK.KOR='T'
   || {? var_pres('__ord')>100 || obj_del(__ord) ?};
      __ord:=obj_new(13);
      {! _nx:=1..obj_len(__ord) |! __ord[_nx]:='' !};
      {? pit[7]='T'
      || __ord[1]:=KST.NIP;
         __ord[5]:=KST.PODNAZ;
         __ord[6]:=KST.PODIME;
         __ord[7]:=STR.gsub(KST.PODURDAT$4,'.','-')
      || __ord[1]:=KST.NIP;
         __ord[5]:=KST.NAZWA;
         __ord[6]:=KST.SKROT;
         __ord[8]:=KST.REG
      ?}
   ?};
   exec('rpm_as_pdf_ini','rpm_pdf');
   y:=0
}
{END:
   exec('stalesys','#stalesys');
   VAR_DEL.delete('pit','czy_raport','y');
   {? VAT_DEK.KOR='T' || obj_del(__ord); &__ord ?}
}
