{PRINTER: exec('prt','param_wydr','v',KST),,,,,'Q','C',,,,,,1,5,5,5,5,1,1,'A4'}
{BEGIN:
   VAR_DEL.delete('pit','czy_raport','x','y','dx','czy_pod');
   pit:=obj_new(87);
   {! _nx:=1..27 |! pit[_nx]:='' !};
   {! _nx:=28..obj_len(pit) |! pit[_nx]:=0 !};
   pit[75]:=pit[77]:=pit[79]:=pit[85]:=pit[86]:=pit[87]:='';

   exec('czytaj','#stalesys',date(),KST);

   pit[1]:=KST.NIP;
   pit[4]:=VAT_DEK.OKRES;
   pit[7]:='N';
   {? VAT_DEK.POD=1 || pit[7]:='T' ?};
   {? pit[7]='N'
   || pit[8]:=KST.NAZWA+', '+KST.REG;    'Platnik niebedacy osoba fizyczna'
   || pit[9]:=KST.PODNAZ+', '+KST.PODIME+', '+STR.gsub(KST.PODURDAT$4,'.','-'); 'Platnik bedacy osoba fizyczna'
   ?};

   pit[85]:=VAT_DEK.PITR;

   {! _nx:=1..9 |! pit[_nx]:=~(-pit[_nx]) !};

   czy_raport:=0;
   {? VAT_DEK.KOR='T'
   || {? var_pres('__ord')>100 || obj_del(__ord) ?};
      __ord:=obj_new(13);
      {! _nx:=1..obj_len(__ord) |! __ord[_nx]:='' !};
      {? pit[7]='T'
      || __ord[1]:=KST.NIP;
         __ord[5]:=KST.PODNAZ;
         __ord[6]:=KST.PODIME;
         __ord[7]:=STR.gsub(KST.PODURDAT$4,'.','-')
      || __ord[1]:=KST.NIP;
         __ord[5]:=KST.NAZWA;
         __ord[6]:=KST.SKROT;
         __ord[8]:=KST.REG
      ?}
   ?};
   x:=y:=dx:=0;
   exec('rpm_as_pdf_ini','rpm_pdf');
   czy_pod:=0
}
{END:
   exec('stalesys','#stalesys');
   exec('rpm_as_pdf_end','rpm_pdf');
   VAR_DEL.delete('pit','czy_raport','x','y','dx','czy_pod');
   {? VAT_DEK.KOR='T' || obj_del(__ord); &__ord ?}
}
{COMMENT}OLD: dek1124.rpm{COMMENT-}
{COMMENT}OLD: dkw1124g.rpi{COMMENT-}
{COMMENT}OLD: ord_zu3g.rpi{COMMENT-}
{
   czy_raport:=0;
   pit[2]:=exec('upo_id','xml');
   pit[5]:=VAT_DEK.US().NU+{? +US.UU || ', '+US.UU || '' ?}+
           {? +US.UK & +US.MU || ', '+(6+US.UK)+' '+US.MU || '' ?};
   pit[5]:=~-pit[5];
   pit[6]:=VAT_DEK.KOR;
   pit[10]:='1';
   {? var_pres('REZYDENT',VAT_DEK)>0
   || pit[10]:={? VAT_DEK.REZYDENT='T' || '1' || '2' ?}
   ?};
   pit[11]:={? VAT_DEK.PESEL='' || VAT_DEK.NIP || VAT_DEK.PESEL ?};
   'jesli jest to nierezydent czyli 2 to wypelnij pola 12, 13, 14';
   {? pit[10]='2'
   || pit[12]:=VAT_DEK.ZNIP;
      pit[13]:=VAT_DEK.RZNIP().NAZWA;
      pit[14]:=VAT_DEK.KRAJZNIP().NAZ
   || pit[12]:=pit[13]:=pit[14]:=''
   ?};
   pit[15]:=VAT_DEK.NAZWISKO;
   pit[16]:=VAT_DEK.PIERWSZE;
   pit[17]:=VAT_DEK.DATA_UR$4;
   {? VAT_DEK.KRAJ<>null || pit[18]:=VAT_DEK.KRAJ().NAZ || pit[18]:='' ?};
   pit[19]:=VAT_DEK.WOJEWODZ;
   pit[20]:=VAT_DEK.POWIAT;
   pit[21]:=VAT_DEK.GMINA;
   pit[22]:=VAT_DEK.ULICA;
   pit[23]:=VAT_DEK.DOM;
   pit[24]:=VAT_DEK.LOKAL;
   pit[25]:=VAT_DEK.MIASTO;
   pit[26]:=VAT_DEK.KOD;
   pit[27]:=VAT_DEK.POCZTA;

   {! _nx:=10..27 |! pit[_nx]:=~-pit[_nx] !};

   pit[28]:=#VAT_DEK.PKU;
   {? VAT_DEK.KOR='T'
   || __ord[2]:={? VAT_DEK.PESEL='' || VAT_DEK.NIP || VAT_DEK.PESEL ?};
      __ord[9]:=VAT_DEK.NAZWISKO;
      __ord[10]:=VAT_DEK.PIERWSZE;
      __ord[11]:=STR.gsub(VAT_DEK.DATA_UR$4,'.','-');
      __ord[12]:='';
      __ord[13]:=exec('opis_korekty','edeklar');
      {! _n:=1..obj_len(__ord) |! __ord[_n]:=~(-__ord[_n]) !};
      __ord[3]:=pit[2]
   ?};

   VAT_POZ.index('NR_NRK');
   VAT_POZ.prefix(VAT_DEK.ref);
   {? VAT_POZ.first
   || {!
      |? {! _ind:=1..4
         |! _kw:=($('VAT_POZ.KW'+$_ind))();
            _poz:=($('VAT_POZ.P'+$_ind))();
            {? _poz>=1 & _poz<=obj_len(pit)
            || pit[($('VAT_POZ.P'+$_ind))()]:=_kw;
               {? VAT_POZ.NR=14 || pit[75]:=VAT_POZ.RODZ ?};
               {? VAT_POZ.NR=15 || pit[77]:=VAT_POZ.RODZ ?};
               {? VAT_POZ.NR=16 || pit[79]:=VAT_POZ.RODZ ?};
               {? (VAT_POZ.NR>=1 & VAT_POZ.NR<=10) | (VAT_POZ.NR>=18 & VAT_POZ.NR<=20)
               || czy_pod+=_kw
               ?}
            ?};
            czy_raport+=_kw
         !};
         VAT_POZ.next
      !}
   ?};
   {? czy_pod || pit[86]:=VAT_DEK.IMIE+' '+VAT_DEK.NAZ+{? VAT_DEK.STN<>'' || ', '+VAT_DEK.STN || '' ?} ?};
   {? pit[81] || pit[87]:=VAT_DEK.IMIE+' '+VAT_DEK.NAZ+{? VAT_DEK.STN<>'' || ', '+VAT_DEK.STN || '' ?} ?};
   ~~
}
