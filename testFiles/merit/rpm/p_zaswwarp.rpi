:!UTF-8
{COMMENT}OLD: zaswwarp.rpi{COMMENT-}
{COMMENT}OLD: skid_pw.rpi{COMMENT-}
{INCLUDE: wsp_pw.rpi}
{MACRO: 'text_out'}
   {JUSTIFY}
   { STR.split(gsub(Text,'..','.')); ~~ }
   {WHILE: +(Text:=STR.line(charleft()-4))}{DO}
    {REP: {? +STR.spl_str || '{<{4}>{charleft()}' || '{CENTER}{<{4}' ?}+'Text}'}
   {OD}
{MACRO-}
{FOR: __CALL}{DO}
   {IF: __CALL2.find_tab(,'P_REF',,'=',__CALL.P_REF)}
      {IF: PAR_WYDR.HEAD}
         {FONT: 'HEAD'}{SPACE: 'B'}
         { lmt:=charleft(); indent:=1; ~~ }
         {>{lmt}__CALL.MIEJSCE+', dn. '+__CALL.DATA}
         {<1 STR.split(__CALL.F_NAZWA); STR.line(lmt)}
         {WHILE: STR.next()}{DO}{<1 STR.line(lmt)}{OD}
         { PAR_WYDR.HEAD:=0; ~~ }
         {SUBSTITUTE: 'HEAD'}
         { PAR_WYDR.HEAD:=1; ~~ }
         {FONT: 'HEAD'}{SPACE: 'B'}
         {<1}{__CALL.F_ULICA}
         {<1}{__CALL.F_POCZTA}
         {<1}REGON {__CALL.F_REGON}
         {<1}NIP {__CALL.F_NIP}
         {<1}NKP {__CALL.F_NKP}
         {LINE: 2}
      {ELSE}
         {FONT: 'HEAD'}{SPACE: 'B'}
         {LINE: 8}
      {FI}
      {FONT: 'W12'}{SPACE: 'A'}
      {LINE: 1}
      {>{charleft()}{? __CALL.PLEC='M' || 'Pan' || 'Pani' ?}+' '+ __CALL.NAZWISKO+' '+__CALL.IMIE+' '+__CALL.DRUGIEIM}
      {LINE: 1}
      {  Text:={? __CALL.PLEC='K'
            || 'Na podstawie art. 29 par. 3 Kodeksu pracy informuję Panią o warunkach pracy '
               'obowiązujących na stanowisku %1.'[__CALL.STANOWIS]
            || 'Na podstawie art. 29 par. 3 Kodeksu pracy informuję Pana o warunkach pracy '
               'obowiązujących na stanowisku %1.'[__CALL.STANOWIS]
            ?}; ~~
      }{SUBSTITUTE: 'text_out'}
      {ENTIRE}
         {LINE}
         {<1}1.{<4'Normy czasu pracy:'}
         {IF: +__CALL.NCP_SYSP}{
            Text:='Obowiązuje %1.' [__CALL.NCP_SYSP]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL.NCP_NDOB}{
            Text:='Dobowa norma czasu pracy wynosi %1.'[__CALL.NCP_NDOB]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL.NCP_NTYG}{
            Text:='Tygodniowa norma czasu pracy wynosi %1.'[__CALL.NCP_NTYG]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.NCP_WDOB}{
            Text:='Dobowy wymiar czasu pracy wynosi %1.'[__CALL2.NCP_WDOB]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.NCP_WTYG}{
            Text:='Tygodniowy wymiar czasu pracy wynosi %1.'[__CALL2.NCP_WTYG]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.NCP_WDOW}{
            Text:='Wymiar dobowego odpoczynku %1.'[__CALL2.NCP_WDOW]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.NCP_WTYW}{
            Text:='Wymiar tygodniowego odpoczynku %1.'[__CALL2.NCP_WTYW]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL.NCP_MIES}{
            Text:='Długość okresu rozliczeniowego wynosi %1.'[__CALL.NCP_MIES]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL.NCP_GODZ}{
            Text:='Praca wykonywana jest %1.'[__CALL.NCP_GODZ]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.NCP_PPRA}{
            Text:='Przysługujące przerwy w pracy %1.'[__CALL2.NCP_PPRA]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.NCP_ZPGN}{
            Text:='Zasady pracy w godzinach nadliczbowych %1.'[__CALL2.NCP_ZPGN]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.NCP_RPGN}{
            Text:='Rekompensata za godziny nadliczbowe %1.'[__CALL2.NCP_RPGN]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.NCP_PZNZ}{
            Text:='Zasady przechodzenia ze zmiany na zmianę %1.'[__CALL2.NCP_PZNZ]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.NCP_PMMP}{
            Text:='Przemieszczanie się między miejscami pracy %1.'[__CALL2.NCP_PMMP]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
      {ENTIRE-}
      {ENTIRE}
         {LINE}
         {<1}2.{<4'Wypłata wynagrodzenia:'}
         {IF: +__CALL.WW_ZASAD}{
            Text:='Wynagrodzenie wypłaca się %1.'[__CALL.WW_ZASAD]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL.WW_DODAT}{
            Text:='Wynagrodzenie i dodatek za pracę w godzinach nadliczbowych oraz inne świadczenia wypłacane są %1.'
               [__CALL.WW_DODAT];
            ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL.WW_WOLNE}{
            Text:='Jeżeli ustalony dzień wypłaty jest dniem wolnym od pracy, wynagrodzenie wypłaca się %1.'
            [__CALL.WW_WOLNE]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL.WW_PRZEL}{
            Text:='Wynagrodzenie wypłacane jest przelewem na rachunek bankowy,  wskazany przez pracownika %1.'
            [__CALL.WW_PRZEL];
            ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.WW_INNE}{
            Text:='Inne składniki wynagrodzenia %1.'[__CALL2.WW_INNE]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.WW_SPRZ}{
            Text:='Świadczenia pieniężne i rzeczowe %1.'[ __CALL2.WW_SPRZ]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
      {ENTIRE-}
      {ENTIRE}
         {LINE}
         {<1}3.{<4'Zasady rozwiązania stosunku pracy:'}
         {IF: +__CALL.WYPOKRES}{
            Text:='Umowa o pracę może być rozwiązana z zachowaniem okresu wypowiedzenia trwającego %1.'
            [__CALL.WYPOKRES];~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL.WYPDZIEN}{
            Text:='Okres wypowiedzenia winien upływać %1.'[__CALL.WYPDZIEN];
            ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.WYPSAD}{
            Text:='Termin odwołania się do Sądu Pracy %1.'[__CALL2.WYPSAD];
            ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.WYPINNE}{
            Text:=__CALL2.WYPINNE;~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
      {ENTIRE-}
      {ENTIRE}
         {LINE}
         {<1}4.{<4'Warunki pracy zdalnej:'}
         {IF: +__CALL.PRACA_ZD}{
            {? var_pres('Temp')=type_of(SYSLOG) || obj_del(Temp) ?};
            Temp:=proc_exe('praca_zd@zasw',__CALL.PRACA_ZD,__CALL.PRACA_ZW);
            ~~ }
            {FOR: Temp}{DO}
               {Text:=Temp.TEKST;~~}
               {SUBSTITUTE: 'text_out'}
            {OD}
            { {? var_pres('Temp')=type_of(SYSLOG) || obj_del(Temp); &Temp ?}; ~~ }
         {FI}
      {ENTIRE-}
      {ENTIRE}
         {LINE}
         {<1}5.{<4'Kontrola trzeźwości:'}
         {IF: +__CALL.KOT}{
            Text:=__CALL.KOT+'.';
            ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
      {ENTIRE-}
      {ENTIRE}
         {LINE}
         {<1}6.{<4'Urlop wypoczynkowy:'}
         {IF: +__CALL.UW_1 | +__CALL.UW_2 | +__CALL.UW_3 | +__CALL.UW_4}{
            Text:={? +__CALL.UW_1 || __CALL.UW_1+'. ' || '' ?}+
                  {? +__CALL.UW_2 || __CALL.UW_2+'. ' || '' ?}+
                  {? +__CALL.UW_3 || __CALL.UW_3+'. ' || '' ?}+
                  {? +__CALL.UW_4 || __CALL.UW_4+'.'  || '' ?};
            ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
      {ENTIRE-}
      {ENTIRE}
         {LINE}
         {<1}7.{<4'Inne:'}
         {IF: +__CALL2.IN_SZKOL}{
            Text:='Szkolenia %1.'[__CALL2.IN_SZKOL]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.IN_UZBIO}{
            Text:='Układ zbiorowy %1.'[__CALL2.IN_UZBIO]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
         {IF: +__CALL2.IN_ZIUSP}{
            Text:='Nazwa instytucji ubezpieczenia społecznego %1.'[__CALL2.IN_ZIUSP]; ~~
            }{SUBSTITUTE: 'text_out'}
         {FI}
      {ENTIRE-}
      {FONT: 'W10'}
      {ENTIRE}
         {SPACE: 'C'}
         {LINE: 10}
         { cnt:=charleft(); ~~ }
         {<1>{cnt/2}(35*'─')}{<{cnt/2}>{cnt}(35*'─')}
         {<1>{cnt/2}'(potwierdzenie odbioru'}{<{cnt/2}>{cnt}'(podpis pracodawcy lub osoby'}
         {<1>{cnt/2}'data i podpis pracownika)'}{<{cnt/2}>{cnt}'reprezentującej pracodawcę)'}
      {ENTIRE-}
      {PAGE}
   {FI}
{OD}