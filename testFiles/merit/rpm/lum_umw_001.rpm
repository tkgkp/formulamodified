__sql:="
select distinct
     MIA.NAZ mia,
     UL.UL ul,
     POS.NR nr

from UP
     join POS using (UP.POS, POS.REFERENCE)
     join UL using (POS.UL, UL.REFERENCE)
     join MIA using (POS.MIA, MIA.REFERENCE)
     join UM using (UP.UM, UM.REFERENCE)

where UM.REFERENCE = :_a

order by 1,2,3"
}
{END:
   &pier; &__sql;
   &napis;
   &marginl;
   &nag
}
