{FONT: 'T8G'}{SPACE: 'C'}
{ rsep:=PAR_WYDR.RSEP; lp:=0;~~}
{FOR: X_Xw1}
{INDEX: X_Xw1.ndx_tmp(,,'D',,)}
{DO}
   {
   w[1] :=form(lp+=1,,,'99');
   w[2] :=form(X_Xw1.SYM);
   w[3] :=form(X_Xw1.KH);
   w[9] :=form(X_Xw1.KH_ODB);
   w[4] :=form(X_Xw1.D);
   w[5] :=form(X_Xw1.TZ);
   w[6] :=form(X_Xw1.NETTO,,doklw,'.,');
   w[7] :=form(X_Xw1.VAT,,doklw,'.,');
   w[8] :=form(X_Xw1.BRUTTO,,doklw,'.,');
   {? mpp
   ||
      w[10]:=form(X_Xw1.SP_WAR,,doklw,'.,');
      w[11]:=form(X_Xw1.SP_WYM)
   ?};
   s[1] +=X_Xw1.NETTO;
   s[2] +=X_Xw1.VAT;
   s[3] +=X_Xw1.BRUTTO;
   {? mpp
   ||
      s[4]+=X_Xw1.SP_WAR
   ?}
   ;~~}
   {SUBSTITUTE: 'LINIA0'}
{OD}
