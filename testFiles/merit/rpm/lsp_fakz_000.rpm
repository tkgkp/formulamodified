{FONT: 'T8GB'}{SPACE: 'C'}
{
w[1] :=w[2] :=w[3] :=w[4] :=w[9] :='';
w[5] :='Razem:'; PRN.FORM[5] :=0;
w[6] :=form(s[1],,doklw,'.,');
w[7] :=form(s[2],,doklw,'.,');
w[8] :=form(s[3],,doklw,'.,');
{? mpp
||
   w[10]:=form(s[4],,doklw,'.,');
   w[11]:=''
?};
