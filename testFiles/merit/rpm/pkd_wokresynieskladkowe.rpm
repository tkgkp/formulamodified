   M A K R O D E F I N I C J E

{COMMENT-}
{MACRO: 'pracownik'}
{FONT: 'W10'}
{SPACE: 'B'}
{IF: par[6]<>P.ref()}{ par[5]+=1; par[6]:=P.ref(); ~~ }{FI}
{IF: ~rep_export()}
   {<{int((136/160)*lmt)+1}}{form(par[5],,,'9.')} {INCLUDE: p_prac.rpi}
{FI}
{FONT: 'T8'}
{SPACE: 'B'}
{MACRO-}
{MACRO: 'okr_nskl'}
{IF: ~par[3]}
   { vp:=~lineleft(); ~~ }
   {IF: lineleft() & lineleft()<=6}
      {SUBSTITUTE: 'LINIAF'}
      {PAGE}
   {FI}
   {SUBSTITUTE: 'LINIAF'}
   {SUBSTITUTE: 'pracownik'}
   {REP: par[1].fhbar(lmt)}
   { par[3]:=1; ~~ }
{FI}
{ par[1].ini_line(); ~~ }
{WHILE: par[1].next()}{DO}
   {REP: par[1].fline(lmt)}
{OD}
{IF: lineleft()<=2}
   { par[3]:=0; ~~ }
{FI}
{MACRO-}
{MACRO: tresc}
{IF: ~par[2].find_key(#P.OSOBA)}
   {  par[2].REF:=#P.OSOBA;
      par[2].add();
      par[3]:=0;
      ~~
   }
   {REP: '{FOR: P_NSKL}{INDEX: \'OD\'}'+
         {? par[4].OD=#0 & par[4].DO=#0
            || '{PREFIX: exec(\'ref_firma\',\'ustawienia\'),P.OSOBA}'
            || '{FROM: exec(\'ref_firma\',\'ustawienia\'),P.OSOBA,par[4].OD}'+
               '{TO: exec(\'ref_firma\',\'ustawienia\'),P.OSOBA'+{? par[4].DO=#0 || '' || ',par[4].DO' ?}+'}'
         ?}+'{DO}{SUBSTITUTE: \'okr_nskl\'}{OD}'}
{FI}
{MACRO-}
{COMMENT}
