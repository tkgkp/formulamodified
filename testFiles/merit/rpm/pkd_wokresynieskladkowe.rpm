   {FONT: 'T8G'}
   {SPACE: 'C'}
   {LINE}
   { par[7]:=0; ~~ }
   {<{lmt+1}'Parametry sprawozdania'@}
   {<{lmt+1}'Zakres dat: od %1 do %2'@[par[4].OD$1,par[4].DO$1]}
{FI}
{FONT: 'T8B'}
{SPACE: 'B'}
{LINE}
