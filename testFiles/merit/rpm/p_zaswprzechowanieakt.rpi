:!UTF-8
{INCLUDE: wsp_pw.rpi}
{MACRO: 'ls_item'}
{JUSTIFY}
{ STR.split(gsub(Text,'..','.')); ~~ }
{WHILE: +(Text:=STR.line(charleft()-indent-4))}{DO}
{REP:
   _cl:=charleft();
   {? type_of(num)=type_of(0) & num
   || _odp:={? indent=0 || '{<1 \''+$num+'.\'}' || '{<'+$indent+' \''+$num+')\'}' ?}; indent+=4; _odp
   |? type_of(num)=type_of('') || _odp:='{<'+$indent+' \''+num+'\'}'; indent+=1+(+num); _odp
   |? 1+Text=%255 || Text:=1-Text; _odp:='{<'+$indent+' \'-\'}'; indent+=3; _odp
   || ''
   ?}+
   {? +STR.spl_str || '{<'+$(indent)+'>'+$_cl || '{CENTER}{<'+$(indent) ?}+' num:=0; gsub(Text,%255,%32) }'
}{OD}
{MACRO-}
{HEADER}
{IF: PAR_WYDR.HEAD}
{SUBSTITUTE: 'HEAD'}
{FONT: 'HEAD'}
{SPACE: 'B'}
{__CALL.F_ULICA}
{__CALL.F_POCZTA}
REGON {__CALL.F_REGON}
NKP {__CALL.F_NKP}
{ELSE}
{FONT: 'HEAD'}
{SPACE: 'B'}
{LINE: 6}
{FI}
{HEADER-}
{FOR: __CALL}{DO}
{FONT: 'W12'}
{SPACE: 'A'}
{  lmt:=charleft(); ~~}
{>{lmt-4} '%1 %2 %3'[{? __CALL.PLEC='K' || 'Pani' || 'Pan' ?},__CALL.IMIE,__CALL.NAZWISKO]}
{IF: +__CALL.P_ULICA}
{>{lmt-4}STR.split(__CALL.P_ULICA);STR.line(50)}
{WHILE: STR.next()}
{DO}
{>{lmt-4}STR.line(50)}
{OD}
{FI}
{IF: +__CALL.P_MIASTO}{>{lmt-4}__CALL.P_MIASTO}{FI}
{IF: +__CALL.P_POCZTA}{>{lmt-4}__CALL.P_POCZTA}{FI}
{IF: +__CALL.P_KRAJ}{>{lmt-4}__CALL.P_KRAJ}{FI}
{LINE: 2}
{CENTER}
{FONT: 'TITLE'}{<1>{charleft()}'Informacja o okresie przechowywania akt'}{FONT: 'W12'}
{LINE: 2}
{SUBSTITUTE:
   num:=~~;
   indent:=0;
   Text:='Informuję %1, że:' [{? __CALL.PLEC='K'|| 'Panią' || 'Pana' ?}];
   'ls_item'
}
{LINE: 1}
{SUBSTITUTE:
   num:=1;
   indent:=0;
   Text:=
      'Okres przechowywania dokumentacji pracowniczej związanej z %2 stosunkiem pracy rozwiązanym z dniem %3%1roku '
      'wynosi %4 lat licząc od '
      [%255,{? __CALL.PLEC='K'|| 'Pani' || 'Pana' ?},__CALL.DZ,$__CALL.LATA]+
      {? __CALL.LATA=10
      || 'końca roku kalendarzowego, w%1którym ' [%255]+
         {? __CALL.RIA
         || 'do ZUS został przekazany raport informacyjny ZUS RIA.'
         || 'stosunek pracy uległ rozwiązaniu lub wygasł.'
         ?}
      || 'dnia, w%1którym stosunek pracy uległ rozwiązaniu lub wygasł.' [%255]
      ?};
   'ls_item'
}
{LINE: 1}
{SUBSTITUTE:
   num:=2;
   indent:=0;
   Text:=
      'Ma %2 możliwość odbioru swojej dokumentacji pracowniczej w okresie od%1%3%1roku do%1%4%1roku.'
      [%255,{? __CALL.PLEC='K'|| 'Pani' || 'Pan' ?},__CALL.ODBIOR,__CALL.ZAPOMNIJ];
   'ls_item'
}
{LINE: 1}
{SUBSTITUTE:
   num:=3;
   indent:=0;
   Text:=
      'W przypadku nieodebrania dokumentacji pracowniczej w okresie, o%1którym mowa '
      'w punkcie 2, zostanie ona zniszczona.' [%255];
   'ls_item'
}
{LINE: 3}
{FONT: 'W10'}
{SPACE: 'C'}
{  lmt:=charleft(); ~~}
{<{lmt/2}>{lmt}(20*'─')}
{<{lmt/2}>{&lmt}'Pracownik'}

{'Otrzymują:'}
1. {'Pracownik'}
2. {'a/a'}

{PAGE}
{OD}