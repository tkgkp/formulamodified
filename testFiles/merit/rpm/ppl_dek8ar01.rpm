:!UTF-8
{TITLE:deklaracja podatkowa PIT-8AR (2012 r.)}
{PRINTER: exec('prt','param_wydr','v',KST),,,,,'Q','C',,,,,,1,5,5,5,5,1,0}
{BEGIN:
   {? var_pres('pit')>100 || obj_del(pit) ?};
   pit:=obj_new(20);
   {! _n:=1..obj_len(pit) |! pit[_n]:='' !};

   pit[4]:=4+VAT_DEK.OKRES;
   pit[6]:=VAT_DEK.KOR;
   pit[19]:=VAT_DEK.IMIE;
   pit[20]:=VAT_DEK.NAZ;

   exec('czytaj','#stalesys',date(#pit[4],12,0),KST);

   pit[1]:=KST.NIP;
   pit[5]:=KST.US().NU+
           {? KST.US
              || {? +US.UU || ', '+US.UU || '' ?}+
                 {? +US.UK & +US.MU || ', '+(6+US.UK)+' '+US.MU || '' ?}
              || ''
           ?};
   pit[8]:=KST.NAZWA+', '+KST.REG;
   pit[9]:='POLSKA';
   pit[10]:=KST.WOJEWODZ;
   pit[11]:=KST.POWIAT;
   pit[12]:=KST.GMINA;
   pit[13]:=KST.ULICA;
   pit[14]:=KST.DOM;
   pit[15]:=KST.LOKAL;
   pit[16]:=KST.MIASTO;
   pit[17]:=KST.KOD;
   pit[18]:=KST.POCZTA;

   {! _n:=1..20 |! pit[_n]:=~(-pit[_n]) !};

   CNT:="_c:=(_b-(+_a))%2; form(_c*' '+_a,_b)";
   {? var_pres('tab')>100 || obj_del(tab) ?};
   tab:=tab_tmp(2,
      'NR','INTEGER','Nr',
      'NRK','INTEGER','Nrk',
      'K1','INTEGER','Kwota',
      'K2','INTEGER','Kwota',
      'K3','INTEGER','Kwota',
      'K4','INTEGER','Kwota',
      'K5','INTEGER','Kwota',
      'K6','INTEGER','Kwota'
   );
   ind:=0; Podatek:=0; Suma_pod:=0;
   DEKL_POD.use('pod_'+('0000'+pit[4]+4));
   DEKL_POD.index('DEKL_PIT');
   DEKL_POD.prefix;

   {? VAT_DEK.KOR='T'
   || {? var_pres('__ord')>100 || obj_del(__ord) ?};
      __ord:=obj_new(13);
      {! _n:=1..obj_len(__ord) |! __ord[_n]:='' !};
      __ord[1]:=KST.NIP;
      __ord[5]:=KST.NAZWA;
      __ord[6]:=KST.SKROT;
      __ord[8]:=KST.REG
   ?};
   VAT_POZ.cntx_psh
}
{END:
   &CNT; &ind; &Podatek; &Suma_pod;
   undefine;
   obj_del(pit); obj_del(tab); &pit; &tab;
   exec('stalesys','#stalesys');
   VAT_POZ.cntx_pop;
   {? VAT_DEK.KOR='T' || obj_del(__ord); &__ord ?}
}
