:!UTF-8
{TITLE:Wyróżnienia i kary}
{PRINTER: exec('prt','param_wydr','v',KST),,,,,'Q','C',,,,,,1,
          PAR_WYDR.MLEFT,PAR_WYDR.MTOP,PAR_WYDR.MRIGHT,PAR_WYDR.MBOT,0,1,,'enable'}
{BEGIN:
   VAR_DEL.delete('par','prn1','vp','lmt','rsep','tresc');
   P.cntx_psh();
   KART_DEF.cntx_psh();
   tresc:='pkd_wyroznieniakary';
   PAR_WYDR.TITLE:='Wyróżnienia i kary'@;
   par:=obj_new(6);
   par[5]:=0;
   _upr:=exec('uprawnieniawrap','pkd','wyróżnieniach i karach'@,'PKD_DOS_PPWK','PKD_DOS_PRWK');
   {? +_upr
   || FUN.emsg('Brak wymaganych uprawnień do przeglądania informacji o:%1'@[_upr])
   || par[3]:=exec('par_wydr_ddp','pkd',
         PAR_WYDR.TITLE,
         "  {? cur_tab().OD<>#0 & cur_tab().DO<>#0
            || {? cur_tab().OD>cur_tab().DO
               || FUN.emsg('Data końca okresu nie może być mniejsza od daty początkowej'@); 'OD'
               || 1
               ?}
            || 1
            ?}
         ",
         date(,,1),'Od daty:'@,,
         date(,,0),'Do daty:'@,,
         'Które z wyróżnień i kar uwzględniać na wydruku?'@,'Wszystkie'@,'Z wybranego okresu'@,0,1
      );

      {? par[3].size()
      || par[2]:=tab_tmp(,'REF','INTEGER','Osoba');

         par[1]:=obj_new(@.CLASS.PRINT,{? ~rep_export() || 4 || 7 ?});
         {? rep_export()
         || par[1].add("KART_DOD.OSOBA().NAZWISKO",30,'Nazwisko'@);
            par[1].add("KART_DOD.OSOBA().PIERWSZE+' '+KART_DOD.OSOBA().DRUGIE",41,'Imiona'@);
            par[1].add("KART_DOD.OSOBA().PESEL",11,'PESEL'@)
         ?};
         par[1].add("KART_DOD.KT",9,'Kategoria'@);
         par[1].add("KART_DOD.OD$1",10,'Data'@);
         par[1].add("KART_DOD.OPIS",40,'Opis'@);
         par[1].add("exec('memo2print','#string',KART_DOD,'UWAGI')",60,'Adnotacje i uwagi'@);
         par[1].s_frame();

         prn1:='par[1]';
         par[4]:=par[6]:=lmt:=rsep:=0;
         par[5]:=vp:=1;

         params_set('P',exec('wybierz_parses','pracownik','PKD').P)
      ?}
   ?}
}
{END:
   P.cntx_pop();
   KART_DEF.cntx_pop();
   VAR_DEL.delete('par','prn1','vp','lmt','rsep','tresc')
}
