   M A K R O D E F I N I C J E

{COMMENT-}
{MACRO: 'pracownik'}
{IF: ~par[11]}
   {FONT: 'W10'}
   {SPACE: 'B'}
   {<{ceil(lmt*b_rat)+1}}{form(par[6]+=1,,,'9.')} {INCLUDE: p_prac.rpi}
{FI}
{FONT: 'T8G'}
{SPACE: 'C'}
{MACRO-}
{MACRO: tresc}
{ENTIRE}
{  par[4]:=par[3]:=0;
   echo('Trwa uzupełnianie informacji: '@+P.OSOBA().NAZWISKO);
   KP.prefix(P.ref(),__param.ROK);
   {? KP.first()
   || par[4]:=1;
      {! _ii:=1..obj_len(par[2])
      |! {! _ij:=1..obj_len(par[2][_ii])-3
         |! par[2][_ii][_ij]:=0
         !}
      !};
      {!
      |? {! _ii:=1..obj_len(par[2])
         |! _kw:=($('KP.S'+$_ii))();
            par[2][_ii][KP.M]+=_kw;
            par[2][_ii][13]+=_kw;
            {? _kw || par[2][_ii][15]:=1 ?};
            {? rep_export()
            || par[2][_ii][16]:='%1 %2 %3 %4'
                  [  P.OSOBA().NAZWISKO,
                     OSOBA.PIERWSZE,
                     {? +OSOBA.DRUGIE || OSOBA.DRUGIE || '' ?},
                     '(Nr teczki %1)'@[|P.T]
                  ]
            ?}
         !};
         KP.next()
      !}
   ?};
   ~~
}
{IF: par[4]}
   {SUBSTITUTE: 'pracownik'}
   {REP: par[1].fhbar(lmt)}
   {WHILE: (par[3]+=1)<=obj_len(par[2])}
   {DO}
      {IF: par[2][par[3]][15]}
         { par[1].ini_line(); ~~ }
         {WHILE: par[1].next()}
         {DO}
            {REP: par[1].fline(lmt)}
         {OD}
      {FI}
   {OD}
   {REP: par[1].flbar(lmt)}
{FI}
{ENTIRE-}
{MACRO-}
{COMMENT}
