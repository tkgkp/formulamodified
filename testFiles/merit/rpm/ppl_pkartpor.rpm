:!UTF-8
{TITLE:Karta podatkowa - zestawienie roczne}
{PRINTER: exec('prt','param_wydr','h',KST),,,,,'Q','C',,,,,,1,
          PAR_WYDR.MLEFT,PAR_WYDR.MTOP,PAR_WYDR.MRIGHT,PAR_WYDR.MBOT,0,1,,'enable'}
{BEGIN:
   VAR_DEL.delete('par','prn1','vp','lmt','rsep','tresc','b_rat','h_rat','__param','__edit');
   tresc:='kartpod';
   PAR_WYDR.TITLE:='Karta podatkowa - zestawienie roczne'@;
   par:=obj_new(11);
   P.cntx_psh();
   par[6]:=par[7]:=par[9]:=0;
   par[11]:=rep_export();
   _upr:=exec('uprawnieniawrap','pkd','Naliczonych składnikach płacowych'@,'PPL_PLL_RSKP','PPL_PLL_PSKP');
   {? +_upr
   || FUN.emsg('Brak wymaganych uprawnień do przeglądania informacji o:%1'@[_upr])
   || __param:=tab_tmp(1,'ROK','INTEGER','Rok');
      __param.ROK:=O.RP;
      __param.add();

      __edit:=__param.mk_edit(PAR_WYDR.TITLE,0,'ppl_pkartpor');
      __param.win_esep(__edit,'Parametry wydruku'@);
      __param.win_efld(__edit,,'ROK',,,4,,,'Raport za rok'@,,'Rok podatkowy'@);
      __param.efld_opt(__edit,'mark=1',,'ROK');
      exec('ok_esc','#window',__param,__edit);
      __param.win_edit(__edit);
      {? par[7]:=__param.edit(
            "  {? __param.ROK<=1900
               || FUN.emsg('Błędna wartość parametru wydruku.'@); 0
               || 1
               ?}
            "
         )
      || par[1]:=obj_new(@.CLASS.PRINT,14);
         {? par[11] || par[1].add("par[2][par[3]][16]",40,'Pracownik'@) ?};
         par[1].add("par[2][par[3]][14]",20,'Nazwa składnika'@);
         {! _ii:=1..12
         |! STR.split(date(date()~1,_ii,1)$8);
            par[1].add($('par[2][par[3]]['+$_ii+']'),12,STR.get_word(),1,,,,,'12,2')
         !};
         {? ~par[11] || par[1].add("par[2][par[3]][13]",12,'RAZEM'@,1,,,,,'12,2') ?};
         par[1].s_frame();
         '25 Składników KP';
         par[2]:=obj_new(25);
         {! _ii:=1..obj_len(par[2])
         |! par[2][_ii]:=obj_new(16);
            par[2][_ii][14]:=($('KART_POD.S'+$_ii))();
            par[2][_ii][15]:=0;
            par[2][_ii][16]:=''
         !};

         prn1:='par[1]';
         lmt:=rsep:=par[3]:=par[4]:=par[6]:=0;
         par[5]:=vp:=b_rat:=1;

         params_set('P',exec('wybierz_parses','pracownik','PPL').P)
      ?}
   ?};
   KP.cntx_psh();
   KP.index('_KARTAPO')
}
{END:
   VAR_DEL.delete('par','prn1','vp','lmt','rsep','tresc','b_rat','h_rat','__param','__edit');
   P.cntx_pop();
   KP.cntx_pop()
}
