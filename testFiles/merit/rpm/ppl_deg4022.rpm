:!UTF-8
{TITLE:PIT-40(22) formularz obowiązujący w roku 2015 i 2016}
{PRINTER: exec('prt','param_wydr','v',KST),,,,,'Q','C',,,,,,1,5,5,5,5,1,1,'A4'}
{BEGIN:
   VAR_DEL.delete('pit','czy_raport','__P_UPR','__ord','x','y','dx','__Pusta');
   pit:=obj_new(80);
   {! _nx:=1..27 |! pit[_nx]:='' !};
   {! _nx:=28..obj_len(pit) |! pit[_nx]:=0 !};
   pit[64]:=pit[73]:='';

   exec('czytaj','#stalesys',date(__Rok,12,0),KST);

   pit[1]:=KST.NIP;
   pit[4]:='';
   pit[5]:='';
   pit[6]:='';
   pit[7]:='N';

   {! _nx:=1..8 |! pit[_nx]:=~(-pit[_nx]) !};

   czy_raport:=0;
   __ord:=obj_new(13);
   {! _nx:=1..obj_len(__ord) |! __ord[_nx]:='' !};
   x:=y:=dx:=0;
   exec('rpm_as_pdf_ini','rpm_pdf');
   __Pusta:=0;
   {? ~FUN.choice('Jeśli wybrano wydruk dwustronny to konieczne jest dodanie pustej strony tak,'
                  '\naby drukowane były 4 strony - deklaracji PIT-40.'@,
                  1,'Bez dodatkowych pustych stron'@,,,,'Dodaj pustą stronę'@)
   || __Pusta:=1
   ?};
   __P_UPR:=exec('dostepne_p','schemat','PPL',P_FILTER.F_ZATR().KOD,'*');
   __P_UPR.prefix()
}
{END:
   VAR_DEL.delete('pit','czy_raport','__P_UPR','__ord','x','y','dx','__Pusta');
   exec('stalesys','#stalesys');
   exec('rpm_as_pdf_end','rpm_pdf')
}
{COMMENT}OLD: deg4022.rpm{COMMENT-}
{COMMENT}OLD: dkw4022g.rpi{COMMENT-}
{COMMENT}OLD: ord_zu2g.rpi{COMMENT-}
{FOR: VAT_DEK}
{INDEX: 'VAT_PITG'}
{PREFIX: PIT_GRUP.ref}
{DO}
{IF: __P_UPR.find_key($VAT_DEK.P)}
{  czy_raport:=0;
   pit[2]:=pit[4]:=pit[5]:=pit[6]:='';
   {! _nx:=9..27 |! pit[_nx]:='' !};
   {! _nx:=28..obj_len(pit) |! pit[_nx]:=0 !};
   pit[64]:=pit[73]:='';
   VAT_POZ.index('NR_NRK');
   VAT_POZ.prefix(VAT_DEK.ref);
   {? VAT_POZ.first
   || {!
      |? {! _ind:=1..4
         |! _kw:=($('VAT_POZ.KW'+$_ind))();
            _poz:=($('VAT_POZ.P'+$_ind))();
            {? _poz>=1 & _poz<=obj_len(pit)
            || pit[($('VAT_POZ.P'+$_ind))()]:=_kw;
               {? VAT_POZ.NR=12 || pit[64]:=82+VAT_POZ.RODZ ?};
               {? VAT_POZ.NR=20 || pit[73]:=82+VAT_POZ.RODZ ?}
            ?};
            {? _ind=1 & VAT_POZ.NR<=8 || czy_raport+=_kw ?}
         !};
         VAT_POZ.next
      !}
   ?};~~
}
{IF: czy_raport>0}
{  pit[2]:=exec('upo_id','xml');
   pit[4]:=VAT_DEK.OKRES;
   pit[5]:=VAT_DEK.US().NU+{? +US.UU || ', '+US.UU || '' ?}+
           {? +US.UK & +US.MU || ', '+(6+US.UK)+' '+US.MU || '' ?};
   pit[5]:=~-pit[5];
   pit[6]:=VAT_DEK.KOR;
   pit[7]:='N';
   {? VAT_DEK.POD=1 || pit[7]:='T' ?};
   {? pit[7]='N'
   || pit[8]:=KST.NAZWA+', '+KST.REG;    'Platnik niebedacy osoba fizyczna'
   || pit[8]:=KST.PODNAZ+', '+KST.PODIME+', '+STR.gsub(KST.PODURDAT$4,'.','-'); 'Platnik bedacy osoba fizyczna'
   ?};
   pit[8]:=~-pit[8];
   {? pit[7]='T'
   || __ord[1]:=KST.NIP;
      __ord[5]:=KST.PODNAZ;
      __ord[6]:=KST.PODIME;
      __ord[7]:=STR.gsub(KST.PODURDAT$4,'.','-')
   || __ord[1]:=KST.NIP;
      __ord[5]:=KST.NAZWA;
      __ord[6]:=KST.SKROT;
      __ord[8]:=KST.REG
   ?};
   pit[9]:='1';
   {? var_pres('REZYDENT',VAT_DEK)>0
   || pit[9]:={? VAT_DEK.REZYDENT='T' || '1' || '2' ?}
   ?};
   pit[10]:={? VAT_DEK.PESEL='' || VAT_DEK.NIP || VAT_DEK.PESEL ?};
   'jesli jest to nierezydent czyli 2 to wypelnij pola 12, 13, 14';
   {? pit[9]='2'
   || pit[11]:=VAT_DEK.ZNIP;
      pit[12]:=VAT_DEK.RZNIP().NAZWA;
      pit[13]:=VAT_DEK.KRAJZNIP().NAZ
   || pit[11]:=pit[12]:=pit[13]:=''
   ?};
   pit[14]:=VAT_DEK.NAZWISKO;
   pit[15]:=VAT_DEK.PIERWSZE;
   pit[16]:=VAT_DEK.DATA_UR$4;
   {? VAT_DEK.KRAJ<>null || pit[17]:=VAT_DEK.KRAJ().NAZ || pit[17]:='' ?};
   pit[18]:=VAT_DEK.WOJEWODZ;
   pit[19]:=VAT_DEK.POWIAT;
   pit[20]:=VAT_DEK.GMINA;
   pit[21]:=VAT_DEK.ULICA;
   pit[22]:=VAT_DEK.DOM;
   pit[23]:=VAT_DEK.LOKAL;
   pit[24]:=VAT_DEK.MIASTO;
   pit[25]:=VAT_DEK.KOD;
   pit[26]:=VAT_DEK.POCZTA;
   {! _n:=11..26 |! pit[_n]:=~(-pit[_n]) !};
   pit[27]:=VAT_DEK.PITR;
   pit[28]:=#VAT_DEK.PKU;
   pit[78]:=VAT_DEK.IMIE;
   pit[79]:=VAT_DEK.NAZ;
   {? VAT_DEK.KOR='T'
   || __ord[2]:={? VAT_DEK.PESEL='' || VAT_DEK.NIP || VAT_DEK.PESEL ?};
      __ord[9]:=VAT_DEK.NAZWISKO;
      __ord[10]:=VAT_DEK.PIERWSZE;
      __ord[11]:=STR.gsub(VAT_DEK.DATA_UR$4,'.','-');
      __ord[12]:='';
      __ord[13]:=exec('opis_korekty','edeklar');
      {! _n:=1..obj_len(__ord) |! __ord[_n]:=~(-__ord[_n]) !}
   ?};
   ~~
}
