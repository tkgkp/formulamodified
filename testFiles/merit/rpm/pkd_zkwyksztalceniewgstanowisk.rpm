:!UTF-8
{TITLE:Wykształcenie wg stanowisk}
{PRINTER: exec('prt','param_wydr','h',KST),,,,,'M','C',,,,,,1,
          PAR_WYDR.MLEFT,PAR_WYDR.MTOP,PAR_WYDR.MRIGHT,PAR_WYDR.MBOT,0,1,,'enable'}
{BEGIN:
   PAR_WYDR.TITLE:='Wykształcenie wg stanowisk'@;

   VAR_DEL.delete('par','prn1','vp','lmt','rsep','tab');
   par:=obj_new(9);

   'szerokości kolumn';
   par[8]:=obj_new(8);
   par[8][1] := 5; 'liczba porządkująca';
   par[8][2] :=30; 'nazwa stanowiska';
   par[8][3] := 6; 'zatrudnieni na stanowisku';
   par[8][4] :=10; 'wystąpienia wykształcenia na stanowisku';
   par[8][5] := 1; 'bloki raportu';
   par[8][6] := 0; 'maksymalna szerokość';
   par[8][7] := 0; 'zliczanie pomocnicze';

   _P:=exec('wybierz_parses','pracownik','PKD').P;

   tab:=sql('
      select distinct
         ROW_NUMBER() OVER (ORDER BY 2) as LICZBA,
         case
            when OSOBA.WYK is null then \'??\'
            when WYK.KOD=\'\' then \'??\'
            else WYK.KOD end WK
      from
         P join OSOBA left join WYK join STN
      where
         P.REFERENCE in (select :_a.SQL from :_a) and P.ZA=\'T\'',
      _P
   );

   par[3]:=sql('
      select STN.ST ST,
      case
         when OSOBA.WYK is null then \'??\'
         when WYK.KOD=\'\' then \'??\'
         else WYK.KOD end WK,
         1 LICZBA
      from P join OSOBA left join WYK join STN
      where P.REFERENCE in (select :_a.SQL from :_a) and P.ZA=\'T\'',
      _P
   );

   exec('object','#pivot');
   (par[2]:=obj_new(@.CLASS.PIVOT,par[3],'WK','sum','LICZBA')).
   grpfld('ST').count(1).dosum(1).make();

   par[9]:=sql('select * from WYK order by KOD');

   lmt:=rsep:=0;
   vp:=1;

   prn1:={? ~rep_export() || 'par[1][1]' || 'par[1]' ?};
   par[4]:=0;
   par[5]:=1
}
{END:
   VAR_DEL.delete('par','prn1','vp','lmt','rsep','tab')
}
{FONT: 'T8G'}
{SPACE: 'C'}
{EXIT: ~par[2].valid()}{
   _cc:=par[2].fld_num();
   _cc-=(_cc%32);
   _bpc:=_lpc:=0;

   _wd:=par[8];
   'maksymalna szerokość';
   _wd[6]:=charleft;
   'wyliczenie liczby kolumn w pierwszym bloku wydruku';
   _fpc:=floor((_wd[6]-_wd[1]-_wd[2]-_wd[3]-10)/(_wd[4]+3));
   'czy wydruk powinien być podzielony na bloki?';
   '(liczba kolumn danych większa od wyliczonej)';
   {? _fpc<(_cc-3)
      || 'kolumny danych na kolejnych stronach';
         _bpc:=_fpc;'floor((_wd[6]-_wd[1]-4)/(_wd[4]+3))';
         _lpc:=(_cc-_fpc-3)%*_bpc;
         _wd[5]+=(_cc-_fpc-_lpc-3)%_bpc;
         _wd[5]+=(_lpc<>0)
      || _fpc:=_cc-3
   ?};

   par[1]:={? ~rep_export() || obj_new(_wd[5]) ||  obj_new(@.CLASS.PRINT,1+tab.size()) ?};
   {? ~rep_export() || par[6]:=obj_new(_wd[5]) ?};

   _off:=0;
   {? ~rep_export()
   || {! _n:=1.._wd[5]
      |! _bcc:={? _n=_wd[5] & _n>1 || {? _lpc || _lpc || _bpc ?}
               |? _n=1 || _fpc
               || _bpc
               ?};
         par[1][_n]:=obj_new(@.CLASS.PRINT,_bcc+(_n=1)+2);
         par[1][_n].add("$#par[2].OUT.ref",_wd[1],'Lp.'@,1,,,,,',,\'9.\'');
         par[1][_n].add("par[2].OUT.ST",_wd[2],'Stanowisko'@);
         {? _n=1 || par[1][_n].add("par[2].OUT.PQ_COUNT",_wd[3],'Liczba'@,1) ?};
         {! _m:=_off+3.._off+_bcc+2 |! par[1][_n].add($('par[2].fld_val('+$_m+')'),_wd[4],par[2].fld_name(_m),1)!};
         par[6][_n]:=obj_new(@.CLASS.PRINT,_bcc+(_n=1)+2);
         par[6][_n].add("'Razem'@",_wd[1]+_wd[2]+3);
         {? _n=1 || par[6][_n].add("par[2].SUM.PQ_COUNT",_wd[3],'Liczba'@,1) ?};
         {! _m:=_off+2.._off+_bcc+1 |! par[6][_n].add($('par[2].sfld_val('+$_m+')'),_wd[4],par[2].fld_name(_m+1),1) !};
         par[1][_n].s_frame();
         par[6][_n].s_frame();
         _off+=_bcc
      !}
   || par[1].add("par[2].OUT.ST",40,'Stanowisko');
      {? tab.first()
      || {!
         |? _m:=tab.LICZBA+2;
            par[1].add($('par[2].fld_val('+$_m+')'),20,tab.WK,1,,,,,,',0,\'1,\'');
            tab.next()
         !}
      ?};
      par[1].s_frame()
   ?};

   {? par[2].OUT.first || par[4]:=par[2].OUT.ref ?};
   ~~
}
