   Z A W A R T O Ś Ć   W Y D R U K U

{COMMENT-}
{FONT: 'T8G'}
{SPACE: 'C'}
{IF: ~rep_export()}
{WHILE: (par[8][7]+=1)<=par[8][5]}{DO}{
      prn1:='par[1]['+$par[8][7]+']';
      lmt:=int({? par[8][5]=1 | (par[8][7]>1 & par[8][7]<par[8][5]) ||
                  (charleft-($prn1)().width())*0.5
               |? par[8][7]=1 ||
                  charleft-($prn1)().width()
               ?});
      ~~
   }
   {IF: par[2].OUT.seek(par[4])}
      {SUBSTITUTE: 'LINIA0'}
   {FI}
   {WHILE: (par[8][8]:=par[2].OUT.next)}{DO}
      {SUBSTITUTE: 'LINIA0'}
   {OD}
   {IF: lineleft=2}{
         {? par[8][8] & par[8][7]=par[8][5] ||
            par[4]:=par[2].OUT.ref;
            par[8][7]:=0
         ?};
         ~~
      }
      {PAGE}
   {FI}
   {IF: ~par[8][8]}
      { prn1:='par[6]['+$par[8][7]+']'; ~~ }
      {IF: lineleft}
         {REP: '{<{lmt+1}}'+par[1][par[8][7]].jbar(par[6][par[8][7]])}
      {FI}
      {SUBSTITUTE: 'LINIA0'}
      {IF: lineleft>=1}{PAGE}{FI}
   {FI}
{OD}
   {IF: par[9].size() & ask('Czy drukować wykaz kodów wykształceń?'@,PAR_WYDR.TITLE)}
      {HEADER}
      {SUBSTITUTE: 'HEAD'}
      {FONT: 'T8G'}
      {SPACE: 'C'}
      {IF: #par[2].OUT.ref=1}
         {LINE}
      {FI}
      {HEADER-}
      {FOOTER: 0}
      {FOOTER-}
      {IF: lineleft>=1}
         {PAGE}
      {FI}
      {LINE}
      {FOR: par[9]}{DO}
         { _kod:=par[9].KOD; {? +_kod || _kod || '??' ?}} - {par[9].WK}
      {OD}
    {FI}
{ELSE}
{IF: par[2].OUT.seek(par[4])}
      {SUBSTITUTE: 'LINIA0'}
   {FI}
   {WHILE: (par[8][8]:=par[2].OUT.next)}{DO}
      {SUBSTITUTE: 'LINIA0'}
   {OD}
   {IF: lineleft=2}{
         {? par[8][8] & par[8][7]=par[8][5] ||
            par[4]:=par[2].OUT.ref;
            par[8][7]:=0
         ?};
         ~~
      }
      {PAGE}
   {FI}
{FI}