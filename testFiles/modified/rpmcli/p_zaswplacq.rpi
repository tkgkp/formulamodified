{MACRO: 'text_out'}
{JUSTIFY}
{ STR.split(gsub(Text,'..','.')); ~~ }
{WHILE: +(Text:=STR.line(charleft()-indent-1))}{DO}
{REP: {? +STR.spl_str
         || '{<{indent}>{charleft()}'
         || '{CENTER}{<{indent}'
      ?}+'Text}'
}{OD}
{MACRO-}
{MACRO: 'ls_item'}
{JUSTIFY}
{ STR.split(gsub(Text,'..','.')); ~~ }
{WHILE: +(Text:=STR.line(charleft()-indent-4))}{DO}
{REP:
   _cl:=charleft();
   {? 1+Text=%255 || Text:=1-Text; '{<{indent} \'-\'}'
   || ''
   ?}+
   {? +STR.spl_str || '{<{indent+3}>{'+$_cl+'}' || '{CENTER}{<{indent+3}' ?}+' Text }'
}{OD}
{MACRO-}
{MACRO: 'drukuj'}
{ENTIRE}
{IF: PAR_WYDR.HEAD}
{FONT: 'HEAD'}
{SPACE: 'B'}
{LINE: 2}
{SUBSTITUTE: 'HEAD'}
{FONT: 'HEAD'}
{SPACE: 'B'}
{__CALL.F_ULICA}
{__CALL.F_POCZTA}
{ELSE}
{FONT: 'HEAD'}
{SPACE: 'B'}
{LINE: 6}
{FI}
{FONT: 'W12'}
{SPACE: 'A'}
{>{charleft()} {? __CALL.PLEC='K'
               || 'Pani %1 %2' [__CALL.NAZWISKO,__CALL.IMIE]
               || 'Pan %1 %2' [__CALL.NAZWISKO,__CALL.IMIE]
               ?}+{? +__CALL.DRUGIEIM || ' '+__CALL.DRUGIEIM || '' ?}}
{ linie:=0; STR.split('Stanowisko: '+__CALL.STANOWIS); ~~ }
{WHILE: +(Text:=STR.line(charleft()/3))}{DO}
{>{charleft()} Text}{ linie+=1; ~~ }
{OD}
{>{charleft()} 'Nr teczki: '+__CALL.TECZKA}
{IF: (linie-=1)<=0}{LINE}{FI}
{FONT: 'TITLE'}
{<1>{charleft()}'ZAWIADOMIENIE'}
{IF: (linie-=1)<=0}{LINE}{FI}
{IF: (linie-=1)<=0}{LINE}{FI}
{  &linie; ~~}
{FONT: 'W12'}
{SPACE: 'A'}
{SUBSTITUTE:
   indent:=1;
   'nuco-tresc dyrektora zamienione na pracodawcy';
   Text:=
   'Decyzją Pracodawcy z dn. %1, od %2' [__CALL.DATADEC,__CALL.OD_DNIA]+' '+
   {? __CALL.PLEC='K'
   || 'będzie wykonywała Pani pracę na stanowisku %1.' [__CALL.STANNEW]
   || 'będzie wykonywał Pan  pracę na stanowisku %1.' [__CALL.STANNEW]
   ?}+' '+
   {? __CALL.PLEC='K' || 'Pani'  || 'Pana'  ?}+
   {? __CALL.Z1='T' | __CALL.Z2='T' | __CALL.Z3='T'
   || ''
   || ' składniki wynagrodzenia pozostają bez zmian.'
   ?};
   'text_out'
}
{IF: __CALL.Z1='T'}
   {SUBSTITUTE:
      indent:=3;
      Text:=%255+
         {? __CALL.CHARPRAC='F'
         || 'stawka godzinowa ulega zmianie na kwotę %1 %2' [__CALL.S1,__CALL.WALUTA]
         || 'płaca zasadnicza ulega zmianie na kwotę %1 %2' [__CALL.S1,__CALL.WALUTA]
         ?}; 'ls_item'
   }
{FI}
{IF: __CALL.Z2='T'}
   {SUBSTITUTE:
      indent:=3;
      Text:=%255+
         {? __CALL.CHARPRAC='F'
         || 'dodatek brygadzistowski'
         || 'dodatek funkcyjny'
         ?}+' '+
         {? __CALL.S2T='P'
         || 'wyrażony w %1 ulega zmianie na %2' [__CALL.WALUTA2,__CALL.S2+'% '+__CALL.S2P]
         || ' ulega zmianie na kwotę %1 %2' [__CALL.S2,__CALL.WALUTA2]
         ?};
      'ls_item'
   }
{FI}
{IF: __CALL.Z3='T'}
   {SUBSTITUTE:
      indent:=3;
      Text:=%255+
         {? __CALL.S3T='P'
         || 'dodatek wyrażony w %1 ulega zmianie na %2' [__CALL.WALUTA,__CALL.S3+'% '+__CALL.S3P]
         || 'dodatek ulega zmianie na kwotę %1 %2' [__CALL.S3,__CALL.WALUTA3]
         ?};
      'ls_item'
   }
{FI}
{IF: __CALL.Z4='T'}
   {SUBSTITUTE:
      indent:=3;
      Text:=%255+
         {? __CALL.CHARPRAC='F'
         || 'stawka godzinowa płacy związanej z oddelegowaniem ulega zmianie na kwotę %1 %2' [__CALL.S4,__CALL.WALUTA4]
         || 'płaca związana z oddelegowaniem ulega zmianie na kwotę %1 %2' [__CALL.S4,__CALL.WALUTA4]
         ?}; 'ls_item'
   }
{FI}
{IF: __CALL.Z1='T' | __CALL.Z2='T' | __CALL.Z3='T' | __CALL.Z4='T' }
   {SUBSTITUTE:
      indent:=1;
      Text:='Pozostałe składniki wynagrodzenia pozostają bez zmian.';
      'text_out'
   }
{FI}
