:: uprawnienia do przeglądania rozrachunków
_par:=exec('get_w','#params',9991,type_of(''),OPERATOR.USER);
{? _par='N' | _par=' '
|| FUN.info('Brak uprawnień');
   return(~~)
?};
exec('init','fks');
__FKSROZ:=1;

:: Ustalenie treści linku
_params:=params_get();
{? type_of(_params)>0 & var_pres('LINK',_params)
|| _link:=_params.LINK
|| _link:=''
?};

{? _link<>''
|| exec('main','!fks_roz_zark',_link)
|| exec('main','!fks_roz_zark')
?};

__FKSROZ:=0;
~~
